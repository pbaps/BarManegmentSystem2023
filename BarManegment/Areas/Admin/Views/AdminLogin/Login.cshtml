@model BarManegment.ViewModels.LoginViewModel
@{
    ViewBag.Title = "تسجيل دخول الموظفين";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - نقابة المحامين</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700;900&display=swap" rel="stylesheet">

    <style>
        :root {
            --overlay-color: rgba(15, 23, 42, 0.92); /* كحلي غامق جداً للخصوصية */
            --gold-accent: #c5a059;
            --text-white: #ffffff;
            --input-bg: rgba(255, 255, 255, 0.05);
        }

        body {
            font-family: 'Cairo', sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #0f172a;
            /* خلفية المكتب الإداري */
            background-image: url('https://images.unsplash.com/photo-1497366754035-f200968a6e72?q=80&w=1000&auto=format&fit=crop');
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
        }

        /* طبقة التعتيم */
        .page-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: var(--overlay-color);
            z-index: 1;
        }

        /* بطاقة الدخول */
        .login-card {
            position: relative;
            z-index: 10;
            /* لون خلفية صلب لتجنب تحذيرات الشفافية والفلتر */
            background: #1e293b;
            border: 1px solid rgba(255,255,255,0.1);
            width: 100%;
            max-width: 420px;
            padding: 2.5rem;
            border-radius: 15px;
            border-top: 5px solid var(--gold-accent);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            text-align: center;
        }

        .logo-container {
            width: 90px;
            height: 90px;
            margin: -70px auto 20px;
            background: #1e293b;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 3px solid var(--gold-accent);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3);
        }

        .logo-icon {
            font-size: 2.5rem;
            color: var(--gold-accent);
        }

        .form-title {
            color: white;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .form-subtitle {
            color: #94a3b8;
            font-size: 0.9rem;
            margin-bottom: 2rem;
        }

        /* تنسيق الحقول */
        .form-control {
            background-color: var(--input-bg);
            border: 1px solid #334155;
            color: white;
            padding: 12px;
        }

            .form-control:focus {
                background-color: rgba(255, 255, 255, 0.1);
                border-color: var(--gold-accent);
                color: white;
                box-shadow: 0 0 0 4px rgba(197, 160, 89, 0.15);
            }

        /* تنسيق التسميات (Labels) */
        .form-floating > label {
            color: #94a3b8;
        }

        .form-floating > .form-control:focus ~ label {
            color: var(--gold-accent);
            opacity: 1;
        }

        /* زر الدخول */
        .btn-login {
            background: var(--gold-accent);
            color: #0f172a;
            font-weight: 800;
            padding: 12px;
            border: none;
            width: 100%;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .btn-login:hover {
                background: white;
                color: #0f172a;
                transform: translateY(-2px);
            }

            .btn-login i {
                margin-left: 8px;
            }

        /* رابط العودة */
        .back-link {
            display: inline-flex;
            align-items: center;
            color: #64748b;
            text-decoration: none;
            font-size: 0.9rem;
            margin-top: 1.5rem;
            transition: 0.3s;
        }

            .back-link:hover {
                color: white;
            }

        /* شريط المطور السفلي */
        .dev-credit {
            position: absolute;
            bottom: 20px;
            left: 0;
            right: 0;
            text-align: center;
            z-index: 10;
            color: rgba(255,255,255,0.3);
            font-size: 0.8rem;
        }
    </style>
</head>
<body>

    <div class="page-overlay"></div>

    <div class="login-card">

        <div class="logo-container">
            <i class="bi bi-shield-lock-fill logo-icon"></i>
        </div>

        <h3 class="form-title">بوابة الموظفين والإدارة</h3>
        <p class="form-subtitle">يرجى تسجيل الدخول للوصول إلى لوحة التحكم</p>

        @using (Html.BeginForm("Login", "AdminLogin", new { ReturnUrl = ViewBag.ReturnUrl, area = "Admin" }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()

            if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger bg-danger bg-opacity-10 border border-danger text-danger text-center p-2 mb-4 rounded-3 small">
                    <i class="bi bi-exclamation-triangle-fill me-1"></i>
                    بيانات الدخول غير صحيحة
                </div>
            }

            <div class="form-floating mb-3">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", id = "floatingUser", placeholder = "اسم المستخدم" })
                @Html.LabelFor(m => m.Username, "اسم المستخدم", new { @for = "floatingUser" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger small mt-1 d-block text-end" })
            </div>

            <div class="form-floating mb-4">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "floatingPass", placeholder = "كلمة المرور" })
                @Html.LabelFor(m => m.Password, "كلمة المرور", new { @for = "floatingPass" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small mt-1 d-block text-end" })
            </div>

            <button type="submit" class="btn btn-login rounded-3">
                تسجيل الدخول الآمن <i class="bi bi-box-arrow-in-left"></i>
            </button>
        }

        <a href="@Url.Action("Index", "Home", new { area = "" })" class="back-link">
            <i class="bi bi-arrow-right me-2"></i> العودة للبوابة الرئيسية
        </a>
    </div>

    <div class="dev-credit">
        تصميم وبرمجة المهندس محمد العمري | 00972598910120
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>