@{
    ViewBag.Title = "تأكيد تسجيل الخروج";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-box-arrow-right me-2"></i> تسجيل الخروج
                    </h4>
                </div>
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-circle text-warning" style="font-size: 4rem;"></i>
                    </div>
                    <h3 class="mb-3">هل أنت متأكد؟</h3>
                    <p class="text-muted mb-4 fs-5">
                        أنت على وشك تسجيل الخروج من النظام وإنهاء جلستك الحالية.
                    </p>

                    <div class="d-flex justify-content-center gap-3">
                        <!-- زر الإلغاء (العودة للرئيسية) -->
                        <a href="@Url.Action("Index", "Home", new { area = "Admin" })" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-x-lg me-2"></i> إلغاء
                        </a>

                        <!-- زر تأكيد الخروج (Form POST) -->
                        @using (Html.BeginForm("LogOff", "AdminLogin", new { area = "Admin" }, FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-lg px-4">
                                <i class="bi bi-check-lg me-2"></i> خروج
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>