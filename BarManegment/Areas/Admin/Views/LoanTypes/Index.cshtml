@model IEnumerable<BarManegment.Models.LoanType>

@{
    ViewBag.Title = "إدارة أنواع القروض";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2><i class="bi bi-cash-coin me-2"></i> @ViewBag.Title</h2>
<p>
    (مثل: قرض حسن، قرض طوارئ، قرض محامي متقاعد...)
</p>
<p>
    @Html.ActionLink("إضافة نوع قرض جديد", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.BankAccount)</th>
            <th>@Html.DisplayNameFor(model => model.MaxAmount)</th>
            <th>@Html.DisplayNameFor(model => model.MaxInstallments)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @* (عرض اسم البنك والعملة) *@
                    @item.BankAccount.BankName (@item.BankAccount.Currency.Symbol)
                </td>
                <td>@item.MaxAmount.ToString("N2")</td>
                <td>@Html.DisplayFor(modelItem => item.MaxInstallments)</td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-success" })
                </td>
            </tr>
        }
    </tbody>
</table>
