@model BarManegment.Areas.Admin.ViewModels.TraineeAttendanceReportViewModel
@{
    ViewBag.Title = "سجل الدورات التدريبية: " + Model.TraineeName;
    // استخدام لايوت الطباعة لضمان التنسيق عند الطباعة
    Layout = "~/Areas/Admin/Views/Shared/_PrintDocumentsLayout.cshtml";
}

<style>
    .report-header-box {
        border: 2px solid #003366;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
        background-color: #f8f9fa;
    }

    .report-title {
        text-align: center;
        color: #003366;
        font-family: 'Amiri', serif;
        margin-bottom: 20px;
        border-bottom: 1px solid #ccc;
        padding-bottom: 10px;
    }

    .summary-box {
        background-color: #e9ecef;
        padding: 10px;
        border-radius: 5px;
        text-align: center;
        font-weight: bold;
        margin-top: 20px;
        border: 1px solid #ced4da;
    }

    .table-report {
        width: 100%;
        border-collapse: collapse;
        font-size: 12px;
    }
    .table-report th {
        background-color: #003366;
        color: white;
        padding: 8px;
        border: 1px solid #003366;
    }
    .table-report td {
        padding: 8px;
        border: 1px solid #dee2e6;
        text-align: center;
    }
    .table-report tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    /* إخفاء أزرار التحكم عند الطباعة */
    @@media print {
        .no-print { display: none !important; }
        body { background-color: white; }
        .page { box-shadow: none; margin: 0; width: 100%; }
    }
</style>

<!-- شريط التحكم -->
 

<div class="page">
    <div class="report-title">
        <h2>نقابة المحامين الفلسطينيين</h2>
        <h4>كشف حضور الدورات والمحاضرات التدريبية</h4>
    </div>

    <div class="report-header-box">
        <div class="row">
            <div class="col-6 mb-2"><strong>اسم المتدرب:</strong> @Model.TraineeName</div>
            <div class="col-6 mb-2"><strong>الرقم النقابي:</strong> <span style="font-family: monospace; font-size: 1.1em;">@Model.TraineeSerialNo</span></div>
            <div class="col-6"><strong>رقم الهوية:</strong> @Model.NationalIdNumber</div>
            <div class="col-6"><strong>تاريخ التقرير:</strong> @DateTime.Now.ToString("yyyy/MM/dd")</div>
        </div>
    </div>

    <h5 style="color: #555; margin-bottom: 10px; font-weight: bold;">تفاصيل الجلسات:</h5>

    @if (Model.AttendedSessions.Any())
    {
        <table class="table-report">
            <thead>
                <tr>
                    <th>م</th>
                    <th style="text-align: right; padding-right: 15px;">عنوان الجلسة / المحاضرة</th>
                    <th>الدورة التدريبية</th>
                    <th>التاريخ</th>
                    <th>المحاضر</th>
                    <th>الساعات</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1; }
                @foreach (var session in Model.AttendedSessions)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td style="text-align: right; padding-right: 15px; font-weight: bold;">@session.SessionTitle</td>
                        <td>@session.CourseName</td>
                        <td>@session.SessionDate.ToString("yyyy/MM/dd")</td>
                        <td>@session.InstructorName</td>
                        <td>@session.CreditHours</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="summary-box">
            <div class="row">
                <div class="col-6">إجمالي الجلسات: @Model.TotalSessions</div>
                <div class="col-6">مجموع الساعات المعتمدة: @Model.TotalCreditHours ساعة</div>
            </div>
        </div>
    }
    else
    {
        <div style="text-align: center; padding: 40px; color: #777; border: 1px dashed #ccc; margin-top: 20px;">
            لا يوجد سجل حضور دورات لهذا المتدرب حتى الآن.
        </div>
    }

    <div style="margin-top: 50px; display: flex; justify-content: space-between; text-align: center;">
        <div>
            <strong>منسق التدريب</strong>
            <br><br><br>
            __________________
        </div>
        <div>
            <strong>ختم النقابة</strong>
            <br><br><br>

        </div>
    </div>
</div>
