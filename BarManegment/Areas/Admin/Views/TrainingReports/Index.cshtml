@model IEnumerable<BarManegment.Models.GraduateApplication>
@{
    ViewBag.Title = "تقارير حضور المتدربين";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="text-primary fw-bold"><i class="bi bi-bar-chart-line-fill me-2"></i> @ViewBag.Title</h4>
    </div>

    <!-- شريط البحث -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body bg-light p-4">
            @using (Html.BeginForm("Index", "TrainingReports", FormMethod.Get, new { @class = "row g-2 align-items-center" }))
            {
                <div class="col-md-10">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-search"></i></span>
                        <input class="form-control border-start-0 ps-0" type="search" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="ابحث باسم المتدرب، الرقم الوطني، أو الرقم النقابي...">
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary btn-lg w-100 shadow-sm" type="submit">بحث</button>
                </div>
            }
        </div>
    </div>

    <!-- جدول النتائج -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">الرقم النقابي</th>
                            <th>اسم المتدرب</th>
                            <th>رقم الهوية</th>
                            <th>الحالة</th>
                            <th class="text-end pe-4">التقرير</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 font-monospace fw-bold text-primary">@item.TraineeSerialNo</td>
                                <td class="fw-bold">@item.ArabicName</td>
                                <td>@item.NationalIdNumber</td>
                                <td><span class="badge bg-info text-dark">@item.ApplicationStatus.Name</span></td>
                                <td class="text-end pe-4">
                                    <a href="@Url.Action("TraineeReport", new { id = item.Id })" class="btn btn-sm btn-outline-dark shadow-sm">
                                        <i class="bi bi-file-earmark-bar-graph me-1"></i> عرض سجل الحضور
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-search fs-1 d-block mb-2 opacity-25"></i>
                                    الرجاء البحث عن متدرب لعرض تقريره.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
