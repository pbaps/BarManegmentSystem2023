@model BarManegment.Models.Branch

@{
    ViewBag.Title = "    عديل الفرع";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-pin-map-fill me-2"></i> إضافة موقع جغرافي جديد</h5>
                </div>
                <div class="card-body p-4">

                    <div class="alert alert-info small">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <strong>مساعدة:</strong> للحصول على الإحداثيات، افتح خرائط جوجل، اضغط بزر الفأرة الأيمن على موقع المبنى، وانسخ الأرقام الظاهرة (الأول هو خط العرض، الثاني هو خط الطول).
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Name, new { @class = "form-label fw-bold" })
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "مثال: المقر الرئيسي - غزة" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger small" })
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Latitude, new { @class = "form-label fw-bold" })
                                @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @class = "form-control", placeholder = "مثال: 31.512345" } })
                                @Html.ValidationMessageFor(model => model.Latitude, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Longitude, new { @class = "form-label fw-bold" })
                                @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @class = "form-control", placeholder = "مثال: 34.456789" } })
                                @Html.ValidationMessageFor(model => model.Longitude, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.AllowedRadius, new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.AllowedRadius, new { htmlAttributes = new { @class = "form-control" } })
                                    <span class="input-group-text">متر</span>
                                </div>
                                <div class="form-text">نطاق الدائرة المسموح للموظف بالتواجد داخلها لتسجيل الحضور.</div>
                                @Html.ValidationMessageFor(model => model.AllowedRadius, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <div class="form-check form-switch mt-4">
                                    @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-check-input", @checked = "checked" } })
                                    <label class="form-check-label fw-bold me-2" for="IsActive">تفعيل هذا الفرع</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between border-top pt-3">
                            <a href="@Url.Action("Index")" class="btn btn-secondary px-4">إلغاء</a>
                            <button type="submit" class="btn btn-primary px-5 fw-bold"><i class="bi bi-save me-2"></i> حفظ الفرع</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
