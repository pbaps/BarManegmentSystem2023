@model IEnumerable<BarManegment.Models.WorkShift>

@{
    ViewBag.Title = "إدارة أوقات الدوام";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-primary"><i class="bi bi-clock-fill me-2"></i> ورديات الدوام</h4>
        <a href="@Url.Action("Create")" class="btn btn-primary fw-bold">
            <i class="bi bi-plus-lg me-1"></i> وردية جديدة
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>الاسم</th>
                            <th>من الساعة</th>
                            <th>إلى الساعة</th>
                            <th>سماح التأخير</th>
                            <th>أيام العطلة</th>
                            <th>النوع</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold text-start ps-3">@item.Name</td>
                                <td dir="ltr" class="font-monospace text-success">@item.StartTime.ToString(@"hh\:mm")</td>
                                <td dir="ltr" class="font-monospace text-danger">@item.EndTime.ToString(@"hh\:mm")</td>
                                <td>@item.GracePeriodMinutes دقيقة</td>
                                <td class="small text-muted" style="max-width: 200px;">
                                    @if (item.IsFridayOff)
                                    {<span class="badge bg-secondary">الجمعة</span>}
                                    @if (item.IsSaturdayOff)
                                    {<span class="badge bg-secondary">السبت</span>}
                                    @if (item.IsSundayOff)
                                    {<span class="badge bg-secondary">الأحد</span>}
                                    @if (item.IsMondayOff)
                                    {<span class="badge bg-secondary">الاثنين</span>}
                                    @if (item.IsTuesdayOff)
                                    {<span class="badge bg-secondary">الثلاثاء</span>}
                                    @if (item.IsWednesdayOff)
                                    {<span class="badge bg-secondary">الأربعاء</span>}
                                    @if (item.IsThursdayOff)
                                    {<span class="badge bg-secondary">الخميس</span>}
                                </td>
                                <td>
                                    @if (item.IsDefault)
                                    {
                                        <span class="badge bg-primary">الافتراضي</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark border">فرعي</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                                        <form action="@Url.Action("Delete", new { id = item.Id })" method="post" class="d-inline" onsubmit="return confirm('هل أنت متأكد من الحذف؟');">
                                            <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
