@{
    ViewBag.Title = "إدارة الجداول المساعدة والنظام";
    var lookupTypes = ViewBag.LookupTypes as Dictionary<string, string>;
}

<div class="container-fluid pt-4 px-4">

    @* --- رسالة ترحيبية --- *@
    <div class="alert alert-primary shadow-sm mb-4 border-0 border-start border-4 border-primary">
        <div class="d-flex align-items-center">
            <i class="bi bi-info-circle-fill fs-4 me-3"></i>
            <div>
                <h5 class="alert-heading fw-bold mb-1">مركز إدارة الثوابت</h5>
                <p class="mb-0 small">هنا يمكنك إدارة جميع القوائم المنسدلة والخيارات الثابتة في النظام (مثل أنواع الرسوم، الحالات، البنوك، والمساعدات).</p>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 border-bottom">
            <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-grid-fill me-2"></i> الجداول المتاحة</h5>
        </div>
        <div class="card-body bg-light">

            @if (lookupTypes != null && lookupTypes.Any())
            {
                <div class="row g-3">
                    @foreach (var kvp in lookupTypes)
                    {
                        // تحديد أيقونة ولون حسب نوع الجدول (جمالي)
                        string icon = "bi-table";
                        string colorClass = "text-primary";
                        string borderClass = "border-primary";

                        if (kvp.Key.Contains("User")) { icon = "bi-people-fill"; colorClass = "text-success"; borderClass = "border-success"; }
                        else if (kvp.Key.Contains("Financial") || kvp.Key.Contains("Payment") || kvp.Key.Contains("Currency")) { icon = "bi-cash-stack"; colorClass = "text-warning"; borderClass = "border-warning"; }
                        else if (kvp.Key.Contains("Exam") || kvp.Key.Contains("Question")) { icon = "bi-journal-check"; colorClass = "text-info"; borderClass = "border-info"; }
                        else if (kvp.Key.Contains("Wallet") || kvp.Key.Contains("Bank")) { icon = "bi-bank2"; colorClass = "text-danger"; borderClass = "border-danger"; }

                        <div class="col-md-4 col-sm-6 col-xl-3">
                            <a href="@Url.Action("List", "LookupManagement", new { type = kvp.Key })" class="text-decoration-none">
                                <div class="card h-100 hover-shadow border-0 shadow-sm">
                                    <div class="card-body d-flex align-items-center p-3">
                                        <div class="flex-shrink-0 @colorClass bg-white rounded-circle shadow-sm d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="bi @icon fs-4"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1 fw-bold text-dark">@kvp.Value</h6>
                                            <small class="text-muted d-block" style="font-size: 0.75rem;">Code: @kvp.Key</small>
                                        </div>
                                        <div class="ms-2">
                                            <i class="bi bi-chevron-left text-muted opacity-50"></i>
                                        </div>
                                    </div>
                                    <div class="card-footer py-1 bg-white border-top-0">
                                        <div class="progress" style="height: 3px;">
                                            <div class="progress-bar @(borderClass.Replace("border-", "bg-"))" role="progressbar" style="width: 40%"></div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <img src="https://cdn-icons-png.flaticon.com/512/7486/7486744.png" width="100" class="mb-3 opacity-50" />
                    <h5 class="text-muted">لا توجد جداول معرفة حالياً.</h5>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .hover-shadow {
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
</style>