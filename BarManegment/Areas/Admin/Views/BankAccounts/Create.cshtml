@model BarManegment.Areas.Admin.ViewModels.BankAccountViewModel
@{ ViewBag.Title = "إضافة حساب بنكي جديد"; }

<div class="container-fluid pt-4 px-4">
    <div class="card">
        <div class="card-header"><h4>@ViewBag.Title</h4></div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-floating mb-3">
                    @Html.EditorFor(model => model.BankName, new { htmlAttributes = new { @class = "form-control", placeholder = " " } })
                    @Html.LabelFor(model => model.BankName)
                </div>
                <div class="form-floating mb-3">
                    @Html.EditorFor(model => model.AccountName, new { htmlAttributes = new { @class = "form-control", placeholder = " " } })
                    @Html.LabelFor(model => model.AccountName)
                </div>
                <div class="form-floating mb-3">
                    @Html.EditorFor(model => model.AccountNumber, new { htmlAttributes = new { @class = "form-control", placeholder = " " } })
                    @Html.LabelFor(model => model.AccountNumber)
                </div>
                <div class="form-floating mb-3">
                    @Html.EditorFor(model => model.Iban, new { htmlAttributes = new { @class = "form-control", placeholder = " " } })
                    @Html.LabelFor(model => model.Iban)
                </div>
                <div class="form-floating mb-3">
                    @Html.DropDownListFor(model => model.CurrencyId, Model.Currencies, "--- اختر العملة ---", new { @class = "form-select" })
                    @Html.LabelFor(model => model.CurrencyId)
                </div>
                <div class="form-check mb-3">
                    @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-check-input" })
                    @Html.LabelFor(model => model.IsActive, new { @class = "form-check-label" })
                </div>
            </div>
            <div class="card-footer text-end">
                <input type="submit" value="إنشاء" class="btn btn-primary" />
                @Html.ActionLink("العودة", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>
