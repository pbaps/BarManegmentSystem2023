@model BarManegment.Models.JournalEntry

@{
    Layout = null; // بدون Layout لتجنب ظهور القوائم الجانبية
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>طباعة قيد يومية - @Model.EntryNumber</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f8f9fa;
            color: #000;
        }

        .print-container {
            max-width: 210mm; /* عرض ورقة A4 */
            margin: 20px auto;
            background: #fff;
            padding: 40px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border: 1px solid #ddd;
        }

        .header-box {
            border-bottom: 2px solid #000;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .info-table th {
            background-color: #f0f0f0 !important;
            width: 15%;
        }

        .entries-table th {
            background-color: #343a40 !important;
            color: #fff !important;
            text-align: center;
            vertical-align: middle;
        }

        .entries-table td {
            vertical-align: middle;
        }

        .signatures-box {
            margin-top: 50px;
            padding-top: 20px;
            border-top: 1px solid #ccc;
        }

        .signature-line {
            border-top: 1px dashed #000;
            width: 80%;
            margin: 40px auto 10px auto;
        }

        /* تنسيقات الطباعة */
        @@media print {
            body {
                background-color: #fff;
                -webkit-print-color-adjust: exact;
            }
            .print-container {
                box-shadow: none;
                border: none;
                margin: 0;
                padding: 0;
                width: 100%;
                max-width: 100%;
            }
            .no-print {
                display: none !important;
            }
            .btn { display: none; }
        }
    </style>
</head>
<body>

    <div class="container text-center mt-3 mb-3 no-print">
        <button onclick="window.print()" class="btn btn-primary btn-lg px-4"><i class="bi bi-printer"></i> طباعة السند</button>
        <button onclick="window.close()" class="btn btn-secondary btn-lg px-4">إغلاق</button>
    </div>

    <div class="print-container">

        <div class="header-box row align-items-center">
            <div class="col-4 text-center">
                <h5 class="fw-bold">نقابة المحامين النظاميين</h5>
                <p class="mb-0">فلسطين - غزة</p>
            </div>
            <div class="col-4 text-center">
                <h2 class="fw-bold border border-2 border-dark p-2 d-inline-block rounded">سند قيد يومية</h2>
                <div class="mt-2 fw-bold">Journal Voucher</div>
            </div>
            <div class="col-4 text-center">
                <h5 class="fw-bold text-danger">رقم القيد: @Model.EntryNumber</h5>
                <p class="mb-0">التاريخ: @Model.EntryDate.ToString("yyyy/MM/dd")</p>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <table class="table table-bordered table-sm info-table">
                    <tr>
                        <th>رقم المرجع</th>
                        <td>@Model.ReferenceNumber</td>
                        <th>المصدر</th>
                        <td>
                            @if (Model.SourceModule == "Receipts")
                            {<span>سند قبض</span> }
                            else if (Model.SourceModule == "GeneralExpenses")
                            { <span>سند صرف</span> }
                            else
                            { <span>@Model.SourceModule</span>}
                        </td>
                    </tr>
                    <tr>
                        <th>البيان العام</th>
                        <td colspan="3">@Model.Description</td>
                    </tr>
                    <tr>
                        <th>السنة المالية</th>
                        <td>@ViewBag.FiscalYearName</td>
                        <th>الحالة</th>
                        <td>@(Model.IsPosted ? "مرحل" : "مسودة")</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="table-responsive mb-4">
            <table class="table table-bordered entries-table">
                <thead>
                    <tr>
                        <th style="width: 15%">رقم الحساب</th>
                        <th style="width: 25%">اسم الحساب</th>
                        <th style="width: 30%">البيان التفصيلي</th>
                        <th style="width: 15%">مدين</th>
                        <th style="width: 15%">دائن</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detail in Model.JournalEntryDetails)
                    {
                        <tr>
                            <td class="text-center">@detail.Account.Code</td>
                            <td>@detail.Account.Name</td>
                            <td>@detail.Description</td>
                            <td class="text-end fw-bold">@(detail.Debit > 0 ? detail.Debit.ToString("N2") : "-")</td>
                            <td class="text-end fw-bold">@(detail.Credit > 0 ? detail.Credit.ToString("N2") : "-")</td>
                        </tr>
                    }
                </tbody>
                <tfoot style="background-color: #e9ecef; font-weight: bold;">
                    <tr>
                        <td colspan="3" class="text-center">الإجمالي</td>
                        <td class="text-end text-success">@Model.TotalDebit.ToString("N2")</td>
                        <td class="text-end text-danger">@Model.TotalCredit.ToString("N2")</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        @if (Model.TotalDebit != Model.TotalCredit)
        {
            <div class="alert alert-danger text-center fw-bold no-print">
                تنبيه: القيد غير متوازن! الفرق: @Math.Abs(Model.TotalDebit - Model.TotalCredit).ToString("N2")
            </div>
        }

        <div class="signatures-box row text-center">
            <div class="col-4">
                <p class="fw-bold">إعداد / المحاسب</p>
                <div class="small text-muted">@Model.CreatedBy</div>
                <div class="signature-line"></div>
            </div>
            <div class="col-4">
                <p class="fw-bold">تدقيق / المدير المالي</p>
                <div class="signature-line"></div>
            </div>
            <div class="col-4">
                <p class="fw-bold">اعتماد / أمين الصندوق</p>
                <div class="signature-line"></div>
            </div>
        </div>

        <div class="text-center mt-4 small text-muted">
            <hr />
            <p>تاريخ الطباعة: @DateTime.Now.ToString("yyyy/MM/dd HH:mm") | المستخدم: @(Session["FullName"] ?? "Unknown")</p>
        </div>

    </div>

    <script>
        // طباعة تلقائية عند التحميل (اختياري)
        // window.onload = function() { window.print(); }
    </script>
</body>
</html>
