@model IEnumerable<BarManegment.Models.LoanApplication>
@{
    ViewBag.Title = "إدارة طلبات القروض";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2><i class="bi bi-wallet2 me-2"></i> @ViewBag.Title</h2>

<p>
    @Html.ActionLink("إنشاء طلب قرض جديد", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ViewBag.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>الرقم</th>
            <th>المحامي</th>
            <th>نوع القرض</th>
            <th>المبلغ</th>
            <th>عدد الأقساط</th>
            <th>تاريخ الطلب</th>
            <th>الحالة</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string statusClass = "";
            if (item.Status.Contains("مفعل")) { statusClass = "table-success"; }
            if (item.Status.Contains("تحت المراجعة")) { statusClass = "table-warning"; }

            <tr class="@statusClass">
                <td>@item.Id</td>
                <td>@item.Lawyer.ArabicName</td>
                <td>@item.LoanType.Name</td>
                <td>@item.Amount.ToString("N2")</td>
                <td>@item.InstallmentCount</td>
                <td>@item.ApplicationDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <strong>@item.Status</strong>
                </td>
                <td>
                    @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })

                    @* ✅ زر التعديل يظهر فقط إذا لم يتم الصرف *@
                    @if (!item.IsDisbursed)
                    {
                        @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "btn btn-warning text-dark" })
                    }

                </td>
            </tr>
        }
    </tbody>
</table>