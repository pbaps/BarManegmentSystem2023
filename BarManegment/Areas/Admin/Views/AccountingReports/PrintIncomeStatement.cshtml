@model BarManegment.Areas.Admin.ViewModels.IncomeStatementViewModel
@{ Layout = null; }

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>قائمة الدخل - طباعة</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Cairo', sans-serif;
            -webkit-print-color-adjust: exact;
        }

        .header-box {
            border-bottom: 2px solid #000;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .report-section {
            border: 1px solid #000;
            margin-bottom: 20px;
            page-break-inside: avoid;
        }

        .section-header {
            background-color: #eee;
            padding: 5px 10px;
            font-weight: bold;
            border-bottom: 1px solid #000;
        }

        .row-item {
            display: flex;
            justify-content: space-between;
            padding: 5px 10px;
            border-bottom: 1px dotted #ccc;
        }

        .total-row {
            background-color: #f8f9fa;
            font-weight: bold;
            padding: 8px 10px;
            border-top: 2px solid #000;
            display: flex;
            justify-content: space-between;
        }

        .final-result {
            border: 2px solid #000;
            padding: 15px;
            text-align: center;
            margin-top: 30px;
            background-color: #fcfcfc;
        }
    </style>
</head>
<body onload="window.print()" class="p-5">

    <div class="header-box text-center">
        <img src="@Url.Content("~/Content/Images/logo.png")" alt="Logo" style="height: 80px;" class="mb-2" />
        <h3 class="fw-bold">نقابة المحامين الفلسطينيين</h3>
        <h4 class="text-decoration-underline">قائمة الدخل (الإيرادات والمصروفات)</h4>
        <p class="mb-0">عن الفترة المنتهية في: <strong>@Model.ToDate?.ToString("yyyy/MM/dd")</strong></p>
    </div>

    <div class="report-section">
        <div class="section-header">أولاً: الإيرادات التشغيلية</div>
        @foreach (var item in Model.Revenues)
        {
            <div class="row-item">
                <span>@item.AccountName</span>
                <span>@item.Amount.ToString("N2")</span>
            </div>
        }
        <div class="total-row">
            <span>إجمالي الإيرادات</span>
            <span>@Model.TotalRevenues.ToString("N2")</span>
        </div>
    </div>

    <div class="report-section">
        <div class="section-header">ثانياً: المصروفات العمومية والإدارية</div>
        @foreach (var item in Model.Expenses)
        {
            <div class="row-item">
                <span>@item.AccountName</span>
                <span>@item.Amount.ToString("N2")</span>
            </div>
        }
        <div class="total-row">
            <span>إجمالي المصروفات</span>
            <span>(@Model.TotalExpenses.ToString("N2"))</span>
        </div>
    </div>

    <div class="final-result">
        <h4>صافي الدخل (الفائض / العجز)</h4>
        <h2 dir="ltr" class="fw-bold my-2">@Model.NetIncome.ToString("N2") ₪</h2>
        <small>القيم مقومة بالشيكل الإسرائيلي</small>
    </div>

    <div class="row mt-5 text-center">
        <div class="col-4">
            <p class="fw-bold">إعداد المحاسب</p>
            <br />___________
        </div>
        <div class="col-4">
            <p class="fw-bold">المدير المالي</p>
            <br />___________
        </div>
        <div class="col-4">
            <p class="fw-bold">أمين الصندوق</p>
            <br />___________
        </div>
    </div>

</body>
</html>
