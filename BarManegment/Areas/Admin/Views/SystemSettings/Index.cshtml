@model BarManegment.Areas.Admin.ViewModels.SystemSettingsViewModel

@{
    ViewBag.Title = "إعدادات النظام";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-gear-fill me-2"></i> إعدادات النظام العامة</h5>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <h5 class="text-primary fw-bold mb-3"><i class="bi bi-calendar-range me-2"></i> فترة التسجيل للامتحان</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.ExamRegistrationStartDate, new { @class = "form-label fw-bold" })
                                @Html.TextBoxFor(m => m.ExamRegistrationStartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                @Html.ValidationMessageFor(m => m.ExamRegistrationStartDate, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.ExamRegistrationEndDate, new { @class = "form-label fw-bold" })
                                @Html.TextBoxFor(m => m.ExamRegistrationEndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                @Html.ValidationMessageFor(m => m.ExamRegistrationEndDate, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <hr class="my-4 opacity-25" />

                        <h5 class="text-success fw-bold mb-3"><i class="bi bi-mortarboard me-2"></i> معايير القبول (الحد الأدنى للمعدلات)</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.MinHighSchoolScore, new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    @Html.EditorFor(m => m.MinHighSchoolScore, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.1" } })
                                    <span class="input-group-text">%</span>
                                </div>
                                <div class="form-text">أقل معدل ثانوية عامة مسموح به للتقدم.</div>
                                @Html.ValidationMessageFor(m => m.MinHighSchoolScore, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.MinBachelorScore, new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    @Html.EditorFor(m => m.MinBachelorScore, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.1" } })
                                    <span class="input-group-text">%</span>
                                </div>
                                <div class="form-text">أقل معدل بكالوريوس مسموح به للتقدم.</div>
                                @Html.ValidationMessageFor(m => m.MinBachelorScore, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <hr class="my-4 opacity-25" />

                        <h5 class="text-warning text-dark fw-bold mb-3"><i class="bi bi-journal-check me-2"></i> متطلبات التدريب والتجديد</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.RequiredTrainingHours, new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    @Html.EditorFor(m => m.RequiredTrainingHours, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                                    <span class="input-group-text">ساعة</span>
                                </div>
                                @Html.ValidationMessageFor(m => m.RequiredTrainingHours, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.RenewalGracePeriodEndDate, new { @class = "form-label fw-bold" })
                                @Html.TextBoxFor(m => m.RenewalGracePeriodEndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                @Html.ValidationMessageFor(m => m.RenewalGracePeriodEndDate, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <hr class="my-4 opacity-25" />

                        <h5 class="text-danger fw-bold mb-3"><i class="bi bi-cash-coin me-2"></i> إعدادات الرواتب والتأمين (الافتراضية)</h5>
                        <div class="row g-3 mb-4 bg-light p-3 rounded border">
                            <div class="col-md-4">
                                @Html.LabelFor(m => m.AnnualIncrementPercent, new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.AnnualIncrementPercent, new { @class = "form-control", type = "number", step = "0.1", min = "0", max = "100" })
                                    <span class="input-group-text">%</span>
                                </div>
                                <div class="form-text small">نسبة الزيادة السنوية للموظفين.</div>
                                @Html.ValidationMessageFor(m => m.AnnualIncrementPercent, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-4">
                                @Html.LabelFor(m => m.EmployeePensionPercent, new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.EmployeePensionPercent, new { @class = "form-control", type = "number", step = "0.1", min = "0", max = "100" })
                                    <span class="input-group-text">%</span>
                                </div>
                                <div class="form-text small">نسبة الخصم من الموظف.</div>
                                @Html.ValidationMessageFor(m => m.EmployeePensionPercent, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-4">
                                @Html.LabelFor(m => m.EmployerPensionPercent, new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.EmployerPensionPercent, new { @class = "form-control", type = "number", step = "0.1", min = "0", max = "100" })
                                    <span class="input-group-text">%</span>
                                </div>
                                <div class="form-text small">نسبة مساهمة النقابة.</div>
                                @Html.ValidationMessageFor(m => m.EmployerPensionPercent, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="text-end mt-5">
                            <button type="submit" class="btn btn-success px-5 fw-bold shadow-sm">
                                <i class="bi bi-save me-2"></i> حفظ الإعدادات
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>