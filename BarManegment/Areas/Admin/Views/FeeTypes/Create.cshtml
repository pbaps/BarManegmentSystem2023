@model BarManegment.Areas.Admin.ViewModels.FeeTypeViewModel
@{
    ViewBag.Title = "إضافة نوع رسم جديد";
}

<div class="container-fluid pt-4 px-4">
    <div class="card" style="max-width: 800px; margin: auto;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="card-header">
                <h4>@ViewBag.Title</h4>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="form-floating mb-3">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = " " } })
                    @Html.LabelFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.DefaultAmount, new { htmlAttributes = new { @class = "form-control", placeholder = " ", type = "number", step = "0.1" } })
                            @Html.LabelFor(model => model.DefaultAmount)
                            @Html.ValidationMessageFor(model => model.DefaultAmount, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            @Html.DropDownListFor(model => model.CurrencyId, Model.Currencies, "--- اختر العملة ---", new { @class = "form-select" })
                            @Html.LabelFor(model => model.CurrencyId)
                            @Html.ValidationMessageFor(model => model.CurrencyId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-floating mb-3">
                    @Html.DropDownListFor(model => model.BankAccountId, Model.BankAccounts, "--- اختر الحساب البنكي ---", new { @class = "form-select" })
                    @Html.LabelFor(model => model.BankAccountId)
                    @Html.ValidationMessageFor(model => model.BankAccountId, "", new { @class = "text-danger" })
                </div>

                <fieldset class="border p-3 mb-3">
                    <legend class="float-none w-auto px-2">تقسيم الحصص (للطوابع/التصديقات)</legend>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.LawyerPercentage, new { htmlAttributes = new { @class = "form-control", placeholder = " ", type = "number", step = "0.01", min = "0", max = "1.0" } })
                                @Html.LabelFor(model => model.LawyerPercentage)
                                @Html.ValidationMessageFor(model => model.LawyerPercentage, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.BarSharePercentage, new { htmlAttributes = new { @class = "form-control", placeholder = " ", type = "number", step = "0.01", min = "0", max = "1.0" } })
                                @Html.LabelFor(model => model.BarSharePercentage)
                                @Html.ValidationMessageFor(model => model.BarSharePercentage, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </fieldset>
                <div class="form-check form-switch mb-3">
                    @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-check-input", role = "switch" })
                    @Html.LabelFor(model => model.IsActive, new { @class = "form-check-label" })
                </div>
            </div>
            <div class="card-footer text-end">
                <input type="submit" value="حفظ" class="btn btn-primary" />
                @Html.ActionLink("العودة إلى القائمة", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>