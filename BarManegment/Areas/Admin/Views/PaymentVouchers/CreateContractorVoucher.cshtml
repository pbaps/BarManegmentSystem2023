@model BarManegment.Areas.Admin.ViewModels.CreateContractorVoucherViewModel
@{
    ViewBag.Title = "إنشاء قسيمة بنكية (للمتعهدين)";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
    <style>
        .select2-container--bootstrap-5 .select2-selection {
            min-height: 58px;
        }
    </style>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h5 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h5>
    </div>
    @using (Html.BeginForm("CreateContractorVoucher", "PaymentVouchers", new { area = "Admin" }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="card-body">
            <p class="text-muted">
                هذه الشاشة مخصصة لـ "حجز" الدفاتر للمتعهد وإنشاء قسيمة دفع بنكية.
                سيتم تغيير حالة الدفاتر إلى "بانتظار الدفع" ولن تظهر في المخزون المتاح.
            </p>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">1. اختر المتعهد</label>
                        @Html.DropDownListFor(m => m.SelectedContractorId, Model.ContractorsList, "-- اختر المتعهد --", new { @class = "form-select", required = "required" })
                        @Html.ValidationMessageFor(m => m.SelectedContractorId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">2. اختر الدفاتر (يمكن اختيار أكثر من دفتر)</label>
                        @* (تأكد أن AvailableBooksList تحتوي على بيانات من الـ Controller) *@
                        @Html.ListBoxFor(m => m.SelectedBookIds, new MultiSelectList(Model.AvailableBooksList, "Id", "StartSerial"), new { @class = "form-select", id = "booksSelect", required = "required" })
                        @Html.ValidationMessageFor(m => m.SelectedBookIds, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="alert alert-info" id="totalAmountInfo" style="display: none;">
                <strong>المبلغ الإجمالي: </strong>
                <span id="calculatedTotal">0</span>
            </div>
        </div>
        <div class="card-footer text-end">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-journal-plus"></i> إنشاء قسيمة الدفع (للبنك)
            </button>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        // (تخزين بيانات الدفاتر في JavaScript لحساب المجموع)
        const booksData = @Html.Raw(Json.Encode(Model.AvailableBooksList.Select(b => new { id = b.Id, price = (b.Quantity * b.ValuePerStamp) })));

        $(document).ready(function () {
            $('#booksSelect').select2({
                theme: "bootstrap-5",
                placeholder: "اختر دفتر واحد أو أكثر",
                allowClear: true,
                dir: "rtl",
                // (تنسيق عرض الأرقام)
                templateResult: formatBook,
                templateSelection: formatBookSelection
            });

            // (حساب المجموع تلقائياً)
            $('#booksSelect').on('change', function() {
                var selectedIds = $(this).val();
                var total = 0;

                if (selectedIds && selectedIds.length > 0) {
                    selectedIds.forEach(function(id) {
                        var book = booksData.find(b => b.id == id);
                        if (book) {
                            total += book.price;
                        }
                    });
                    $('#calculatedTotal').text(total.toFixed(2) + ' ₪'); // (افترضت العملة شيكل)
                    $('#totalAmountInfo').show();
                } else {
                    $('#totalAmountInfo').hide();
                }
            });

            // (دوال مساعدة لـ Select2 لعرض التفاصيل)
            var allBookData = @Html.Raw(Json.Encode(Model.AvailableBooksList));

            function formatBook(book) {
                if (!book.id) {
                    return book.text;
                }
                var originalBook = allBookData.find(b => b.Id == book.id);

                if (!originalBook) return book.text;

                var formattedText = `(من ${originalBook.StartSerial} إلى ${originalBook.EndSerial}) - الكمية: ${originalBook.Quantity} - الفئة: ${originalBook.ValuePerStamp}`;
                return $('<span>' + formattedText + '</span>');
            }

            function formatBookSelection(book) {
                 if (!book.id) {
                    return book.text;
                }
                var originalBook = allBookData.find(b => b.Id == book.id);

                if (!originalBook) return book.text;

                 return `(من ${originalBook.StartSerial} إلى ${originalBook.EndSerial})`;
            }
        });
    </script>
}