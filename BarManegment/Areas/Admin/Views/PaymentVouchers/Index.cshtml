@model BarManegment.Areas.Admin.ViewModels.VoucherIndexViewModel

@{
    ViewBag.Title = "إدارة قسائم الدفع";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    int traineeCount = Model.UnpaidTraineeVouchers?.Count ?? 0;
    int contractorCount = Model.UnpaidContractorVouchers?.Count ?? 0;
    int generalCount = Model.UnpaidGeneralVouchers?.Count ?? 0;
    int paidCount = Model.PaidVouchers?.Count ?? 0;
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css" />
    <style>
        .nav-pills .nav-link {
            border-radius: 50px;
            padding: 10px 25px;
            font-weight: bold;
            color: #555;
            margin-right: 5px;
        }

            .nav-pills .nav-link.active {
                background-color: #0d6efd;
                color: white;
                box-shadow: 0 4px 6px rgba(13, 110, 253, 0.3);
            }

        .badge-count {
            font-size: 0.75em;
            padding: 0.35em 0.65em;
            margin-right: 5px;
            border-radius: 50%;
        }

        .table thead th {
            background-color: #f8f9fa;
            border-bottom: 2px solid #dee2e6;
            color: #495057;
        }
    </style>
}

<div class="container-fluid pt-4 px-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="text-primary fw-bold mb-1"><i class="bi bi-cash-stack me-2"></i> إدارة السندات والقسائم</h4>
            <p class="text-muted small mb-0">إصدار ومتابعة قسائم الرسوم للمحامين، المتدربين، والجهات الخارجية.</p>
        </div>
        <div class="btn-group shadow-sm">
            <a href="@Url.Action("SelectTrainee", "PaymentVouchers", new { area = "Admin" })" class="btn btn-success"><i class="bi bi-person-lines-fill me-1"></i> قسيمة محامي/متدرب</a>
            <a href="@Url.Action("CreateContractorVoucher", "PaymentVouchers", new { area = "Admin" })" class="btn btn-outline-primary"><i class="bi bi-briefcase me-1"></i> قسيمة متعهد</a>
            <a href="@Url.Action("CreateGeneralVoucher", "PaymentVouchers", new { area = "Admin" })" class="btn btn-outline-dark"><i class="bi bi-file-earmark-text me-1"></i> قسيمة عامة</a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-bottom-0 pb-0 pt-3">
            <ul class="nav nav-pills mb-3" id="voucherTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="trainee-tab" data-bs-toggle="pill" data-bs-target="#trainee" type="button" role="tab">
                        <i class="bi bi-people-fill me-2"></i> رسوم المحامين والمتدربين
                        <span class="badge bg-white text-primary badge-count shadow-sm">@traineeCount</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="general-tab" data-bs-toggle="pill" data-bs-target="#general" type="button" role="tab">
                        <i class="bi bi-receipt me-2"></i> قسائم عامة
                        <span class="badge bg-secondary badge-count text-white">@generalCount</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="contractor-tab" data-bs-toggle="pill" data-bs-target="#contractor" type="button" role="tab">
                        <i class="bi bi-building me-2"></i> متعهدين
                        <span class="badge bg-secondary badge-count text-white">@contractorCount</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="paid-tab" data-bs-toggle="pill" data-bs-target="#paid" type="button" role="tab">
                        <i class="bi bi-archive-fill me-2"></i> الأرشيف المسدد
                        <span class="badge bg-success badge-count text-white">@paidCount</span>
                    </button>
                </li>
            </ul>
        </div>

        <div class="card-body">
            <div class="tab-content" id="voucherTabsContent">

                <div class="tab-pane fade show active" id="trainee" role="tabpanel">
                    <div class="table-responsive">
                        <table id="traineeTable" class="table table-hover align-middle w-100">
                            <thead>
                                <tr>
                                    <th>رقم القسيمة</th>
                                    <th>اسم المحامي / المتدرب</th>
                                    <th>تاريخ الإصدار</th>
                                    <th>تاريخ الانتهاء</th>
                                    <th>المبلغ</th>
                                    <th>الحالة</th>
                                    <th class="text-end">إجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.UnpaidTraineeVouchers != null)
                                {
                                    foreach (var item in Model.UnpaidTraineeVouchers)
                                    {
                                        <tr>
                                            <td class="font-monospace fw-bold text-primary">#@item.Id.ToString("D5")</td>
                                            <td class="fw-bold">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-light rounded-circle p-2 me-2"><i class="bi bi-person"></i></div>
                                                    <div>@(item.GraduateApplication?.ArabicName ?? "غير معروف")</div>
                                                </div>
                                            </td>
                                            <td>@item.IssueDate.ToString("yyyy/MM/dd")</td>
                                            <td>
                                                @if (item.ExpiryDate < DateTime.Now)
                                                {<span class="text-danger fw-bold">@item.ExpiryDate.ToString("yyyy/MM/dd") (منتهية)</span> }
                                            else
                                            { <span>@item.ExpiryDate.ToString("yyyy/MM/dd")</span>}
                                            </td>
                                            <td class="fw-bold text-dark">@item.TotalAmount.ToString("N0")</td>
                                            <td><span class="badge bg-warning text-dark">@item.Status</span></td>
                                            <td class="text-end">
                                                <div class="btn-group">
                                                    <a href="@Url.Action("PrintVoucher", new { id = item.Id, area = "Admin" })" target="_blank" class="btn btn-sm btn-outline-dark" title="طباعة"><i class="bi bi-printer"></i></a>
                                                    <a href="@Url.Action("Create", "Receipts", new { voucherId = item.Id, area = "Admin" })" class="btn btn-sm btn-success fw-bold" title="دفع"><i class="bi bi-cash-coin me-1"></i> تحصيل</a>
                                                    <a href="@Url.Action("Delete", new { id = item.Id, area = "Admin" })" class="btn btn-sm btn-danger" title="حذف" onclick="return confirm('حذف القسيمة؟');"><i class="bi bi-trash"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="tab-pane fade" id="general" role="tabpanel">
                    <div class="table-responsive">
                        <table id="generalTable" class="table table-hover align-middle w-100">
                            <thead>
                                <tr>
                                    <th>رقم القسيمة</th>
                                    <th>الجهة / المستفيد</th>
                                    <th>تاريخ الإصدار</th>
                                    <th>المبلغ</th>
                                    <th>الحالة</th>
                                    <th class="text-end">إجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.UnpaidGeneralVouchers != null)
                                {
                                    foreach (var item in Model.UnpaidGeneralVouchers)
                                    {
                                        <tr>
                                            <td class="font-monospace">#@item.Id</td>
                                            <td class="fw-bold">@(item.CheckNumber ?? "جهة خارجية")</td>
                                            <td>@item.IssueDate.ToString("yyyy/MM/dd")</td>
                                            <td class="fw-bold">@item.TotalAmount.ToString("N0")</td>
                                            <td><span class="badge bg-info text-dark">@item.Status</span></td>
                                            <td class="text-end">
                                                <a href="@Url.Action("Create", "Receipts", new { voucherId = item.Id })" class="btn btn-sm btn-success"><i class="bi bi-cash"></i> تحصيل</a>
                                                <a href="@Url.Action("PrintVoucher", new { id = item.Id })" target="_blank" class="btn btn-sm btn-outline-dark"><i class="bi bi-printer"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="tab-pane fade" id="contractor" role="tabpanel">
                    <div class="table-responsive">
                        <table id="contractorTable" class="table table-hover align-middle w-100">
                            <thead>
                                <tr>
                                    <th>رقم القسيمة</th>
                                    <th>اسم المتعهد</th>
                                    <th>تاريخ الإصدار</th>
                                    <th>المبلغ</th>
                                    <th class="text-end">إجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.UnpaidContractorVouchers != null)
                                {
                                    foreach (var item in Model.UnpaidContractorVouchers)
                                    {
                                        <tr>
                                            <td class="font-monospace">#@item.Voucher.Id</td>
                                            <td class="fw-bold text-primary">@item.ContractorName</td>
                                            <td>@item.Voucher.IssueDate.ToString("yyyy/MM/dd")</td>
                                            <td class="fw-bold">@item.Voucher.TotalAmount.ToString("N0")</td>
                                            <td class="text-end">
                                                <a href="@Url.Action("CreateContractorReceipt", "Receipts", new { voucherId = item.Voucher.Id })" class="btn btn-sm btn-success"><i class="bi bi-cash"></i> تحصيل</a>
                                                <a href="@Url.Action("PrintStampContractorVoucher", new { id = item.Voucher.Id })" target="_blank" class="btn btn-sm btn-outline-dark"><i class="bi bi-printer"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="tab-pane fade" id="paid" role="tabpanel">
                    <div class="table-responsive">
                        <table id="paidTable" class="table table-hover align-middle w-100">
                            <thead>
                                <tr>
                                    <th>رقم القسيمة</th>
                                    <th>المستفيد</th>
                                    <th>تاريخ السداد</th>
                                    <th>المبلغ</th>
                                    <th>الحالة</th>
                                    <th class="text-end">عرض</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.PaidVouchers != null)
                                {
                                    foreach (var item in Model.PaidVouchers)
                                    {
                                        <tr>
                                            <td class="font-monospace">#@item.Id</td>
                                            <td>
                                                @if (item.GraduateApplication != null)
                                                {@item.GraduateApplication.ArabicName }
                                            else
                                            { <span class="text-muted">@(item.CheckNumber ?? "متعهد/عام")</span>}
                                            </td>
                                            <td>@item.IssueDate.ToString("yyyy/MM/dd")</td>
                                            <td class="fw-bold text-success">@item.TotalAmount.ToString("N0")</td>
                                            <td><span class="badge bg-success"><i class="bi bi-check-lg"></i> مسدد</span></td>
                                            <td class="text-end">
                                                <a href="@Url.Action("Details", "Receipts", new { id = item.Id })" class="btn btn-sm btn-outline-primary"><i class="bi bi-eye"></i> التفاصيل</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            var tableOptions = {
                "language": { "url": "//cdn.datatables.net/plug-ins/1.13.8/i18n/ar.json" },
                "order": [[0, "desc"]],
                "pageLength": 10,
                "lengthMenu": [10, 25, 50, 100]
            };

            $('#traineeTable').DataTable(tableOptions);
            $('#generalTable').DataTable(tableOptions);
            $('#contractorTable').DataTable(tableOptions);
            $('#paidTable').DataTable(tableOptions);
        });
    </script>
}