@model BarManegment.ViewModels.PrintVoucherViewModel
@{
    ViewBag.Title = "طباعة قسيمة دفع (متعهد)";
    Layout = "~/Areas/Admin/Views/Shared/_PrintWaselLayout.cshtml";

    bool isCashPayment = (Model.PaymentMethod == "نقدي");
    string amountInWords = ViewBag.AmountInWords as string;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Amiri:wght@400;700&family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #525659;
            margin: 0;
            padding: 0;
            font-size: 12px;
        }

        .page {
            width: 210mm;
            min-height: 297mm;
            padding: 10mm;
            margin: 10mm auto;
            background: white;
            position: relative;
            box-sizing: border-box;
            display: block;
        }

        /* تنسيق القسيمة */
        .voucher-half {
            border: 2px solid #000;
            border-radius: 8px;
            padding: 15px;
            position: relative;
            background-color: white;
            margin-bottom: 15mm;
            break-inside: avoid;
            page-break-inside: avoid;
        }

        .header-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #eee;
            padding-bottom: 10px;
            margin-bottom: 10px;
        }

        .logo-area {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .logo-area img {
            height: 60px;
        }

        .org-name h2 {
            font-family: 'Amiri', serif;
            font-size: 22px;
            font-weight: bold;
            margin: 0;
            color: #198754; /* لون أخضر لتمييز قسائم المتعهدين */
        }

        .org-name h4 {
            font-size: 12px;
            color: #666;
            margin: 0;
        }

        .voucher-title {
            text-align: left;
        }

        .voucher-title h3 {
            font-weight: bold;
            margin: 0;
            color: #333;
            border: 2px solid #333;
            padding: 5px 15px;
            border-radius: 5px;
            display: inline-block;
            background-color: #f0f0f0;
        }

        .info-grid {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr;
            gap: 10px;
            margin-bottom: 15px;
            background-color: #fffbe6; /* خلفية صفراء فاتحة */
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ffe58f;
        }

        .info-item label {
            display: block;
            font-size: 10px;
            color: #666;
            margin-bottom: 2px;
        }

        .info-item span {
            font-weight: bold;
            font-size: 13px;
            color: #000;
        }

        .custom-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 10px;
            flex-grow: 1;
        }

        .custom-table th {
            background-color: #198754; /* أخضر */
            color: white;
            padding: 6px;
            text-align: center;
            font-weight: normal;
            border: 1px solid #198754;
        }

        .custom-table td {
            padding: 6px;
            border: 1px solid #dee2e6;
            text-align: center;
            vertical-align: middle;
        }

        .total-row {
            background-color: #e9ecef;
            font-weight: bold;
        }

        .signatures {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
            padding-top: 10px;
            border-top: 1px dashed #ccc;
            page-break-inside: avoid;
        }

        .sig-box {
            text-align: center;
            width: 30%;
        }

        .sig-box p {
            margin-bottom: 25px;
            font-weight: bold;
            font-size: 11px;
        }

        .cut-line {
            height: 0px;
            border-top: 2px dashed #999;
            margin: 0 0 15mm 0;
            position: relative;
            text-align: center;
            display: block;
        }

        .cut-icon {
            position: absolute;
            top: -12px;
            left: 50%;
            transform: translateX(-50%);
            background: white;
            padding: 0 10px;
            color: #555;
            font-size: 14px;
        }

        @@media print {
            body { background-color: white; }
            .page {
                margin: 0;
                border: none;
                box-shadow: none;
                padding: 0;
                width: 100%;
                height: auto;
                display: block;
            }
            .no-print { display: none !important; }

            .voucher-half {
                page-break-inside: avoid;
                break-inside: avoid;
            }

            .custom-table th {
                background-color: #eee !important;
                color: black !important;
                border-color: #000;
                -webkit-print-color-adjust: exact;
            }
             /* إخفاء خط القص إذا انتقلت القسيمة الثانية لصفحة جديدة */
             .voucher-half:last-of-type {
                 margin-bottom: 0;
             }
        }
    </style>
</head>
<body>

    <div class="no-print p-3 bg-white shadow-sm mb-4 text-center">
        <button onclick="window.print()" class="btn btn-primary px-4 fw-bold"><i class="bi bi-printer"></i> طباعة</button>
        <button onclick="window.close()" class="btn btn-secondary px-4">إغلاق</button>
    </div>

    <div class="page">

        <!-- النسخة الأولى -->
        @RenderVoucherContent("نسخة البنك / النقابة", Model, amountInWords)

        <div class="cut-line">
            <div class="cut-icon"><i class="bi bi-scissors"></i> قص من هنا</div>
        </div>

        <!-- النسخة الثانية -->
        @RenderVoucherContent("نسخة المتعهد", Model, amountInWords)

    </div>

    @helper RenderVoucherContent(string copyTitle, BarManegment.ViewModels.PrintVoucherViewModel vm, string amountText)
    {
        <div class="voucher-half">
            <div class="header-section">
                <div class="logo-area">
                    <img src="@Url.Content("~/Content/Images/logo.png")" alt="Logo" />
                    <div class="org-name">
                        <h2>نقابة المحامين الفلسطينيين</h2>
                        <h4>Palestinian Bar Association</h4>
                    </div>
                </div>
                <div class="voucher-title">
                    <h3>قسيمة إيداع (أثمان طوابع)</h3>
                    <div class="text-center mt-1 small text-muted">@copyTitle</div>
                </div>
            </div>

            <div class="info-grid">
                <div class="info-item">
                    <label>اسم المتعهد</label>
                    <span>@(vm.TraineeName ?? "متعهد عام")</span>
                </div>
                <div class="info-item">
                    <label>رقم القسيمة</label>
                    <span style="font-family: monospace; font-size: 14px;">@vm.VoucherId.ToString("D6")</span>
                </div>
                <div class="info-item">
                    <label>تاريخ الإصدار</label>
                    <span>@vm.IssueDate.ToString("yyyy/MM/dd")</span>
                </div>
                <div class="info-item">
                    <label>طريقة الدفع</label>
                    <span>@vm.PaymentMethod</span>
                </div>
                <div class="info-item">
                    <label>صلاحية القسيمة</label>
                    <span class="text-danger">@vm.ExpiryDate.ToString("yyyy/MM/dd")</span>
                </div>
                <div class="info-item">
                    <label>الموظف المصدر</label>
                    <span>@vm.IssuedByUserName</span>
                </div>
            </div>

            <table class="custom-table">
                <thead>
                    <tr>
                        <th style="width: 5%;">م</th>
                        <th style="width: 40%;">البيان (أرقام الدفاتر)</th>
                        <th style="width: 25%;">اسم البنك</th>
                        <th style="width: 30%;">رقم الحساب (IBAN)</th>
                        <th style="width: 15%;">المبلغ</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1; }
                    @foreach (var item in vm.Details)
                    {
                        <tr>
                            <td>@(i++)</td>
                            <td style="text-align: right;">@item.FeeTypeName</td>
                            <td>@item.BankName</td>
                            <td style="font-size: 10px;">@item.Iban</td>
                            <td class="fw-bold">@item.Amount.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="total-row">
                        <td colspan="4" style="text-align: left; padding-left: 15px;">الإجمالي الكلي:</td>
                        <td class="fs-6">@vm.TotalAmount.ToString("N2") @(vm.Details.FirstOrDefault()?.CurrencySymbol)</td>
                    </tr>
                    <tr>
                        <td colspan="5" style="text-align: right; background-color: #f8f9fa; padding: 8px;">
                            <strong>فقط:</strong> @amountText
                        </td>
                    </tr>
                </tfoot>
            </table>

            <div class="signatures">
                <div class="sig-box">
                    <p>توقيع المتعهد</p>
                    <span>.........................</span>
                </div>
                <div class="sig-box">
                    <p>ختم وتوقيع البنك</p>
                    <span>.........................</span>
                </div>
                <div class="sig-box">
                    <p>توقيع المحاسب</p>
                    <span>.........................</span>
                </div>
            </div>
        </div>
    }

    <script>
        window.onload = function () {
            window.print();
        }
    </script>
</body>
</html>
