@model BarManegment.Areas.Admin.ViewModels.ImportViewModel
@{
    ViewBag.Title = "استيراد وتصدير البيانات";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">

    @* --- عنوان الصفحة --- *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-dark"><i class="bi bi-arrow-left-right me-2"></i> مركز تبادل البيانات</h4>
            <p class="text-muted mb-0">تصدير البيانات للأرشيف أو استيراد بيانات من ملفات Excel خارجية.</p>
        </div>
    </div>

    @* --- رسائل التنبيه (نجاح / خطأ) --- *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4">

        @* ============================================= *@
        @* 1. قسم التصدير (Export Section) *@
        @* ============================================= *@
        <div class="col-lg-5">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-cloud-download-fill me-2"></i> تصدير البيانات (Export)</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-light border-start border-primary border-4">
                        <small class="text-muted">
                            اختر نوع البيانات لتصديرها إلى ملف Excel (.xlsx). يمكنك استخدام الملف الناتج كقالب لإعادة الاستيراد لاحقاً.
                        </small>
                    </div>

                    @using (Html.BeginForm("ExportData", "DataExchange", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark">اختر الجدول المطلوب:</label>
                            <select name="type" class="form-select form-select-lg" required>
                                <option value="" disabled selected>-- اختر من القائمة --</option>
                                @RenderOptions()
                            </select>
                        </div>

                        <div class="d-grid mt-auto">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                <i class="bi bi-file-earmark-excel me-2"></i> تحميل ملف الإكسل
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        @* ============================================= *@
        @* 2. قسم الاستيراد (Import Section) *@
        @* ============================================= *@
        <div class="col-lg-7">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-gradient-success text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-cloud-upload-fill me-2"></i> استيراد البيانات (Import)</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-light border-start border-success border-4">
                        <small class="text-muted">
                            <i class="bi bi-info-circle-fill text-success me-1"></i>
                            تأكد من اختيار <strong>نوع البيانات</strong> أولاً لتحميل النموذج المناسب، ثم ارفع الملف المعبأ.
                        </small>
                    </div>

                    @using (Html.BeginForm("ImportData", "DataExchange", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row g-3 mb-3">
                            @* القائمة المنسدلة *@
                            <div class="col-md-8">
                                <label class="form-label fw-bold text-dark">1. نوع البيانات:</label>
                                <select name="EntityType" id="entityTypeSelect" class="form-select" required>
                                    <option value="" disabled selected>-- اختر الجدول --</option>
                                    @RenderOptions()
                                </select>
                            </div>

                            @* زر تحميل القالب *@
                            <div class="col-md-4 d-flex align-items-end">
                                <a id="downloadTemplateBtn" href="#" class="btn btn-outline-secondary w-100 disabled" target="_blank">
                                    <i class="bi bi-download me-1"></i> تحميل النموذج
                                </a>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark">2. ملف البيانات (Excel):</label>
                            <input type="file" name="File" class="form-control" accept=".xlsx" required />
                            <div class="form-text mt-2 text-muted">
                                <i class="bi bi-exclamation-circle"></i> يجب أن يبدأ الملف بالعناوين في الصف الأول، والبيانات من الصف الثاني.
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg shadow-sm" onclick="return confirm('هل أنت متأكد من بدء عملية الاستيراد؟\nقد تستغرق العملية بعض الوقت حسب حجم الملف.');">
                                <i class="bi bi-check-circle-fill me-2"></i> بدء عملية الاستيراد
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

@* --- دالة مساعدة لطباعة الخيارات (لتجنب التكرار في الكود) --- *@
@helper RenderOptions()
{
    <optgroup label="1. الثوابت الأساسية (النظام)">
        <option value="UserTypes">أنواع المستخدمين</option>
        <option value="ApplicationStatuses">حالات الطلب</option>
        <option value="Genders">الجنس</option>
        <option value="NationalIdTypes">أنواع الهوية</option>
        <option value="Currencies">العملات</option>
        <option value="ExamTypes">أنواع الامتحانات</option>
        <option value="AttachmentTypes">أنواع المرفقات</option>
        <option value="QualificationTypes">أنواع المؤهلات</option>
        <option value="Provinces">المحافظات</option>
        <option value="PartyRoles">صفات الأطراف (للعقود)</option>
        <option value="ContractExemptionReasons">أسباب الإعفاء</option>
        <option value="ContractTypes">أنواع العقود</option>
    </optgroup>

    <optgroup label="2. الإعدادات المالية">
        <option value="BankAccounts">الحسابات البنكية</option>
        <option value="FeeTypes">أنواع الرسوم</option>
    </optgroup>

    <optgroup label="3. الأعضاء والتدريب">
        <option value="Graduates">سجل الخريجين والمتدربين</option>
    </optgroup>

    <optgroup label="4. الامتحانات">
        <option value="Exams">جدول الامتحانات</option>
        <option value="ExamResults">نتائج الامتحانات</option>
        <option value="OralExamResults">نتائج الاختبار الشفوي</option>
    </optgroup>

    <optgroup label="5. المعاملات المالية">
        <option value="Payments">سندات القبض والدفعات</option>
    </optgroup>

    <optgroup label="6. العقود والأرشيف">
        <option value="Contracts">أرشيف العقود والمعاملات</option>
    </optgroup>

    <optgroup label="7. نظام الطوابع">
        <option value="StampContractors">متعهدي الطوابع</option>
        <option value="StampBooks">دفاتر الطوابع</option>
        <option value="StampSales">سجل مبيعات الطوابع</option>
    </optgroup>
    <optgroup label="نقل البيانات (مرة واحدة)">
        <option value="OpeningJournal">القيد الافتتاحي (ميزان المراجعة)</option>
    </optgroup>
    <optgroup label="8. أخرى">
        <option value="LegalResearch">الأبحاث القانونية</option>
        <option value="Loans">أرشيف القروض</option>
    </optgroup>
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // منطق تفعيل زر تحميل النموذج
            var select = document.getElementById("entityTypeSelect");
            var btn = document.getElementById("downloadTemplateBtn");
            var baseUrl = "@Url.Action("DownloadTemplate", "DataExchange", new { area = "Admin" })";

            select.addEventListener("change", function() {
                var selectedValue = this.value;
                if (selectedValue) {
                    // تحديث الرابط وتفعيل الزر
                    btn.href = baseUrl + "?type=" + selectedValue;
                    btn.classList.remove("disabled", "btn-outline-secondary");
                    btn.classList.add("btn-success"); // تغيير اللون ليكون بارزاً
                } else {
                    // تعطيل الزر
                    btn.href = "#";
                    btn.classList.add("disabled", "btn-outline-secondary");
                    btn.classList.remove("btn-success");
                }
            });
        });
    </script>

    <style>
        /* تحسينات بصرية إضافية */
        .bg-gradient-primary {
            background: linear-gradient(45deg, #4e73df, #224abe);
        }

        .bg-gradient-success {
            background: linear-gradient(45deg, #1cc88a, #13855c);
        }

        .form-select optgroup {
            font-weight: bold;
            color: #4e73df;
        }

        .form-select option {
            color: #333;
            font-weight: normal;
            padding: 5px;
        }
    </style>
}