@model BarManegment.Areas.Admin.ViewModels.SubmitResearchViewModel
@{
    ViewBag.Title = "تقديم بحث جديد";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold">تسجيل بحث قانوني جديد</h5>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info mb-4">
                        <strong>المتدرب:</strong> @Model.TraineeName
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.GraduateApplicationId)
                        @Html.HiddenFor(m => m.TraineeName)

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Title, new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(m => m.Title, new { @class = "form-control", rows = "3", placeholder = "أدخل عنوان البحث كاملاً..." })
                            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-4">
                            @Html.LabelFor(m => m.SubmissionDate, new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.SubmissionDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(m => m.SubmissionDate, "", new { @class = "text-danger" })
                        </div>

                        <div class="text-end">
                            <a href="@Url.Action("Details", "RegisteredTrainees", new { id = Model.GraduateApplicationId })" class="btn btn-secondary me-2">إلغاء</a>
                            <button type="submit" class="btn btn-success px-4 fw-bold">حفظ وتسجيل</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>