@model IEnumerable<BarManegment.Models.LegalResearch>
@{
    ViewBag.Title = "إدارة الأبحاث القانونية";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var statuses = (ViewBag.Statuses as List<string>) ?? new List<string>();
}

<div class="container-fluid pt-4 px-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="text-primary fw-bold"><i class="bi bi-journal-text me-2"></i> @ViewBag.Title</h4>

        <!-- 💡 إضافة زر الانتقال لإدارة اللجان -->
        <a href="@Url.Action("Index", "CommitteeManagement", new { area = "Admin" })" class="btn btn-success shadow-sm">
            <i class="bi bi-people-fill me-1"></i> إدارة لجان المناقشة
        </a>
    </div>

    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body bg-light">
            @using (Html.BeginForm("Index", "LegalResearch", FormMethod.Get, new { @class = "row g-3 align-items-end" }))
            {
                <div class="col-md-5">
                    <label for="searchTerm" class="form-label fw-bold">بحث بالعنوان أو اسم المتدرب:</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                        <input class="form-control border-start-0" type="search" id="searchTerm" name="searchTerm" value="@ViewBag.SearchTerm">
                    </div>
                </div>
                <div class="col-md-4">
                    <label for="statusFilter" class="form-label fw-bold">فلترة حسب الحالة:</label>
                    <select name="statusFilter" id="statusFilter" class="form-select">
                        <option value="">-- الكل --</option>
                        @foreach (var status in statuses)
                        {
                            <option value="@status" selected="@(ViewBag.StatusFilter == status)">@status</option>
                        }
                    </select>
                </div>
                <div class="col-md-3 d-flex gap-2">
                    <button class="btn btn-primary w-100" type="submit">تطبيق</button>
                    <a href="@Url.Action("Index", "LegalResearch")" class="btn btn-outline-secondary w-100">إلغاء</a>
                </div>
            }
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>عنوان البحث</th>
                            <th>اسم المتدرب</th>
                            <th>تاريخ التقديم</th>
                            <th>الحالة</th>
                            <th>آخر قرار</th>
                            <th class="text-end pe-4">إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold text-primary" style="max-width: 300px;">@item.Title</td>
                                <td>@(item.Trainee?.ArabicName)</td>
                                <td>@item.SubmissionDate.ToString("yyyy-MM-dd")</td>
                                <td><span class="badge bg-info text-dark">@item.Status</span></td>
                                <td>@(item.Decisions.OrderByDescending(d => d.DecisionDate).FirstOrDefault()?.Result ?? "---")</td>
                                <td class="text-end pe-4">
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> التفاصيل
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr><td colspan="6" class="text-center py-5 text-muted">لا توجد أبحاث لعرضها.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>