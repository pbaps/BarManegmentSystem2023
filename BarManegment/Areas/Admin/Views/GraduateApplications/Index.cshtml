@model IEnumerable<BarManegment.Models.GraduateApplication>
@using BarManegment.Helpers
@{
    ViewBag.Title = "إدارة طلبات الانتساب (الخريجين)";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="text-primary fw-bold mb-1"><i class="bi bi-people-fill me-2"></i> @ViewBag.Title</h4>
            <p class="text-muted small mb-0">مراجعة واعتماد طلبات الخريجين الجدد.</p>
        </div>
        @if (PermissionHelper.CheckPermission("GraduateApplications", "CanAdd"))
        {
            <a href="@Url.Action("Create", "GraduateApplications", new { area = "Admin" })" class="btn btn-success shadow-sm">
                <i class="bi bi-person-plus-fill me-2"></i> تسجيل طلب جديد
            </a>
        }
    </div>

    <!-- شريط البحث -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body bg-light p-3">
            @using (Html.BeginForm("Index", "GraduateApplications", FormMethod.Get, new { @class = "row g-2" }))
            {
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                        <input class="form-control border-start-0 ps-0" type="search" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="ابحث بالاسم أو الرقم الوطني...">
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100" type="submit">بحث</button>
                </div>
            }
        </div>
    </div>

    <!-- جدول البيانات -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">الاسم</th>
                            <th>الرقم الوطني</th>
                            <th>تاريخ التقديم</th>
                            <th>الحالة</th>
                            <th class="text-end pe-4">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-initial rounded-circle bg-label-primary me-3">@item.ArabicName.Substring(0, 1)</div>
                                        <div>
                                            <h6 class="mb-0 fw-bold">@item.ArabicName</h6>
                                            <small class="text-muted">@item.EnglishName</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="font-monospace">@item.NationalIdNumber</td>
                                <td>@item.SubmissionDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    @{
                                        string badgeClass = "bg-secondary";
                                        if (item.ApplicationStatus.Name == "طلب جديد") { badgeClass = "bg-primary"; }
                                        else if (item.ApplicationStatus.Name.Contains("بانتظار")) { badgeClass = "bg-warning text-dark"; }
                                        else if (item.ApplicationStatus.Name == "مقبول") { badgeClass = "bg-success"; }
                                        else if (item.ApplicationStatus.Name == "مرفوض") { badgeClass = "bg-danger"; }
                                    }
                                    <span class="badge @badgeClass rounded-pill">@item.ApplicationStatus.Name</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm">
                                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-outline-primary" title="مراجعة وتفاصيل">
                                            <i class="bi bi-eye"></i> مراجعة
                                        </a>
                                        @if (PermissionHelper.CheckPermission("GraduateApplications", "CanEdit"))
                                        {
                                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-outline-secondary" title="تعديل">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2 opacity-25"></i>
                                    لا توجد طلبات جديدة.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light text-muted small">
            إجمالي السجلات: @Model.Count()
        </div>
    </div>
</div>