@model BarManegment.Models.GraduateApplication
@using BarManegment.Helpers
@{
    ViewBag.Title = "مراجعة طلب الانتساب: " + Model.ArabicName;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">

    <!-- 1. بطاقة التعريف والحالة -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-auto">
                    <div class="position-relative">
                        <img src="@(!string.IsNullOrEmpty(Model.PersonalPhotoPath) ? Url.Content(Model.PersonalPhotoPath) : "/Content/Images/default-avatar.png")"
                             class="rounded-circle border border-3 border-light shadow-sm"
                             style="width: 100px; height: 100px; object-fit: cover;">

                        @{
                            string badgeClass = "bg-secondary";
                            if (Model.ApplicationStatus.Name.Contains("بانتظار")) { badgeClass = "bg-warning text-dark"; }
                            else if (Model.ApplicationStatus.Name.Contains("مقبول")) { badgeClass = "bg-success"; }
                            else if (Model.ApplicationStatus.Name.Contains("مرفوض")) { badgeClass = "bg-danger"; }
                        }
                        <span class="position-absolute bottom-0 start-100 translate-middle p-2 border border-light rounded-circle @badgeClass">
                            <span class="visually-hidden">Status</span>
                        </span>
                    </div>
                </div>
                <div class="col">
                    <h4 class="fw-bold text-primary mb-1">@Model.ArabicName</h4>
                    <p class="text-muted mb-2">@Model.EnglishName</p>

                    <div class="d-flex gap-3 text-secondary small">
                        <span><i class="bi bi-card-heading me-1"></i> الهوية: @Model.NationalIdNumber</span>
                        <span><i class="bi bi-calendar me-1"></i> تاريخ التقديم: @Model.SubmissionDate.ToString("yyyy/MM/dd")</span>
                    </div>
                </div>
                <div class="col-auto text-end">
                    <div class="mb-1 text-muted small">حالة الطلب الحالية</div>
                    <h5 class="fw-bold">@Model.ApplicationStatus.Name</h5>
                </div>
            </div>
        </div>
    </div>

    <!-- رسائل النظام -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm"><i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"] <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm"><i class="bi bi-exclamation-circle me-2"></i> @TempData["ErrorMessage"] <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }

    <!-- 2. منطقة اتخاذ القرار -->
    @if (Model.ApplicationStatus.Name == "بانتظار استكمال النواقص" || Model.ApplicationStatus.Name == "طلب جديد" || Model.ApplicationStatus.Name == "ناجح")
    {
        <div class="card shadow border-0 border-start border-5 border-info mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0 text-info"><i class="bi bi-clipboard-check me-2"></i> قرار المراجعة الأولية</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <p class="text-muted mb-2  ">
                            يرجى مراجعة البيانات والمرفقات أدناه بدقة.
                        </p>
                        <div class="alert alert-light border small mb-0">
                            <strong><i class="bi bi-lightbulb-fill text-warning me-1"></i> تذكير:</strong> تأكد من أن الخريج قد قام بطباعة <strong class="text-danger">"نموذج التدريب"</strong> وتوقيعه من المشرف، ثم إعادة رفعه في تبويب "المرفقات" قبل منح الموافقة المبدئية.
                        </div>
                    </div>
                    <div class="col-md-4 d-flex flex-column gap-2">
                        @using (Html.BeginForm("SubmitDecision", "GraduateApplications", new { id = Model.Id }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" name="decision" value="Approve" class="btn btn-success w-100 fw-bold" onclick="return confirm('هل تم التأكد من وجود نموذج التدريب الموقع؟ هل أنت متأكد من التحويل للجنة؟')">
                                <i class="bi bi-check-lg me-2"></i> موافقة مبدئية (تحويل للجنة)
                            </button>
                        }

                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-warning w-50 fw-bold text-dark" data-bs-toggle="modal" data-bs-target="#returnModal">
                                <i class="bi bi-arrow-counterclockwise me-1"></i> إعادة (نواقص)
                            </button>
                            <button type="button" class="btn btn-outline-danger w-50 fw-bold" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                <i class="bi bi-x-lg me-1"></i> رفض نهائي
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row g-4">
        <!-- العمود الأيمن: البيانات -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom py-3">
                    <ul class="nav nav-tabs card-header-tabs" id="appTabs" role="tablist">
                        <li class="nav-item"><button class="nav-link active fw-bold" data-bs-toggle="tab" data-bs-target="#info">البيانات الشخصية</button></li>
                        <li class="nav-item"><button class="nav-link fw-bold" data-bs-toggle="tab" data-bs-target="#qual">المؤهلات</button></li>
                        <li class="nav-item"><button class="nav-link fw-bold" data-bs-toggle="tab" data-bs-target="#docs">المرفقات</button></li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <!-- تبويب 1: المعلومات -->
                        <div class="tab-pane fade show active" id="info">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="small text-muted">مكان الميلاد</label>
                                    <div class="fw-bold">@Model.BirthPlace (@Model.BirthDate.ToString("yyyy-MM-dd"))</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="small text-muted">الجنسية / الجنس</label>
                                    <div class="fw-bold">@Model.Nationality / @Model.Gender.Name</div>
                                </div>
                                <div class="col-md-12"><hr class="text-muted opacity-25 my-2"></div>
                                <div class="col-md-6">
                                    <label class="small text-muted">الجوال</label>
                                    <div class="fw-bold" dir="ltr">@(Model.ContactInfo?.MobileNumber ?? "-")</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="small text-muted">البريد الإلكتروني</label>
                                    <div class="fw-bold">@(Model.ContactInfo?.Email ?? "-")</div>
                                </div>
                                <div class="col-md-12">
                                    <label class="small text-muted">العنوان</label>
                                    <div>@(Model.ContactInfo?.Governorate ?? "") - @(Model.ContactInfo?.City ?? "") @(Model.ContactInfo?.Street ?? "")</div>
                                </div>
                            </div>
                        </div>

                        <!-- تبويب 2: المؤهلات -->
                        <div class="tab-pane fade" id="qual">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="fw-bold m-0">المؤهلات العلمية</h6>
                                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addQualificationModal">
                                    <i class="bi bi-plus-circle"></i> إضافة مؤهل
                                </button>
                            </div>

                            @if (Model.Qualifications != null && Model.Qualifications.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm table-hover align-middle">
                                        <thead class="table-light">
                                            <tr><th>المؤهل</th><th>الجامعة</th><th>التخصص</th><th>سنة التخرج</th><th style="width: 50px;"></th></tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var q in Model.Qualifications)
                                            {
                                                <tr>
                                                    <td>@q.QualificationType.Name</td>
                                                    <td>@q.UniversityName</td>
                                                    <td>@q.Specialization</td>
                                                    <td>@q.GraduationYear</td>
                                                    <td>
                                                        @using (Html.BeginForm("DeleteQualification", "GraduateApplications", new { area = "Admin" }, FormMethod.Post, new { @class = "d-inline" }))
                                                        {
                                                            @Html.AntiForgeryToken()
                                                            @Html.Hidden("qualificationId", q.Id)
                                                            @Html.Hidden("applicationId", Model.Id)
                                                            <button type="submit" class="btn btn-sm text-danger p-0 border-0" onclick="return confirm('هل أنت متأكد من حذف هذا المؤهل؟')">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            { <div class="text-center text-muted py-3">لا توجد مؤهلات مسجلة.</div>}
                        </div>

                        <!-- تبويب 3: المرفقات -->
                        <div class="tab-pane fade" id="docs">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="fw-bold m-0">المرفقات والوثائق</h6>
                                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addAttachmentModal">
                                    <i class="bi bi-cloud-upload"></i> رفع مرفق
                                </button>
                            </div>

                            @if (Model.Attachments != null && Model.Attachments.Any())
                            {
                                <div class="row g-2">
                                    @foreach (var att in Model.Attachments)
                                    {
                                        <div class="col-md-6">
                                            <div class="border rounded p-2 d-flex align-items-center justify-content-between bg-light">
                                                <div class="d-flex align-items-center text-truncate">
                                                    <i class="bi bi-file-earmark-text text-primary fs-4 me-2"></i>
                                                    <div>
                                                        <div class="fw-bold small">@att.AttachmentType.Name</div>
                                                        <div class="text-muted" style="font-size: 10px;">@att.UploadDate.ToString("yyyy-MM-dd")</div>
                                                    </div>
                                                </div>
                                                <div>
                                                    @* رابط استعراض المرفق الآمن *@
                                                    <a href="@Url.Action("GetAttachment", "GraduateApplications", new { id = att.Id })" target="_blank" class="btn btn-sm btn-outline-primary"><i class="bi bi-eye"></i></a>

                                                    @using (Html.BeginForm("DeleteAttachment", "GraduateApplications", new { area = "Admin" }, FormMethod.Post, new { @class = "d-inline" }))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        @Html.Hidden("attachmentId", att.Id)
                                                        @Html.Hidden("applicationId", Model.Id)
                                                        <button type="submit" class="btn btn-sm btn-outline-danger border-0" onclick="return confirm('هل أنت متأكد من حذف هذا المرفق؟')">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            { <div class="text-center text-muted py-3">لا توجد مرفقات.</div>}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- العمود الأيسر: المشرف وأدوات الطباعة -->
        <div class="col-lg-4">

            <!-- 💡 1. بطاقة المشرف -->
            <div class="card shadow-sm border-0 h-100 mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                    <h6 class="mb-0 fw-bold"><i class="bi bi-briefcase me-2"></i> المحامي المشرف</h6>
                    @* زر التغيير يظهر دائماً *@
                    <button class="btn btn-sm btn-outline-primary rounded-pill" data-bs-toggle="modal" data-bs-target="#supervisorSearchModal">
                        <i class="bi bi-search"></i> @(Model.Supervisor == null ? "تعيين" : "تغيير")
                    </button>
                </div>
                <div class="card-body">
                    @if (Model.Supervisor != null)
                    {
                        <div class="text-center mb-3">
                            <div class="position-relative d-inline-block mb-2">
                                @* صورة المشرف *@
                                <img src="@(!string.IsNullOrEmpty(Model.Supervisor.PersonalPhotoPath) ? Url.Content(Model.Supervisor.PersonalPhotoPath) : "/Content/Images/default-avatar.png")"
                                     class="rounded-circle border p-1" style="width: 70px; height: 70px; object-fit: cover;">
                            </div>
                            <h6 class="fw-bold mb-0">
                                @* رابط لملف المشرف *@
                                <a href="@Url.Action("Details", "RegisteredTrainees", new { id = Model.Supervisor.Id })" target="_blank" class="text-decoration-none text-dark">
                                    @Model.Supervisor.ArabicName <i class="bi bi-box-arrow-up-right small text-muted ms-1"></i>
                                </a>
                            </h6>
                            <small class="text-muted">عضوية رقم: @Model.Supervisor.Id</small>
                        </div>
                        <ul class="list-group list-group-flush small">
                            <li class="list-group-item d-flex justify-content-between">
                                <span>الحالة النقابية</span>
                                <span class="badge bg-success">مزاول</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>تاريخ المزاولة</span>
                                <span>@Model.Supervisor.SubmissionDate.ToString("yyyy-MM-dd")</span>
                            </li>
                        </ul>
                    }
                    else
                    {
                        // --- حالة عدم وجود مشرف: عرض تنبيه وزر كبير ---
                        <div class="text-center py-4">
                            <div class="text-muted mb-3">
                                <i class="bi bi-person-x fs-1 d-block opacity-50"></i>
                                <span class="d-block mt-2 fw-bold">لم يتم تعيين مشرف بعد</span>
                                <span class="small text-danger">مطلوب للموافقة على الطلب</span>
                            </div>

                            <!-- زر اختيار مشرف (كبير وواضح) -->
                            <button class="btn btn-primary rounded-pill px-4 shadow-sm" data-bs-toggle="modal" data-bs-target="#supervisorSearchModal">
                                <i class="bi bi-person-plus-fill me-2"></i> اختيار مشرف
                            </button>
                        </div>
                    }
                </div>
            </div>

            <!-- 2. بطاقة الطباعة والتقارير -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white fw-bold py-3">
                    <i class="bi bi-printer me-2"></i> الطباعة والتقارير
                </div>
                <div class="card-body d-grid gap-2">
                    <a href="@Url.Action("PrintReport", new { id = Model.Id })" target="_blank" class="btn btn-outline-secondary">
                        <i class="bi bi-file-earmark-text me-2"></i> التقرير العام
                    </a>

                    @* زر طباعة نموذج التدريب للتوقيع *@
                    <a href="@Url.Action("PrintApplicationForm", new { id = Model.Id })" target="_blank" class="btn btn-outline-primary fw-bold">
                        <i class="bi bi-file-pdf me-2"></i> نموذج التدريب (للتوقيع)
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Modal: إضافة مؤهل -->
<div class="modal fade" id="addQualificationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("AddQualification", "GraduateApplications", new { area = "Admin" }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("Id", Model.Id)
                <div class="modal-header">
                    <h5 class="modal-title">إضافة مؤهل علمي</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">نوع المؤهل</label>
                        @if (ViewBag.QualificationTypes != null)
                        {
                            @Html.DropDownList("NewQualification.QualificationTypeId", (SelectList)ViewBag.QualificationTypes, "اختر...", new { @class = "form-select", required = "required" })
                        }
                        else
                        {
                            <div class="alert alert-danger">خطأ: القوائم غير محملة.</div>
                        }
                    </div>
                    <div class="row g-2">
                        <div class="col-6 mb-3"><label>الجامعة</label><input type="text" name="NewQualification.UniversityName" class="form-control" required></div>
                        <div class="col-6 mb-3"><label>الكلية</label><input type="text" name="NewQualification.Faculty" class="form-control"></div>
                        <div class="col-6 mb-3"><label>التخصص</label><input type="text" name="NewQualification.Specialization" class="form-control" required></div>
                        <div class="col-6 mb-3"><label>سنة التخرج</label><input type="number" name="NewQualification.GraduationYear" class="form-control" required></div>
                        <div class="col-12 mb-3"><label>المعدل (اختياري)</label><input type="number" step="0.01" name="NewQualification.GradePercentage" class="form-control" placeholder="مثال: 85.5"></div>
                    </div>
                </div>
                <div class="modal-footer"><button type="submit" class="btn btn-primary">حفظ</button></div>
            }
        </div>
    </div>
</div>

<!-- Modal: إضافة مرفق -->
<div class="modal fade" id="addAttachmentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("AddAttachment", "GraduateApplications", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("Id", Model.Id)
                <div class="modal-header">
                    <h5 class="modal-title">رفع وثيقة جديدة</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">نوع المرفق</label>
                        @if (ViewBag.AttachmentTypes != null)
                        {
                            @Html.DropDownList("NewAttachmentTypeId", (SelectList)ViewBag.AttachmentTypes, "اختر...", new { @class = "form-select", required = "required" })
                        }
                        else
                        {
                            <div class="alert alert-warning">قائمة أنواع المرفقات غير متوفرة.</div>
                        }
                    </div>
                    <div class="mb-3">
                        <label class="form-label">الملف</label>
                        <input type="file" name="NewAttachmentFile" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer"><button type="submit" class="btn btn-primary">رفع</button></div>
            }
        </div>
    </div>
</div>

<!-- Modal: إعادة للاستكمال -->
<div class="modal fade" id="returnModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("SubmitDecision", "GraduateApplications", new { id = Model.Id }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="decision" value="Return" />
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title fw-bold">إعادة الطلب لاستكمال النواقص</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-light border-warning small">
                        <i class="bi bi-info-circle me-1"></i> سيتم إعادة حالة الطلب إلى "بانتظار استكمال النواقص" وسيظهر للمتدرب في حسابه لتعديله.
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">ما هي النواقص/الملاحظات؟ <span class="text-danger">*</span></label>
                        <textarea name="notes" class="form-control" rows="4" required placeholder="مثال: صورة الهوية غير واضحة، يجب رفع نموذج التدريب موقعاً، ..."></textarea>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-warning fw-bold">تأكيد الإعادة</button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal: الرفض النهائي -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("SubmitDecision", "GraduateApplications", new { id = Model.Id }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="decision" value="Reject" />
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title fw-bold">رفض الطلب نهائياً</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger small">
                        <i class="bi bi-exclamation-triangle-fill me-1"></i> تحذير: سيتم إغلاق الطلب نهائياً ولن يتمكن الخريج من تعديله. استخدم "الإعادة" للنواقص البسيطة.
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">سبب الرفض <span class="text-danger">*</span></label>
                        <textarea name="notes" class="form-control" rows="3" required placeholder="سبب الرفض القاطع..."></textarea>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-danger fw-bold">تأكيد الرفض</button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal: البحث عن مشرف (تعيين) -->
<div class="modal fade" id="supervisorSearchModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @using (Html.BeginForm("AssignSupervisor", "GraduateApplications", new { area = "Admin" }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("applicationId", Model.Id)
                @Html.Hidden("supervisorId", "", new { id = "targetSupervisorId" })

                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">تعيين محامي مشرف</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="input-group mb-3">
                        <input type="text" id="supervisorSearchInput" class="form-control" placeholder="ابحث بالاسم، رقم الهوية، أو رقم العضوية...">
                        <button class="btn btn-primary" type="button" id="btnPerformSearch">بحث</button>
                    </div>

                    <div id="supervisorSearchResults" class="list-group" style="max-height: 300px; overflow-y: auto;">
                        <!-- النتائج تظهر هنا -->
                        <div class="text-center text-muted py-3">يرجى البحث لعرض النتائج</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // منطق البحث عن المشرف داخل المودال
            $('#btnPerformSearch').click(function () {
                var term = $('#supervisorSearchInput').val();
                var list = $('#supervisorSearchResults');

                if (term.length < 2) {
                    alert("يرجى إدخال حرفين على الأقل للبحث.");
                    return;
                }

                list.html('<div class="list-group-item text-center py-3"><span class="spinner-border spinner-border-sm"></span> جاري البحث...</div>');

                $.get('@Url.Action("SearchSupervisors", "GraduateApplications", new { area = "Admin" })', { searchTerm: term }, function (data) {
                    list.empty();
                    if (data.success && data.supervisors.length > 0) {
                        $.each(data.supervisors, function (i, item) {
                            var isEligible = item.isEligible;
                            var reason = item.ineligibilityReason || "";

                            var itemHtml = '';
                            if (isEligible) {
                                itemHtml = `<button type="submit" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" onclick="$('#targetSupervisorId').val(${item.id})">
                                                <div>
                                                    <div class="fw-bold">${item.name}</div>
                                                    <small class="text-muted">مزاول منذ: ${item.practiceDate}</small>
                                                </div>
                                                <span class="badge bg-success rounded-pill">اختيار</span>
                                            </button>`;
                            } else {
                                itemHtml = `<div class="list-group-item list-group-item-light text-muted d-flex justify-content-between align-items-center opacity-75">
                                                <div>
                                                    <div class="fw-bold text-decoration-line-through">${item.name}</div>
                                                    <small class="text-danger"><i class="bi bi-x-circle"></i> ${reason}</small>
                                                </div>
                                                <span class="badge bg-secondary rounded-pill">غير مؤهل</span>
                                            </div>`;
                            }
                            list.append(itemHtml);
                        });
                    } else {
                        list.html('<div class="list-group-item text-center text-danger py-3">' + (data.message || 'لا توجد نتائج') + '</div>');
                    }
                });
            });
        });
    </script>
}