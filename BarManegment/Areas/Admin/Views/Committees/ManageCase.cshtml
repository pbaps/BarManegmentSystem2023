@model BarManegment.Models.CommitteeCase

@{
    ViewBag.Title = "إدارة الملف: " + Model.CaseNumber;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4 border-bottom-primary">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h4 class="text-primary font-weight-bold">ملف رقم: @Model.CaseNumber</h4>
                <h5 class="text-gray-800">الموضوع: @Model.Subject</h5>
                <p class="mb-0"><i class="bi bi-person"></i> صاحب العلاقة: <strong>@Model.ComplainantName</strong></p>
            </div>
            <div class="col-md-4 text-start">
                <a href="@Url.Action("Details", "Committees", new { id = Model.CommitteeId })" class="btn btn-secondary">
                    <i class="bi bi-arrow-right"></i> عودة للجنة
                </a>
                <span class="badge bg-warning text-dark p-2 mt-2 d-block">الحالة: @Model.Status</span>
            </div>
        </div>
    </div>
</div>

<div class="row">

    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary"><i class="bi bi-calendar-week"></i> سير الجلسات والمحاضر</h6>
                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addSessionModal">
                    <i class="bi bi-plus-lg"></i> جلسة جديدة
                </button>
            </div>
            <div class="card-body">
                @if (Model.Sessions == null || !Model.Sessions.Any())
                {
                    <div class="alert alert-info">لم يتم تحديد أي جلسات لهذا الملف بعد.</div>
                }
                else
                {
                    <div class="timeline">
                        @foreach (var session in Model.Sessions.OrderBy(s => s.SessionDate))
                        {
                            <div class="card mb-3 border-left-@((session.IsCompleted) ? "success" : "warning")">
                                <div class="card-header bg-light">
                                    <div class="d-flex justify-content-between">
                                        <strong>@session.Title</strong>
                                        <span><i class="bi bi-clock"></i> @session.SessionDate.ToShortDateString()</span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    @if (session.IsCompleted)
                                    {
                                        <p><strong>المحضر:</strong> @session.Minutes</p>
                                        <div class="alert alert-secondary p-2 mb-0">
                                            <strong>القرار:</strong> @session.InterimDecision
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted font-italic">الجلسة مجدولة ولم تنعقد بعد.</p>
                                        <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#editSession-@session.Id">
                                            <i class="bi bi-pencil-square"></i> تدوين المحضر والقرار
                                        </button>

                                        <div class="modal fade" id="editSession-@session.Id" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    @using (Html.BeginForm("UpdateSession", "Committees", new { area = "Admin" }, FormMethod.Post))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="sessionId" value="@session.Id" />
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">تدوين محضر الجلسة</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="mb-3">
                                                                <label>نص المحضر</label>
                                                                <textarea name="minutes" class="form-control" rows="4" required>@session.Minutes</textarea>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label>القرار المتخذ (تأجيل/حجز..)</label>
                                                                <input type="text" name="decision" class="form-control" value="@session.InterimDecision" required />
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="isCompleted" value="true" checked>
                                                                <label class="form-check-label">إغلاق الجلسة (تمت)</label>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="submit" class="btn btn-success">حفظ</button>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">

        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-info text-white">
                <h6 class="m-0 font-weight-bold"><i class="bi bi-paperclip"></i> المستندات والمرفقات</h6>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush mb-3">
                    @foreach (var doc in Model.Documents)
                    {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
 
                            <a href="@Url.Action("ViewDocument", "Committees", new { area = "Admin", id = doc.Id })" target="_blank" class="text-decoration-none fw-bold">
                                <i class="bi bi-file-earmark-text text-primary me-1"></i> @doc.Description
                            </a>
                            <br /><small class="text-muted">@doc.UploadDate.ToShortDateString()</small>
                        </div>
                    </li>
                    }
                </ul>

                <hr />
                <h6>إرفاق ملف جديد:</h6>
                @using (Html.BeginForm("UploadDocument", "Committees", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="caseId" value="@Model.Id" />
                    <div class="mb-2">
                        <input type="text" name="description" class="form-control form-control-sm" placeholder="اسم الملف/الوصف" required />
                    </div>
                    <div class="mb-2">
                        <input type="file" name="file" class="form-control form-control-sm" required />
                    </div>
                    <button type="submit" class="btn btn-sm btn-secondary w-100">رفع الملف</button>
                }
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-success text-white">
                <h6 class="m-0 font-weight-bold"><i class="bi bi-send-check"></i> التوصية النهائية للمجلس</h6>
            </div>
            <div class="card-body text-center">
                @if (Model.Status == "تم الرفع للمجلس")
                {
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle-fill display-4"></i>
                        <p class="mt-2">تم رفع الملف للمجلس.</p>
                        <small>التوصية: @Model.FinalRecommendation</small>
                    </div>
                }
                else
                {
                    <p class="text-muted">بعد الانتهاء من الجلسات، يمكنك رفع التوصية من هنا.</p>
                    <button class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#finalRecModal">
                        رفع التوصية وإغلاق الملف
                    </button>

                    <div class="modal fade" id="finalRecModal" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                @using (Html.BeginForm("SendRecommendation", "Committees", new { area = "Admin" }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="caseId" value="@Model.Id" />
                                    <div class="modal-header text-start">
                                        <h5 class="modal-title">رفع التوصية للمجلس</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body text-start">
                                        <label>نص التوصية:</label>
                                        <textarea name="recommendationText" class="form-control" rows="5" required></textarea>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-success">إرسال</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="addSessionModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("AddSession", "Committees", new { area = "Admin" }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="caseId" value="@Model.Id" />
                <div class="modal-header">
                    <h5 class="modal-title">تحديد موعد جلسة جديدة</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>تاريخ الجلسة</label>
                        <input type="date" name="date" class="form-control" required value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="mb-3">
                        <label>الغرض من الجلسة (العنوان)</label>
                        <input type="text" name="title" class="form-control" placeholder="مثال: استدعاء الشهود" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-primary">حفظ الموعد</button>
                </div>
            }
        </div>
    </div>
</div>
