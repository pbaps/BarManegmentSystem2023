@model IEnumerable<BarManegment.Models.Account>
@{ ViewBag.Title = "دليل الحسابات"; }

<div class="card p-3">
    <div class="d-flex justify-content-between mb-3">
        <h4>دليل الحسابات (الأطراف المالية)</h4>
        <a href="@Url.Action("CreateAccount")" class="btn btn-primary"><i class="bi bi-plus"></i> إضافة حساب جديد</a>
    </div>
    <table class="table table-striped table-sm">
        <thead class="table-dark">
            <tr>
                <th>الكود</th>
                <th>اسم الحساب</th>
                <th>النوع</th>
                <th>حركي؟</th>
                <th>إجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.Code</td>
                    <td style="padding-right: @(item.Level * 15)px">
                        @if (!item.IsTransactional)
                        {<i class="bi bi-folder-fill text-warning me-1"></i> }
                        else
                        { <i class="bi bi-file-text me-1"></i>}
                        @item.Name
                    </td>
                    <td>@item.AccountType</td>
                    <td>@(item.IsTransactional ? "نعم" : "رئيسي")</td>
                    <td>
                        <a href="@Url.Action("EditAccount", new { id = item.Id })" class="btn btn-sm btn-outline-secondary"><i class="bi bi-pencil"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
