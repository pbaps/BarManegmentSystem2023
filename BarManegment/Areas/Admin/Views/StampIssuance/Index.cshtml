@model BarManegment.Areas.Admin.ViewModels.StampIssuanceViewModel
@{
    ViewBag.Title = "صرف دفاتر الطوابع";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
    <style>
        .select2-container--bootstrap-5 .select2-selection {
            min-height: 58px;
        }

        .modal {
            z-index: 1055;
        }

        .select2-container {
            z-index: 1060;
        }
    </style>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h5 class="m-0 font-weight-bold text-primary">صرف دفاتر الطوابع (دفع نقدي فوري)</h5>
    </div>
    @using (Html.BeginForm("Index", "StampIssuance", new { area = "Admin" }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="card-body">
            <p class="text-muted">هذه الشاشة مخصصة لعملية الصرف النقدي المباشر. سيتم إنشاء القسيمة والإيصال وتفعيل الدفاتر في خطوة واحدة.</p>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">1. اختر المتعهد</label>
                        @Html.DropDownListFor(m => m.SelectedContractorId, Model.ContractorsList, "-- اختر المتعهد --", new { @class = "form-select", required = "required" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">2. اختر الدفاتر (يمكن اختيار أكثر من دفتر)</label>
                        <select name="SelectedBookIds" id="booksSelect" class="form-select" multiple="multiple" required>
                            @foreach (var book in Model.AvailableBooksList)
                            {
                                <option value="@book.Id">
                                    (من @book.StartSerial إلى @book.EndSerial) -
                                    الكمية: @book.Quantity -
                                    الفئة: @book.ValuePerStamp.ToString("N0")
                                </option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <button type="submit" class="btn btn-success btn-lg">
                <i class="bi bi-cash-coin"></i> استلام المبلغ وصرف الدفاتر
            </button>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#booksSelect').select2({
                theme: "bootstrap-5",
                placeholder: "اختر دفتر واحد أو أكثر",
                allowClear: true,
                dir: "rtl"
            });
        });
    </script>
}