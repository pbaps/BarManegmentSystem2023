@model BarManegment.Areas.Admin.ViewModels.RecordOralExamResultViewModel
@{
    ViewBag.Title = "رصد نتيجة الاختبار الشفوي";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-pencil-fill me-2"></i> رصد النتيجة</h5>
                </div>
                <div class="card-body p-4">

                    <div class="alert alert-light border mb-4">
                        <strong>المتدرب:</strong> @Model.TraineeName <br>
                        <strong>اللجنة:</strong> @Model.CommitteeName <br>
                        <strong>تاريخ الامتحان:</strong> @Model.ExamDate.ToString("yyyy-MM-dd")
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.EnrollmentId)
                        @Html.HiddenFor(m => m.CommitteeId)
                        @Html.HiddenFor(m => m.TraineeName)

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Result, new { @class = "form-label fw-bold" })
                            @Html.DropDownListFor(m => m.Result, (SelectList)ViewBag.ResultsList, "--- اختر النتيجة ---", new { @class = "form-select form-select-lg" })
                            @Html.ValidationMessageFor(m => m.Result, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Score, new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.Score, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.1", max = "100" } })
                            @Html.ValidationMessageFor(m => m.Score, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-4">
                            @Html.LabelFor(m => m.Notes, new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", rows = "3", placeholder = "ملاحظات اللجنة..." })
                        </div>

                        <!-- 💡 التعديل هنا: نص توضيحي يوضح أن الخطوة التالية هي اليمين -->
                        <div class="alert alert-info small">
                            <i class="bi bi-check-circle-fill me-1"></i>
                            في حال اختيار <strong>"ناجح"</strong>، سيتم تحديث سجل الامتحانات للمتدرب، وسيصبح مؤهلاً لتقديم طلب <strong>أداء اليمين القانونية</strong> (بشرط استيفاء باقي المتطلبات).
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary fw-bold">حفظ النتيجة</button>
                            <a href="@Url.Action("Details", new { id = Model.CommitteeId })" class="btn btn-outline-secondary">إلغاء</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>