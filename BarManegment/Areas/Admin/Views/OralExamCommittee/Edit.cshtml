@model BarManegment.Areas.Admin.ViewModels.OralExamCommitteeViewModel
@{
    ViewBag.Title = "تعديل لجنة الاختبار الشفوي";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="card">
        <div class="card-header">
            <h4>@ViewBag.Title: @Model.CommitteeName</h4>
        </div>

        @using (Html.BeginForm("Edit", "OralExamCommittee", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id) // مهم جداً للتعديل

            <div class="card-body">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="alert alert-warning">
                    <strong>تنبيه:</strong> سيتم حذف جميع الأعضاء الحاليين للجنة وإعادة إضافتهم بناءً على اختياراتك الجديدة.
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.CommitteeName, new { @class = "form-label" }) <span class="text-danger">*</span>
                        @Html.EditorFor(m => m.CommitteeName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.CommitteeName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-4 mb-3">
                        @Html.LabelFor(m => m.FormationDate, new { @class = "form-label" }) <span class="text-danger">*</span>
                        @Html.EditorFor(m => m.FormationDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(m => m.FormationDate, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2 mb-3 align-self-center pt-3">
                        <div class="form-check form-switch">
                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input", role = "switch" })
                            @Html.LabelFor(m => m.IsActive, new { @class = "form-check-label" })
                        </div>
                    </div>
                </div>

                <hr />
                <h5 class="mt-3">أعضاء اللجنة</h5>
                @Html.ValidationMessageFor(m => m.Members, "", new { @class = "text-danger" })

                <div id="membersContainer">
                    @* عرض الأعضاء المحفوظين مسبقاً *@
                    @for (int i = 0; i < Model.Members.Count; i++)
                    {
                        @Html.Partial("_OralExamMemberEditorRow", Model.Members[i], new ViewDataDictionary {
                            { "Index", i },
                            { "AvailableMembers", Model.AvailableMembers },
                            { "AvailableRoles", Model.AvailableRoles }
                        })
                    }
                </div>

                <button type="button" id="addMemberBtn" class="btn btn-outline-secondary btn-sm mt-2">
                    <i class="bi bi-plus-circle me-1"></i> إضافة عضو آخر
                </button>

            </div>
            <div class="card-footer text-end">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save-fill me-1"></i> حفظ التعديلات
                </button>
                @Html.ActionLink("إلغاء", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @* كود JavaScript لإضافة/حذف الأعضاء ديناميكياً (نفس كود Create.cshtml) *@
    <script>
         $(document).ready(function () {
            // ... (نفس كود JQuery الخاص بـ Create.cshtml لإضافة وحذف الصفوف) ...
            $("#addMemberBtn").click(function (e) { /* ... */ });
            $("#membersContainer").on("click", ".remove-member-btn", function (e) { /* ... */ });
         });
    </script>
}
