@model IEnumerable<BarManegment.Models.GraduateApplication>
@{
    ViewBag.Title = "سداد أقساط القروض";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2><i class="bi bi-wallet2 me-2"></i> @ViewBag.Title</h2>
<p class="text-muted">
    ابحث عن المحامي (بالاسم، رقم العضوية، أو الهوية) لعرض قسائم الأقساط المستحقة عليه وتسديدها.
</p>
<hr />

@using (Html.BeginForm("Index", "LoanPayments", FormMethod.Get, new { @class = "row g-3 mb-3" }))
{
    <div class="col-md-8">
        <input type="text" name="searchString" class="form-control" placeholder="ابحث بالاسم، رقم العضوية، أو الهوية..." value="@ViewBag.SearchString" />
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn btn-info w-100">
            <i class="bi bi-search"></i> بحث
        </button>
    </div>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>الاسم</th>
            <th>رقم العضوية</th>
            <th>الحالة</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ArabicName</td>
                <td>@item.MembershipId</td>
                <td>@item.ApplicationStatus.Name</td>
                <td>
                    @Html.ActionLink("عرض الأقساط المستحقة", "LawyerInstallments", new { id = item.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
