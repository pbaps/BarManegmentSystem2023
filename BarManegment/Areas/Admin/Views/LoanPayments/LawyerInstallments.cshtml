 
@model IEnumerable<BarManegment.Models.LoanInstallment>
@{
    var lawyer = (BarManegment.Models.GraduateApplication)ViewBag.Lawyer;
    ViewBag.Title = "الأقساط المستحقة - " + lawyer.ArabicName;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<p class="text-muted">
    رقم العضوية: @lawyer.MembershipId
</p>

@Html.ActionLink("العودة للبحث", "Index", null, new { @class = "btn btn-outline-secondary mb-3" })
<hr />

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ViewBag.SuccessMessage

        @* (إضافة زر طباعة الإيصال) *@
        @if (TempData["PrintReceiptUrl"] != null)
        {
            <a href="@TempData["PrintReceiptUrl"]" target="_blank" class="btn btn-warning btn-sm float-end me-5 fw-bold">
                <i class="bi bi-printer-fill me-1"></i> طباعة الإيصال
            </a>
        }
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>رقم القرض</th>
            <th>نوع القرض</th>
            <th>رقم القسط</th>
            <th>تاريخ الاستحقاق</th>
            <th>المبلغ</th>
            <th>رقم القسيمة</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted p-4">
                    لا يوجد أقساط مستحقة (قسائم "صادرة") لهذا المحامي.
                </td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr class="table-warning">
                <td>@item.LoanApplicationId</td>
                <td>@item.LoanApplication.LoanType.Name</td>
                <td>@item.InstallmentNumber</td>
                <td>@item.DueDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Amount.ToString("N2")</td>
                <td>@item.PaymentVoucherId</td>
                <td>
                    @Html.ActionLink("تسجيل السداد (إصدار إيصال)", "CreateReceipt", new { id = item.Id }, new { @class = "btn btn-sm btn-success" })
                </td>
            </tr>
        }
    </tbody>
</table>
