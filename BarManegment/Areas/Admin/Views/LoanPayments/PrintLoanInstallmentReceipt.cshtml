@section styles {
    <style>

        .receipt-print-container {
            border: 2px solid #000;
            padding: 15px;
            margin: 15px;
            font-family: 'Cairo', sans-serif;
            font-weight: bold;
        }

        .header-grid {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1fr;
            gap: 5px;
            margin-bottom: 10px;
        }

        .header-item {
            border: 1px solid #000;
            padding: 5px;
            text-align: center;
        }

            .header-item.logo {
                text-align: right;
                border: none;
                padding: 0;
            }

            .header-item img {
                max-height: 50px;
            }

            .header-item label {
                display: block;
                font-size: 0.9em;
                color: #555;
            }

        .main-grid {
            display: grid;
            grid-template-columns: repeat(6, 1fr);
            gap: 5px;
            margin-bottom: 10px;
        }

        .main-item {
            border: 1px solid #000;
            padding: 5px;
            text-align: center;
        }

            .main-item label {
                display: block;
                font-size: 0.9em;
                color: #555;
            }

        .footer-line {
            border-bottom: 2px solid #000;
            margin: 15px 0;
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            padding-bottom: 5px;
        }

        @@media print {
            .receipt-print-container {
                border: none;
                margin: 0;
                padding: 0;
            }

            .print-footer-layout {
                display: none;
            }
        }
    </style>
}

