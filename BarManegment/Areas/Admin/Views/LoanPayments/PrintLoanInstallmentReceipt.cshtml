@helper RenderReceiptBody(string copyName)
{
    <div class="receipt-print-container">
        <div class="header-grid">
            <div class="logo-container logo">
                @* (يمكن إضافة الشعار هنا إذا أردت) *@
                <strong>نقابة المحامين الفلسطينيين</strong><br />
                <small>PALESTINIAN BAR ASSOCIATION</small>
            </div>
            <div class="header-item">
                <label>بنك فلسطين - الرمال / رقم حساب:</label>
                <div>(رقم الحساب)</div>
            </div>
            <div class="header-item">
                <label>رقم الإيصال</label>
                <div>@Model.ReceiptFullNumber</div>
            </div>
            <div class="header-item">
                <label>تاريخ السداد</label>
                <div>@Model.PaymentDate.ToString("yyyy-MM-dd")</div>
            </div>
        </div>

        <div class="main-grid">
            <div class="main-item">
                <label>رقم القرض</label>
                <div>@Model.LoanId</div>
            </div>
            <div class="main-item">
                <label>قيمة القرض</label>
                <div>(قيمة القرض الكلية)</div> @* (ملاحظة: نحتاج لإضافة هذا للـ ViewModel) *@
            </div>
            <div class="main-item">
                <label>العملة</label>
                <div>@Model.CurrencySymbol</div>
            </div>
            <div class="main-item">
                <label>عدد الأقساط</label>
                <div>(إجمالي الأقساط)</div> @* (ملاحظة: نحتاج لإضافة هذا للـ ViewModel) *@
            </div>
            <div class="main-item">
                <label>رقم القسط</label>
                <div>@Model.InstallmentNumber</div>
            </div>
            <div class="main-item">
                <label>رقم وصل البنك</label>
                <div>@Model.BankReceiptNumber</div>
            </div>
        </div>

        <div class="footer-line">
            <strong>اسم المحامي/</strong> @Model.LawyerName
            <strong>آخر موعد للدفع/</strong> @Model.PaymentDate.ToString("yyyy/MM/dd")
        </div>
        <div class="footer-line">
            <strong>مبلغ الدفع/</strong> @Model.AmountPaid.ToString("N2") @Model.CurrencySymbol
        </div>
        <div class="footer-line">
            <strong>المبلغ بالكلمات/</strong> @Model.AmountInWords
        </div>
        <div class="footer-line">
            <strong>الموظف/</strong> @Model.EmployeeName
            <strong>توقيع/</strong> .......................
        </div>

        <p class="text-center mt-3">(@copyName)</p>
    </div>
}

