@model BarManegment.Areas.Admin.ViewModels.LawyerProfileViewModel
@using BarManegment.Models
@{
    ViewBag.Title = "ملف المحامي: " + Model.ArabicName;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    // استلام البيانات الإضافية من ViewBag
    var loans = ViewBag.Loans as List<LoanApplication>;
}

<div class="container-fluid pt-4 px-4">

    <!-- 1. بطاقة التعريف (محامي) -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <!-- الصورة -->
                <div class="col-auto">
                    <div class="position-relative">
                        <img src="@(!string.IsNullOrEmpty(Model.PersonalPhotoPath) ? Url.Content(Model.PersonalPhotoPath) : "/Content/Images/default-avatar.png")"
                             class="rounded-circle border border-3 border-warning shadow-sm"
                             style="width: 130px; height: 130px; object-fit: cover;">
                        <span class="position-absolute bottom-0 start-100 translate-middle p-2 border border-light rounded-circle bg-success">
                            <span class="visually-hidden">Active</span>
                        </span>
                    </div>
                </div>

                <!-- المعلومات -->
                <div class="col">
                    <div class="d-flex align-items-center mb-1">
                        <h2 class="fw-bold text-dark mb-0">@Model.ArabicName</h2>
                        <span class="badge bg-primary ms-3 rounded-pill">@Model.Status</span>
                    </div>
                    <!-- 💡 عرض الاسم الإنجليزي هنا -->
                    <p class="text-muted mb-2 fs-5">@Model.EnglishName</p>

                    <div class="d-flex flex-wrap gap-3 text-secondary mt-2">
                        <span class="badge bg-dark text-warning border border-warning p-2">
                            <i class="bi bi-star-fill me-1"></i> رقم العضوية: <span class="font-monospace fs-6">@(Model.MembershipId ?? "---")</span>
                        </span>
                        <span class="d-flex align-items-center"><i class="bi bi-card-heading me-1 text-muted"></i> الهوية: @Model.NationalIdNumber</span>
                        <span class="d-flex align-items-center"><i class="bi bi-calendar-check me-1 text-muted"></i> تاريخ المزاولة: @(Model.PracticeStartDate?.ToString("yyyy-MM-dd") ?? "---")</span>
                        <span class="d-flex align-items-center"><i class="bi bi-geo-alt me-1 text-muted"></i> @(Model.ContactInfo?.Governorate ?? "---")</span>
                    </div>
                </div>

                <!-- الإجراءات -->
                <div class="col-auto text-end">
                    <div class="dropdown">
                        <button class="btn btn-dark dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-gear-fill me-1"></i> إجراءات المحامي
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><h6 class="dropdown-header">إدارة الملف</h6></li>
                            <li><a class="dropdown-item" href="@Url.Action("Edit", "GraduateApplications", new { area = "Admin", id = Model.Id })"><i class="bi bi-pencil-square me-2"></i> تعديل البيانات</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Create", "PracticingLawyerRenewals", new { area = "Admin", id = Model.Id })"><i class="bi bi-arrow-repeat me-2"></i> تجديد المزاولة</a></li>

                            <li><hr class="dropdown-divider"></li>
                            <li><h6 class="dropdown-header">طباعة</h6></li>
                            <li><a class="dropdown-item" href="@Url.Action("PrintPracticingCard", "OathCeremony", new { area = "Admin", id = Model.Id })" target="_blank"><i class="bi bi-person-badge me-2"></i> بطاقة المزاولة</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("PrintLicenseCertificate", "OathCeremony", new { area = "Admin", id = Model.Id })" target="_blank"><i class="bi bi-award me-2"></i> شهادة الإجازة</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- العمود الأيمن: البيانات الرئيسية -->
        <div class="col-lg-8">

            <!-- تبويبات المعلومات -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom pt-3 px-4">
                    <ul class="nav nav-tabs card-header-tabs" id="lawyerTabs" role="tablist">
                        <li class="nav-item"><button class="nav-link active fw-bold" data-bs-toggle="tab" data-bs-target="#finance">المالية والتجديد</button></li>
                        <li class="nav-item"><button class="nav-link fw-bold" data-bs-toggle="tab" data-bs-target="#trainees">المتدربين (@Model.MyTrainees.Count)</button></li>
                        <li class="nav-item"><button class="nav-link fw-bold" data-bs-toggle="tab" data-bs-target="#loans">القروض</button></li>
                        <li class="nav-item"><button class="nav-link fw-bold" data-bs-toggle="tab" data-bs-target="#info">البيانات الشخصية</button></li>
                        <li class="nav-item"><button class="nav-link fw-bold" data-bs-toggle="tab" data-bs-target="#docs">الأرشيف والوثائق</button></li>
                    </ul>
                </div>
                <div class="card-body p-4">
                    <div class="tab-content">

                        <!-- 1. المالية والتجديد -->
                        <div class="tab-pane fade show active" id="finance">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="fw-bold text-success m-0"><i class="bi bi-patch-check-fill me-2"></i> سجل تجديدات المزاولة</h6>
                                <a href="@Url.Action("Create", "PracticingLawyerRenewals", new { area = "Admin", id = Model.Id })" class="btn btn-sm btn-outline-success"><i class="bi bi-plus-lg"></i> تجديد جديد</a>
                            </div>

                            @if (Model.PracticingRenewals != null && Model.PracticingRenewals.Any())
                            {
                                <table class="table table-bordered table-sm mb-4">
                                    <thead class="table-light"><tr><th>سنة التجديد</th><th>تاريخ الدفع</th><th>رقم الإيصال</th><th>الحالة</th></tr></thead>
                                    <tbody>
                                        @foreach (var r in Model.PracticingRenewals)
                                        {
                                            <tr>
                                                <td class="fw-bold">@r.RenewalYear</td>
                                                <td>@(r.RenewalDate.ToString("yyyy-MM-dd"))</td>
                                                <td class="font-monospace">@(r.Receipt?.ReceiptNumber ?? "-")</td>
                                                <td>
                                                    @if (r.IsActive)
                                                    {<span class="badge bg-success">نشط</span> }
                                                    else
                                                    { <span class="badge bg-secondary">أرشيف</span>}
                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            { <div class="alert alert-light text-center border mb-4">لا يوجد سجلات تجديد سابقة.</div>}

                            <hr />
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="fw-bold text-primary m-0"><i class="bi bi-receipt me-2"></i> سجل الإيصالات المالية</h6>
                                <a href="@Url.Action("Create", "PaymentVouchers", new { area = "Admin", id = Model.Id })" class="btn btn-sm btn-outline-primary"><i class="bi bi-plus-lg"></i> قسيمة عامة</a>
                            </div>
                            @if (Model.PaymentHistory != null && Model.PaymentHistory.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle">
                                        <thead class="table-light"><tr><th>رقم الإيصال</th><th>التاريخ</th><th>المبلغ</th><th>التفاصيل</th><th>طباعة</th></tr></thead>
                                        <tbody>
                                            @foreach (var receipt in Model.PaymentHistory)
                                            {
                                                <tr>
                                                    <td class="font-monospace">@receipt.ReceiptNumber</td>
                                                    <td>@receipt.BankPaymentDate.ToString("yyyy-MM-dd")</td>
                                                    <td class="fw-bold text-success">@receipt.PaymentVoucher.TotalAmount.ToString("N0")</td>
                                                    <td class="small text-muted">
                                                        <ul class="list-unstyled mb-0">
                                                            @if (receipt.PaymentVoucher != null && receipt.PaymentVoucher.VoucherDetails != null)
                                                            {
                                                                foreach (var d in receipt.PaymentVoucher.VoucherDetails)
                                                                {
                                                                    <li>- @d.FeeType.Name</li>
}
                                                            }
                                                        </ul>
                                                    </td>
                                                    <td><a href="@Url.Action("Details", "Receipts", new { area = "Admin", id = receipt.Id })" target="_blank" class="btn btn-sm btn-secondary"><i class="bi bi-printer"></i></a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            { <div class="text-center text-muted py-3">لا يوجد إيصالات.</div>}
                        </div>

                        <!-- 2. المتدربين -->
                        <div class="tab-pane fade" id="trainees">
                            <div class="row">
                                <div class="col-md-8">
                                    <h6 class="fw-bold mb-3 text-primary">المتدربون الحاليون تحت الإشراف</h6>
                                    @if (Model.MyTrainees != null && Model.MyTrainees.Any())
                                    {
                                        <div class="list-group">
                                            @foreach (var t in Model.MyTrainees)
                                            {
                                                <a href="@Url.Action("Details", "RegisteredTrainees", new { id = t.Id })" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" target="_blank">
                                                    <div>
                                                        <div class="fw-bold">@t.ArabicName</div>
                                                        <small class="text-muted"><i class="bi bi-calendar2-check me-1"></i> تاريخ البدء: @(t.TrainingStartDate?.ToString("yyyy-MM-dd") ?? "-")</small>
                                                    </div>
                                                    <span class="badge bg-light text-dark border">@t.TraineeSerialNo</span>
                                                </a>
                                            }
                                        </div>
                                    }
                                    else
                                    { <div class="alert alert-light text-center border">لا يوجد متدربين حالياً.</div>}
                                </div>
                                <div class="col-md-4">
                                    <div class="card bg-light border-0">
                                        <div class="card-body">
                                            <h6 class="fw-bold">سجلات بانتظار الاعتماد</h6>
                                            @if (Model.PendingTrainingLogs != null && Model.PendingTrainingLogs.Any())
                                            {
                                                <ul class="list-group list-group-flush small">
                                                    @foreach (var log in Model.PendingTrainingLogs)
                                                    {
                                                        <li class="list-group-item bg-transparent d-flex justify-content-between">
                                                            <span>@log.Trainee.ArabicName</span>
                                                            <span class="badge bg-warning text-dark">@log.Month/@log.Year</span>
                                                        </li>
                                                    }
                                                </ul>
                                            }
                                            else
                                            { <span class="text-muted small">لا يوجد سجلات معلقة.</span>}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- 3. القروض -->
                        <div class="tab-pane fade" id="loans">
                            @if (loans != null && loans.Any())
                            {
                                <table class="table table-hover">
                                    <thead><tr><th>نوع القرض</th><th>المبلغ</th><th>تاريخ الطلب</th><th>الحالة</th></tr></thead>
                                    <tbody>
                                        @foreach (var l in loans)
                                        {
                                            <tr>
                                                <td>@l.LoanType.Name</td>
                                                <td>@l.Amount</td>
                                                <td>@l.ApplicationDate.ToString("yyyy-MM-dd")</td>
                                                <td>@l.Status</td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            { <div class="text-center py-5 text-muted">لا يوجد قروض مسجلة لهذا المحامي.</div>}
                        </div>

                        <!-- 4. البيانات الشخصية -->
                        <div class="tab-pane fade" id="info">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="text-muted small">رقم الهاتف</label>
                                    <div class="fw-bold">@Model.ContactInfo.MobileNumber</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="text-muted small">البريد الإلكتروني</label>
                                    <div class="fw-bold">@Model.ContactInfo.Email</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="text-muted small">تاريخ الميلاد</label>
                                    <div class="fw-bold">@Model.BirthDate.ToString("yyyy-MM-dd")</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="text-muted small">الجنس</label>
                                    <div class="fw-bold">@(Model.Gender?.Name ?? "-")</div>
                                </div>
                                <div class="col-12">
                                    <label class="text-muted small">العنوان</label>
                                    <div class="fw-bold">@Model.ContactInfo.City - @Model.ContactInfo.Street</div>
                                </div>
                            </div>
                        </div>

                        <!-- 5. الوثائق (💡 تم إصلاح الخطأ هنا: استخدام Model.Attachments) -->
                        <div class="tab-pane fade" id="docs">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="fw-bold m-0">المرفقات والوثائق</h6>
                                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addAttachmentModal"><i class="bi bi-cloud-upload"></i> رفع وثيقة جديدة</button>
                            </div>
                            @Html.Partial("~/Areas/Admin/Views/GraduateApplications/_AttachmentList.cshtml", Model.Attachments.ToList())
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal: إضافة مرفق -->
<div class="modal fade" id="addAttachmentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("AddAttachment", "RegisteredTrainees", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("applicationId", Model.Id)
                <div class="modal-header"><h5 class="modal-title">رفع وثيقة جديدة</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">نوع الوثيقة</label>
                        @Html.DropDownList("AttachmentTypeId", (SelectList)ViewBag.AttachmentTypes, new { @class = "form-select" })
                    </div>
                    <div class="mb-3"><input type="file" name="UploadedFile" class="form-control" required /></div>
                </div>
                <div class="modal-footer"><button type="submit" class="btn btn-primary">رفع</button></div>
            }
        </div>
    </div>
</div>