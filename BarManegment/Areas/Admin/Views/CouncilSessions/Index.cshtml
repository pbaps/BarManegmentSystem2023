@model IEnumerable<BarManegment.Models.CouncilSession>

@{
    ViewBag.Title = "إدارة جلسات المجلس";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">أرشيف جلسات المجلس</h6>
        <a href="@Url.Action("Create")" class="btn btn-success btn-sm">
            <i class="fa fa-plus"></i> فتح جلسة جديدة
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>رقم الجلسة</th>
                        <th>التاريخ</th>
                        <th>المكان</th>
                        <th>عدد البنود</th>
                        <th>الحالة</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.SessionNumber / @item.Year</strong></td>
                            <td>@item.SessionDate.ToString("yyyy/MM/dd")</td>
                            <td>@item.Location</td>
                            <td>@(item.AgendaItems != null ? item.AgendaItems.Count : 0)</td>
                            <td>
                                @if (item.IsFinalized)
                                {
                                    <span class="badge badge-secondary">مغلقة وموقعة</span>
                                }
                                else
                                {
                                    <span class="badge badge-success">جاري الانعقاد</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info btn-sm">
                                    <i class="fa fa-gavel"></i> إدارة الجلسة
                                </a>
                                <a href="@Url.Action("PrintAgenda", new { id = item.Id })" target="_blank" class="btn btn-secondary btn-sm">
                                    <i class="fa fa-print"></i> طباعة
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
