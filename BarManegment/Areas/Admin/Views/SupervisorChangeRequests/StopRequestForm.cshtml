@model BarManegment.Areas.Admin.ViewModels.StopContinueRequestViewModel
@{
    ViewBag.Title = "طلب وقف / استكمال تدريب";
}

<div class="container-fluid pt-4 px-4">
    <div class="card">
        <div class="card-header">
            <h4>@ViewBag.Title للمتدرب: @Model.TraineeName</h4>
        </div>
        @using (Html.BeginForm("CreateStopRequest", "SupervisorChangeRequests", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.TraineeId)

            <div class="card-body">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(m => m.RequestType, new { @class = "form-label" }) <span class="text-danger">*</span>
                    <div class="form-check">
                        @Html.RadioButtonFor(m => m.RequestType, "وقف", new { @class = "form-check-input", id = "typeStop" })
                        <label class="form-check-label" for="typeStop">وقف التدريب</label>
                    </div>
                    <div class="form-check">
                        @Html.RadioButtonFor(m => m.RequestType, "استكمال", new { @class = "form-check-input", id = "typeContinue" })
                        <label class="form-check-label" for="typeContinue">استكمال التدريب</label>
                    </div>
                    @Html.ValidationMessageFor(m => m.RequestType, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.ActionDate, new { @class = "form-label" }) <span class="text-danger">*</span>
                    @Html.EditorFor(m => m.ActionDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(m => m.ActionDate, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Reason, new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.Reason, new { @class = "form-control", rows = "4" })
                    @Html.ValidationMessageFor(m => m.Reason, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="card-footer text-end">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-send-fill me-1"></i> تقديم الطلب
                </button>
                @Html.ActionLink("إلغاء", "Details", "TraineeProfile", new { id = Model.TraineeId }, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>
