@model IEnumerable<BarManegment.Models.StampSale>
@using System.Linq

@{
    ViewBag.Title = "أرشيف حصص الطوابع (المحجوزة)";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="card shadow mb-4 border-left-warning">
        <div class="card-header py-3 d-flex justify-content-between align-items-center bg-warning bg-opacity-10">
            <h5 class="m-0 font-weight-bold text-warning-emphasis">
                <i class="bi bi-lock-fill me-2"></i> @ViewBag.Title
            </h5>
            @Html.ActionLink("عودة للتقرير الرئيسي", "Index", null, new { @class = "btn btn-secondary btn-sm" })
        </div>
        <div class="card-body">

            <p class="alert alert-warning mb-4">
                <strong>تنبيه:</strong> هذه الحصص محجوزة (بسبب مديونية قروض أو حجز يدوي من قبل الإدارة) ولن تظهر في كشوفات البنك حتى يتم فك الحجز عنها.
            </p>

            <div class="row mb-3 align-items-end">
                <div class="col-md-8">
                    @using (Html.BeginForm("HeldShares", "StampFinancials", FormMethod.Get, new { @class = "row g-2" }))
                    {
                        <div class="col-auto">
                            <input type="text" name="searchString" class="form-control" placeholder="بحث باسم المحامي أو رقم الطابع..." value="@ViewBag.CurrentSearch" style="width: 300px;">
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary mb-3"><i class="bi bi-search"></i> بحث</button>
                        </div>
                        if (!string.IsNullOrEmpty(ViewBag.CurrentSearch))
                        {
                            <div class="col-auto">
                                <a href="@Url.Action("HeldShares")" class="btn btn-outline-secondary">إلغاء</a>
                            </div>
                        }
                    }
                </div>
                <div class="col-md-4 text-end">
                    @* زر التصدير للإكسل *@
                    <a href="@Url.Action("ExportHeldSharesToExcel", new { searchString = ViewBag.CurrentSearch })" class="btn btn-success">
                        <i class="bi bi-file-earmark-excel me-1"></i> تصدير إلى Excel
                    </a>
                </div>
            </div>
            <hr />
            <div class="table-responsive">
                <table class="table table-sm table-striped table-bordered">
                    <thead class="table-secondary">
                        <tr>
                            <th>تاريخ البيع</th>
                            <th>اسم المحامي</th>
                            <th>قيمة الطابع</th>
                            <th>حصة المحامي (المحجوزة)</th>
                            <th>سبب الحجز</th>
                            <th>رقم الطابع</th>
                            <th>إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted p-4">
                                    لا توجد حصص محجوزة حالياً @(!string.IsNullOrEmpty(ViewBag.CurrentSearch) ? "مطابقة للبحث" : "").
                                </td>
                            </tr>
                        }
                        @foreach (var item in Model)
                        {
                            <tr class="table-warning">
                                <td>@item.SaleDate.ToString("yyyy/MM/dd")</td>
                                <td>@item.Lawyer.ArabicName</td>
                                <td>@item.StampValue.ToString("N2") ₪</td>
                                <td>@item.AmountToLawyer.ToString("N2") ₪</td>
                                <td class="text-danger fw-bold">@item.HoldReason</td>
                                <td>@(item.Stamp?.SerialNumber ?? 0)</td>
                                <td>
                                    <a href="@Url.Action("Manage", "StampShareManagement", new { id = item.GraduateApplicationId, area = "Admin" })" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-gear-fill"></i> إدارة
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    @if (Model.Any())
                    {
                        <tfoot class="table-light fw-bold">
                            <tr>
                                <td colspan="3" class="text-end">الإجمالي (للمعروض):</td>
                                <td class="text-success">@Model.Sum(m => m.AmountToLawyer).ToString("N2") ₪</td>
                                <td colspan="3"></td>
                            </tr>
                        </tfoot>
                    }
                </table>
            </div>
        </div>
    </div>
</div>