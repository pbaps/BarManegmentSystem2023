@model IEnumerable<BarManegment.Models.ContractType>

@{
    ViewBag.Title = "إدارة أنواع العقود والتصديقات";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2><i class="bi bi-file-text-fill me-2"></i> @ViewBag.Title</h2>

<p>
    @Html.ActionLink("إضافة نوع عقد جديد", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.DefaultFee)</th>
            <th>@Html.DisplayNameFor(model => model.Currency)</th>
            <th>@Html.DisplayNameFor(model => model.LawyerPercentage)</th>
            <th>@Html.DisplayNameFor(model => model.BarSharePercentage)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@item.DefaultFee.ToString("N2")</td>
                <td>@Html.DisplayFor(modelItem => item.Currency.Name)</td>
                <td>@item.LawyerPercentage.ToString("P0")</td> @* (P0 = لعرضها كنسبة مئوية 60%) *@
                <td>@item.BarSharePercentage.ToString("P0")</td> @* (P0 = لعرضها كنسبة مئوية 40%) *@
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-success" })
                </td>
            </tr>
        }
    </tbody>
</table>
