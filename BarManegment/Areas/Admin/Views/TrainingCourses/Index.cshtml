@model IEnumerable<BarManegment.Models.TrainingCourse>
@{
    ViewBag.Title = "الدورات التدريبية";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">

    <!-- رسائل التنبيه -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="text-primary fw-bold"><i class="bi bi-journal-bookmark-fill me-2"></i> @ViewBag.Title</h4>
        <a href="@Url.Action("Create")" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> إضافة دورة جديدة
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">اسم الدورة</th>
                            <th>الوصف</th>
                            <th class="text-center">عدد الجلسات</th>
                            <th class="text-end pe-4">إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">@item.CourseName</td>
                                <td class="text-muted text-truncate" style="max-width: 300px;">@item.Description</td>
                                <td class="text-center">
                                    <span class="badge bg-info text-dark">@(item.Sessions?.Count ?? 0) جلسة</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm">
                                        @* زر إدارة الجلسات *@
                                        <a href="@Url.Action("Index", "TrainingSessions", new { area = "Admin", courseId = item.Id })" class="btn btn-sm btn-outline-primary" title="إدارة الجلسات">
                                            <i class="bi bi-calendar-week me-1"></i> الجلسات
                                        </a>

                                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-outline-secondary" title="تعديل">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-outline-danger" title="حذف">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">لا توجد دورات تدريبية مسجلة.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>