@model BarManegment.Models.Item

@{
    ViewBag.Title = "إضافة صنف جديد";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-box-seam me-2"></i> تعريف صنف مخزني جديد</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">@Html.ValidationSummary()</div>
                        }

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">اسم الصنف <span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "مثال: ورق A4، قلم حبر..." } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">كود الصنف (Barcode/SKU)</label>
                                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">التصنيف <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    @Html.DropDownList("ItemCategoryId", null, "اختر التصنيف...", new { @class = "form-select select2", id = "ItemCategoryId" })
                                    <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#addCategoryModal" title="إضافة تصنيف جديد">
                                        <i class="bi bi-plus-lg"></i>
                                    </button>
                                </div>
                                @Html.ValidationMessageFor(model => model.ItemCategoryId, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">حد الطلب (للتنبيه)</label>
                                @Html.EditorFor(model => model.ReorderLevel, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                                <small class="text-muted">الكمية التي ينبهك النظام عندها لنقص المخزون</small>
                            </div>
                        </div>

                        <div class="alert alert-info d-flex align-items-center mt-3">
                            <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                            <div>
                                <strong>ملاحظة:</strong> الكمية الافتتاحية ستكون (0). لإضافة رصيد، يرجى استخدام "فاتورة المشتريات" أو "القيد الافتتاحي".
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">إلغاء</a>
                            <button type="submit" class="btn btn-primary px-5 fw-bold">حفظ</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addCategoryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fs-6">إضافة تصنيف جديد</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="text" id="newCategoryName" class="form-control" placeholder="اسم التصنيف" />
                <div id="catError" class="text-danger small mt-1"></div>
            </div>
            <div class="modal-footer p-1">
                <button type="button" class="btn btn-sm btn-primary w-100" id="btnSaveCategory">حفظ وإضافة</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // تفعيل Select2
            $('.select2').select2({
                theme: "bootstrap-5",
                width: '100%',
                dir: "rtl"
            });

            // حفظ التصنيف الجديد عبر Ajax
            $('#btnSaveCategory').click(function () {
                var name = $('#newCategoryName').val();
                if (!name) {
                    $('#catError').text('يرجى إدخال الاسم');
                    return;
                }

                $.post('@Url.Action("AddCategoryJson", "Items")', { name: name }, function (response) {
                    if (response.success) {
                        // إضافة الخيار الجديد للقائمة وتحديده
                        var newOption = new Option(response.name, response.id, true, true);
                        $('#ItemCategoryId').append(newOption).trigger('change');

                        // إغلاق النافذة
                        $('#addCategoryModal').modal('hide');
                        $('#newCategoryName').val('');
                        $('#catError').text('');
                    } else {
                        $('#catError').text(response.message);
                    }
                });
            });
        });
    </script>
}