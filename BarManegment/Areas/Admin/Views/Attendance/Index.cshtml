@model IEnumerable<BarManegment.Models.AttendanceLog>

@{
    ViewBag.Title = "سجل الحضور اليومي";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    // التحضير لتجنب الأخطاء إذا كانت القيم فارغة
    var selectedDate = ViewBag.SelectedDate != null ? ((DateTime)ViewBag.SelectedDate).ToString("yyyy-MM-dd") : DateTime.Today.ToString("yyyy-MM-dd");
    var deptList = ViewBag.DepartmentId as SelectList;
}

<div class="container-fluid pt-4 px-4">
    <div class="card shadow-sm border-0">

        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-calendar-check me-2"></i> سجل الحضور اليومي</h5>
            <div class="d-flex gap-2">
                <a href="@Url.Action("ManageLeaves")" class="btn btn-outline-warning btn-sm fw-bold">
                    <i class="bi bi-briefcase me-1"></i> طلبات الإجازات
                </a>
                <a href="@Url.Action("ManagePermissions")" class="btn btn-outline-info btn-sm fw-bold">
                    <i class="bi bi-clock-history me-1"></i> طلبات الأذونات
                </a>
            </div>
        </div>

        <div class="card-body">

            @using (Html.BeginForm("Index", "Attendance", FormMethod.Get, new { @class = "row g-3 mb-4" }))
            {
                <div class="col-md-3">
                    <label class="form-label fw-bold">التاريخ</label>
                    <input type="date" name="date" class="form-control" value="@selectedDate" />
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">القسم</label>
                    @Html.DropDownList("departmentId", deptList, "الكل", new { @class = "form-select" })
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100 fw-bold">
                        <i class="bi bi-filter me-1"></i> عرض
                    </button>
                </div>
            }
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>الموظف</th>
                            <th>القسم</th>
                            <th>وقت الحضور</th>
                            <th>وقت الانصراف</th>
                            <th>الحالة</th>
                            <th>الملاحظات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-start fw-bold">@item.Employee.FullName</td>
                                    <td>@(item.Employee.Department != null ? item.Employee.Department.Name : "-")</td>

                                    <td class="text-success fw-bold" dir="ltr">
                                        @(item.CheckInTime.HasValue ? DateTime.Today.Add(item.CheckInTime.Value).ToString("hh:mm tt") : "-")
                                    </td>

                                    <td class="text-danger fw-bold" dir="ltr">
                                        @(item.CheckOutTime.HasValue ? DateTime.Today.Add(item.CheckOutTime.Value).ToString("hh:mm tt") : "-")
                                    </td>

                                    <td>
                                        @if (item.Status == "حاضر")
                                        {
                                            <span class="badge bg-success">@item.Status</span>
                                        }
                                        else if (item.Status == "متأخر")
                                        {
                                            <span class="badge bg-warning text-dark">@item.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.Status</span>
                                        }
                                    </td>

                                    <td class="small text-muted">@item.SystemNotes</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="py-5 text-muted">
                                    <i class="bi bi-calendar-x fs-1 d-block mb-2 opacity-25"></i>
                                    لا توجد سجلات حضور مسجلة لهذا التاريخ.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>