@model IEnumerable<BarManegment.Models.LeaveRequest>

@{
    ViewBag.Title = "إدارة الإجازات";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-inbox-fill me-2"></i> طلبات الإجازات الواردة</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0 text-center">
                <thead class="table-light">
                    <tr>
                        <th>الموظف</th>
                        <th>النوع</th>
                        <th>من - إلى</th>
                        <th>المدة</th>
                        <th>السبب</th>
                        <th>الحالة</th>
                        <th>الإجراء</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Employee.FullName</td>
                            <td><span class="badge bg-info text-dark">@item.LeaveType</span></td>
                            <td class="small">@item.StartDate.ToShortDateString() <br> @item.EndDate.ToShortDateString()</td>
                            <td>@item.TotalDays يوم</td>
                            <td class="text-start small text-muted" style="max-width: 200px;">@item.Reason</td>

                            <td>
                                @if (item.Status == "قيد الانتظار")
                                {
                                    <span class="badge bg-warning text-dark">@item.Status</span>
                                }
                                else if (item.Status == "مقبول")
                                {
                                    <span class="badge bg-success">@item.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@item.Status</span>
                                }
                            </td>

                            <td>
                                <div class="btn-group" role="group">
                                    @if (item.Status == "قيد الانتظار")
                                    {
                                        <form action="@Url.Action("ReviewLeave")" method="post" class="d-inline">
                                            @Html.Hidden("id", item.Id)
                                            @Html.Hidden("status", "مقبول")
                                            <button class="btn btn-sm btn-success" title="قبول"><i class="bi bi-check-lg"></i></button>
                                        </form>
                                        <form action="@Url.Action("ReviewLeave")" method="post" class="d-inline ms-1">
                                            @Html.Hidden("id", item.Id)
                                            @Html.Hidden("status", "مرفوض")
                                            <button class="btn btn-sm btn-danger" title="رفض"><i class="bi bi-x-lg"></i></button>
                                        </form>
                                    }

                                    <a href="@Url.Action("PrintLeaveRequest", "HRReports", new { id = item.Id })" target="_blank" class="btn btn-sm btn-dark ms-1" title="طباعة">
                                        <i class="bi bi-printer-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>