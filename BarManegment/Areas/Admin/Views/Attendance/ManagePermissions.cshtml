@model IEnumerable<BarManegment.Models.HourlyPermission>

@{
    ViewBag.Title = "إدارة الأذونات";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-clock me-2"></i> سجل الأذونات والمغادرات</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0 text-center">
                <thead class="table-light">
                    <tr>
                        <th>الموظف</th>
                        <th>التاريخ</th>
                        <th>الوقت</th>
                        <th>النوع</th>
                        <th>السبب</th>
                        <th>الحالة</th>
                        <th>الإجراء</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Employee.FullName</td>
                            <td>@item.Date.ToShortDateString()</td>
                            <td dir="ltr" class="font-monospace small">@item.StartTime - @item.EndTime</td>
                            <td>@item.Type</td>
                            <td class="text-muted small">@item.Reason</td>
                            <td>
                                @if (item.Status == "قيد الانتظار")
                                {<span class="badge bg-warning text-dark">@item.Status</span> }
                            else if (item.Status == "مقبول")
                            { <span class="badge bg-success">@item.Status</span> }
                        else
                        { <span class="badge bg-danger">@item.Status</span>}
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    @if (item.Status == "قيد الانتظار")
                                    {
                                        <form action="@Url.Action("ReviewPermission")" method="post" class="d-inline">
                                            @Html.Hidden("id", item.Id)
                                            @Html.Hidden("status", "مقبول")
                                            <button class="btn btn-sm btn-success" title="قبول"><i class="bi bi-check-lg"></i></button>
                                        </form>
                                        <form action="@Url.Action("ReviewPermission")" method="post" class="d-inline ms-1">
                                            @Html.Hidden("id", item.Id)
                                            @Html.Hidden("status", "مرفوض")
                                            <button class="btn btn-sm btn-danger" title="رفض"><i class="bi bi-x-lg"></i></button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted small ms-2">تم الإجراء</span>
                                    }

                                    <a href="@Url.Action("PrintPermissionRequest", "HRReports", new { id = item.Id })" target="_blank" class="btn btn-sm btn-dark ms-1" title="طباعة الإذن">
                                        <i class="bi bi-printer-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
