@model BarManegment.Areas.Admin.ViewModels.TraineeReviewViewModel
@using BarManegment.Helpers
@{
    ViewBag.Title = "لجنة التدريب: مراجعة ملف " + Model.ArabicName;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">

    <!-- 1. بطاقة التعريف العلوية -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-auto">
                    <div class="position-relative">
                        <img src="@(!string.IsNullOrEmpty(Model.PersonalPhotoPath) ? Url.Content(Model.PersonalPhotoPath) : "/Content/Images/default-avatar.png")"
                             class="rounded-circle border border-3 border-light shadow-sm"
                             style="width: 100px; height: 100px; object-fit: cover;">
                        <span class="position-absolute bottom-0 start-100 translate-middle p-2 border border-light rounded-circle @(Model.Status.Contains("مقبول") ? "bg-success" : "bg-primary")">
                            <span class="visually-hidden">Status</span>
                        </span>
                    </div>
                </div>
                <div class="col">
                    <h4 class="fw-bold text-primary mb-1">@Model.ArabicName</h4>
                    <p class="text-muted mb-2">@Model.EnglishName</p>

                    <div class="d-flex gap-3 text-secondary small">
                        <span><i class="bi bi-card-heading me-1"></i> الهوية: @Model.NationalIdNumber</span>
                        <span><i class="bi bi-calendar me-1"></i> تاريخ التقديم: @(Model.TrainingStartDate.HasValue ? Model.TrainingStartDate.Value.ToString("yyyy/MM/dd") : "---")</span>
                    </div>
                </div>
                <div class="col-auto text-end">
                    <div class="mb-1 text-muted small">حالة الملف</div>
                    <h5 class="fw-bold">@Model.Status</h5>
                </div>
            </div>
        </div>
    </div>

    <!-- رسائل النظام -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm"><i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"] <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm"><i class="bi bi-exclamation-circle me-2"></i> @TempData["ErrorMessage"] <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }

    <div class="row g-4">
        <!-- العمود الأيمن: البيانات -->
        <div class="col-lg-8">

            <!-- بطاقة البيانات والمرفقات -->
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom py-3">
                    <ul class="nav nav-tabs card-header-tabs" id="commTabs" role="tablist">
                        <li class="nav-item"><button class="nav-link active fw-bold" data-bs-toggle="tab" data-bs-target="#info">البيانات الشخصية</button></li>
                        <li class="nav-item"><button class="nav-link fw-bold" data-bs-toggle="tab" data-bs-target="#qual">المؤهلات (@Model.Qualifications.Count)</button></li>
                        <li class="nav-item"><button class="nav-link fw-bold" data-bs-toggle="tab" data-bs-target="#docs">المرفقات (@Model.Attachments.Count)</button></li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <!-- 1. البيانات -->
                        <div class="tab-pane fade show active" id="info">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="small text-muted">مكان وتاريخ الميلاد</label>
                                    <div class="fw-bold">@Model.BirthPlace - @Model.BirthDate.ToString("yyyy/MM/dd")</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="small text-muted">الجنسية</label>
                                    <div class="fw-bold">@Model.Nationality</div>
                                </div>
                                <div class="col-md-12"><hr class="text-muted opacity-25 my-2"></div>
                                <div class="col-md-6">
                                    <label class="small text-muted">رقم الجوال</label>
                                    <div class="fw-bold" dir="ltr">@(Model.ContactInfo?.MobileNumber ?? "-")</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="small text-muted">البريد الإلكتروني</label>
                                    <div class="fw-bold">@(Model.ContactInfo?.Email ?? "-")</div>
                                </div>
                                <div class="col-md-12">
                                    <label class="small text-muted">العنوان</label>
                                    <div>@(Model.ContactInfo?.Governorate ?? "") - @(Model.ContactInfo?.City ?? "") @(Model.ContactInfo?.Street ?? "")</div>
                                </div>
                            </div>
                        </div>

                        <!-- 2. المؤهلات -->
                        <div class="tab-pane fade" id="qual">
                            @if (Model.Qualifications != null && Model.Qualifications.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm table-hover align-middle">
                                        <thead class="table-light"><tr><th>المؤهل</th><th>الجامعة</th><th>التخصص</th><th>سنة التخرج</th></tr></thead>
                                        <tbody>
                                            @foreach (var q in Model.Qualifications)
                                            {
                                                <tr>
                                                    <td>@q.QualificationType.Name</td>
                                                    <td>@q.UniversityName</td>
                                                    <td>@q.Specialization</td>
                                                    <td>@q.GraduationYear</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            { <div class="text-center text-muted py-3">لا توجد مؤهلات مسجلة.</div>}
                        </div>

                        <!-- 3. المرفقات -->
                        <div class="tab-pane fade" id="docs">
                            @if (Model.Attachments != null && Model.Attachments.Any())
                            {
                                <div class="row g-2">
                                    @foreach (var att in Model.Attachments)
                                    {
                                        <div class="col-md-6">
                                            <div class="border rounded p-2 d-flex align-items-center justify-content-between bg-light">
                                                <div class="d-flex align-items-center text-truncate">
                                                    <i class="bi bi-file-earmark-text text-primary fs-4 me-2"></i>
                                                    <div>
                                                        <div class="fw-bold small">@att.AttachmentType.Name</div>
                                                        <div class="text-muted" style="font-size: 10px;">@att.UploadDate.ToString("yyyy-MM-dd")</div>
                                                    </div>
                                                </div>
                                                <!-- 💡 استخدام GetAttachmentFile الخاص بـ TrainingCommittee -->
                                                <a href="@Url.Action("GetAttachmentFile", "TrainingCommittee", new { id = att.Id })" target="_blank" class="btn btn-sm btn-outline-primary"><i class="bi bi-eye"></i></a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            { <div class="text-center text-muted py-3">لا توجد مرفقات.</div>}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- العمود الأيسر: القرار والمشرف -->
        <div class="col-lg-4">

            <!-- 💡 بطاقة المشرف (مع إمكانية التعيين) -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                    <h6 class="mb-0 fw-bold"><i class="bi bi-briefcase me-2"></i> المحامي المشرف</h6>
                    <button class="btn btn-sm btn-outline-primary rounded-pill" data-bs-toggle="modal" data-bs-target="#supervisorSearchModal">
                        <i class="bi bi-search"></i> تغيير
                    </button>
                </div>
                <div class="card-body">
                    @if (Model.Supervisor != null)
                    {
                        <div class="text-center mb-3">
                            <div class="position-relative d-inline-block mb-2">
                                <img src="@(!string.IsNullOrEmpty(Model.Supervisor.PersonalPhotoPath) ? Url.Content(Model.Supervisor.PersonalPhotoPath) : "/Content/Images/default-avatar.png")"
                                     class="rounded-circle border p-1" style="width: 70px; height: 70px; object-fit: cover;">
                            </div>
                            <h6 class="fw-bold mb-0">@Model.Supervisor.ArabicName</h6>
                            <small class="text-muted">عضوية: @Model.Supervisor.Id</small>
                        </div>
                        <ul class="list-group list-group-flush small">
                            <li class="list-group-item d-flex justify-content-between">
                                <span>الحالة</span>
                                <span class="badge bg-success">مزاول</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>تاريخ المزاولة</span>
                                <span>@Model.Supervisor.SubmissionDate.ToString("yyyy-MM-dd")</span>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-person-x fs-1 d-block mb-2 opacity-50"></i>
                            لم يتم تحديد مشرف.<br>
                            <span class="small text-danger">مطلوب للموافقة</span>
                            <div class="mt-3">
                                <button class="btn btn-primary btn-sm shadow-sm px-4" data-bs-toggle="modal" data-bs-target="#supervisorSearchModal">
                                    <i class="bi bi-plus-lg me-1"></i> تعيين مشرف
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- بطاقة قرار اللجنة -->
            <div class="card shadow-sm border-0 border-top border-4 border-primary mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0 fw-bold text-primary"><i class="bi bi-gavel me-2"></i> قرار اللجنة</h5>
                </div>
                <div class="card-body">
                    @if (Model.Status == "بانتظار الموافقة النهائية")
                    {
                        <div class="alert alert-light border small mb-3">
                            <i class="bi bi-info-circle-fill text-info me-1"></i> تأكد من صحة البيانات والمرفقات وأهلية المشرف قبل اتخاذ القرار.
                        </div>

                        using (Html.BeginForm("ProcessDecision", "TrainingCommittee", new { id = Model.Id }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="decision" value="Approve" />
                            <button type="submit" class="btn btn-success w-100 fw-bold py-2 mb-2" onclick="return confirm('اعتماد نهائي وتحويل للمالية؟')">
                                <i class="bi bi-check-circle-fill me-2"></i> موافقة واعتماد
                            </button>
                        }

                        <button class="btn btn-outline-danger w-100 fw-bold" data-bs-toggle="modal" data-bs-target="#rejectModal">
                            <i class="bi bi-x-circle me-2"></i> رفض / نواقص
                        </button>
                    }
                    else if (Model.Status.Contains("مقبول"))
                    {
                        <div class="alert alert-success text-center mb-3">
                            <i class="bi bi-check-circle-fill fs-5 me-2"></i> تم الاعتماد بنجاح
                        </div>
                        <!-- زر التراجع -->
                        using (Html.BeginForm("RevertApproval", "TrainingCommittee", new { id = Model.Id }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-secondary w-100 btn-sm" onclick="return confirm('هل أنت متأكد؟');">
                                <i class="bi bi-arrow-counterclockwise me-1"></i> تراجع عن القرار
                            </button>
                        }
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center">
                            الطلب في حالة: <strong>@Model.Status</strong>
                        </div>
                    }
                </div>
            </div>

            <!-- بطاقة الطباعة -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white fw-bold py-3">
                    <i class="bi bi-printer me-2"></i> الطباعة
                </div>
                <div class="card-body d-grid gap-2">
                    <a href="@Url.Action("PrintApplicationForm", new { id = Model.Id })" target="_blank" class="btn btn-dark">
                        <i class="bi bi-file-pdf me-2"></i> نموذج التدريب
                    </a>
                    <a href="@Url.Action("PrintReport", new { id = Model.Id })" target="_blank" class="btn btn-outline-secondary">
                        <i class="bi bi-file-earmark-text me-2"></i> تقرير اللجنة
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Modal: الرفض (Reject) -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("ProcessDecision", "TrainingCommittee", new { id = Model.Id }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">رفض الطلب</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="decision" value="Reject" />
                    <div class="mb-3">
                        <label class="form-label fw-bold">سبب الرفض:</label>
                        <textarea name="RejectionReason" class="form-control" rows="4" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">تأكيد الرفض</button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal: البحث عن مشرف (Supervisor Search) -->
<div class="modal fade" id="supervisorSearchModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @using (Html.BeginForm("AssignSupervisor", "TrainingCommittee", new { area = "Admin" }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("applicationId", Model.Id)
                @Html.Hidden("supervisorId", "", new { id = "targetSupervisorId" })

                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">تعيين محامي مشرف</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="input-group mb-3">
                        <input type="text" id="supervisorSearchInput" class="form-control" placeholder="ابحث بالاسم، رقم الهوية، أو رقم العضوية...">
                        <button class="btn btn-primary" type="button" id="btnPerformSearch">بحث</button>
                    </div>

                    <div id="supervisorSearchResults" class="list-group" style="max-height: 300px; overflow-y: auto;">
                        <div class="text-center text-muted py-3">يرجى البحث لعرض النتائج</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#btnPerformSearch').click(function () {
                var term = $('#supervisorSearchInput').val();
                var list = $('#supervisorSearchResults');

                if (term.length < 2) {
                    alert("يرجى إدخال حرفين على الأقل للبحث.");
                    return;
                }

                list.html('<div class="list-group-item text-center py-3"><span class="spinner-border spinner-border-sm"></span> جاري البحث...</div>');

                // استخدام الأكشن في TrainingCommittee
                $.get('@Url.Action("SearchSupervisors", "TrainingCommittee", new { area = "Admin" })', { searchTerm: term }, function (data) {
                    list.empty();
                    if (data.success && data.supervisors.length > 0) {
                        $.each(data.supervisors, function (i, item) {
                            var isEligible = item.isEligible;
                            var reason = item.ineligibilityReason || "";

                            var itemHtml = '';
                            if (isEligible) {
                                itemHtml = `<button type="submit" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" onclick="$('#targetSupervisorId').val(${item.id})">
                                                <div>
                                                    <div class="fw-bold">${item.name}</div>
                                                    <small class="text-muted">مزاول منذ: ${item.practiceDate}</small>
                                                </div>
                                                <span class="badge bg-success rounded-pill">اختيار</span>
                                            </button>`;
                            } else {
                                itemHtml = `<div class="list-group-item list-group-item-light text-muted d-flex justify-content-between align-items-center opacity-75">
                                                <div>
                                                    <div class="fw-bold text-decoration-line-through">${item.name}</div>
                                                    <small class="text-danger"><i class="bi bi-x-circle"></i> ${reason}</small>
                                                </div>
                                                <span class="badge bg-secondary rounded-pill">غير مؤهل</span>
                                            </div>`;
                            }
                            list.append(itemHtml);
                        });
                    } else {
                        list.html('<div class="list-group-item text-center text-danger py-3">' + (data.message || 'لا توجد نتائج') + '</div>');
                    }
                });
            });
        });
    </script>
}