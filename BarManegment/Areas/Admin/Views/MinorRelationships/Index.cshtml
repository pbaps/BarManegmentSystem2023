@model IEnumerable<BarManegment.Models.MinorRelationship>
@{
    ViewBag.Title = "إدارة صفات القُصّر (وكالات السفر)";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2><i class="bi bi-person-video3 me-2"></i> @ViewBag.Title</h2>
<p>(مثل: ابن، ابنة، حفيد، ابن أخ...)</p>
<p>
    @Html.ActionLink("إضافة صفة جديدة", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />
<table class="table table-striped table-hover">
    <thead> <tr> <th>@Html.DisplayNameFor(model => model.Name)</th> <th></th> </tr> </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-success" })</td>
            </tr>
        }
    </tbody>
</table>
