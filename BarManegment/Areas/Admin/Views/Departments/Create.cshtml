@model BarManegment.Models.Department

@{
    ViewBag.Title = "إضافة قسم جديد";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-building-add me-2"></i> إضافة قسم جديد</h5>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">@Html.ValidationSummary()</div>
                        }

                        <div class="mb-4">
                            <label class="form-label fw-bold">اسم القسم <span class="text-danger">*</span></label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "مثال: الشؤون المالية" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger small" })
                        </div>

                        <h6 class="fw-bold text-secondary border-bottom pb-2 mb-3">الإعدادات المالية الافتراضية للقسم</h6>

                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label fw-bold small">الزيادة السنوية (%)</label>
                                <div class="input-group">
                                    @Html.TextBoxFor(model => model.AnnualIncrementPercent, new { @class = "form-control", type = "number", step = "0.1", min = "0", max = "100" })
                                    <span class="input-group-text">%</span>
                                </div>
                                <div class="form-text small">تلقائياً: 5%</div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold small">استقطاع الموظف (%)</label>
                                <div class="input-group">
                                    @Html.TextBoxFor(model => model.EmployeePensionPercent, new { @class = "form-control", type = "number", step = "0.1", min = "0", max = "100" })
                                    <span class="input-group-text">%</span>
                                </div>
                                <div class="form-text small">تلقائياً: 7%</div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold small">مساهمة النقابة (%)</label>
                                <div class="input-group">
                                    @Html.TextBoxFor(model => model.EmployerPensionPercent, new { @class = "form-control", type = "number", step = "0.1", min = "0", max = "100" })
                                    <span class="input-group-text">%</span>
                                </div>
                                <div class="form-text small">تلقائياً: 9%</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-5 pt-3 border-top">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">إلغاء</a>
                            <button type="submit" class="btn btn-primary px-4 fw-bold">حفظ القسم</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>