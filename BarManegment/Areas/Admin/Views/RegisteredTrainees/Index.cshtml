@model IEnumerable<BarManegment.Models.GraduateApplication>
@using BarManegment.Helpers

@{
    ViewBag.Title = "سجل المحامين المتدربين";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@* === استخدام functions لإرجاع string نظيف للاستخدام داخل class attribute === *@
@functions {
    public string GetStatusBadgeClass(string statusName)
    {
        if (string.IsNullOrEmpty(statusName)) return "bg-secondary";

        switch (statusName)
        {
            case "متدرب مقيد":
                return "bg-success"; // أخضر
            case "متدرب موقوف":
                return "bg-warning text-dark"; // أصفر
            case "محامي مزاول":
                return "bg-primary"; // أزرق
            case "محامي مشطوب":
            case "محامي متوفي":
            case "مرفوض":
                return "bg-danger"; // أحمر
            case "بانتظار تحديد موعد اليمين":
                return "bg-info text-dark"; // سماوي
            default:
                return "bg-secondary";
        }
    }
}

<div class="container-fluid pt-4 px-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">@ViewBag.Title</h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "Admin" })">الرئيسية</a></li>
                        <li class="breadcrumb-item active" aria-current="page">سجل المتدربين</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <div class="row g-3 align-items-center">
                <div class="col-md-8">
                    @using (Html.BeginForm("Index", "RegisteredTrainees", FormMethod.Get, new { @class = "d-flex gap-2" }))
                    {
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-search"></i></span>
                            <input class="form-control border-start-0" type="search" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="بحث بالاسم، الهوية، رقم التسلسل، أو اسم المشرف...">
                        </div>

                        <!-- فلتر الحالة -->
                        <select name="filterType" class="form-select" style="max-width: 150px;" onchange="this.form.submit()">
                            <option value="">الكل</option>
                            <option value="Active" @(ViewBag.FilterType == "Active" ? "selected" : "")>مقيد (نشط)</option>
                            <option value="Suspended" @(ViewBag.FilterType == "Suspended" ? "selected" : "")>موقوف</option>
                        </select>

                        <button class="btn btn-primary" type="submit">بحث</button>

                        if (ViewBag.SearchTerm != null || ViewBag.FilterType != null)
                        {
                            <a href="@Url.Action("Index", "RegisteredTrainees")" class="btn btn-outline-secondary" title="إلغاء البحث"><i class="bi bi-x-lg"></i></a>
                        }
                    }
                </div>
                <div class="col-md-4 text-end">
                    <span class="text-muted small">عدد السجلات: @Model.Count()</span>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>التسلسل النقابي</th>
                            <th>اسم المتدرب</th>
                            <th>المحامي المشرف</th>
                            <th>تاريخ بدء التدريب</th>
                            <th>الحالة</th>
                            <th class="text-center">إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="fw-bold font-monospace text-primary">@(item.TraineeSerialNo ?? "---")</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.PersonalPhotoPath))
                                            {
                                                <img src="@Url.Content(item.PersonalPhotoPath)" class="rounded-circle me-2 border" width="32" height="32" style="object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="rounded-circle me-2 bg-light d-flex align-items-center justify-content-center border" style="width: 32px; height: 32px;">
                                                    <i class="bi bi-person text-secondary"></i>
                                                </div>
                                            }
                                            <div>
                                                <span class="d-block fw-bold">@item.ArabicName</span>
                                                <small class="text-muted">@item.NationalIdNumber</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.Supervisor != null)
                                        {
                                            <a href="@Url.Action("Details", "RegisteredTrainees", new { id = item.SupervisorId })" class="text-decoration-none text-dark">
                                                <i class="bi bi-person-workspace me-1 text-muted"></i> @item.Supervisor.ArabicName
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-danger small">غير محدد</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.TrainingStartDate.HasValue)
                                        {
                                            <span>@item.TrainingStartDate.Value.ToString("yyyy-MM-dd")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(item.ApplicationStatus?.Name)">
                                            @item.ApplicationStatus.Name
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            @* الرابط يشير الآن إلى نفس الكنترولر لضمان العمل *@
                                            <a href="@Url.Action("Details", "RegisteredTrainees", new { id = item.Id })" class="btn btn-sm btn-outline-primary" title="عرض الملف الشخصي">
                                                <i class="bi bi-person-vcard"></i>
                                            </a>

                                            <a href="@Url.Action("PrintIdCard", "RegisteredTrainees", new { id = item.Id })" class="btn btn-sm btn-outline-dark" title="طباعة البطاقة" target="_blank">
                                                <i class="bi bi-person-badge"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="bi bi-search display-4 d-block mb-3 opacity-50"></i>
                                    لا توجد نتائج مطابقة للبحث.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light small text-muted">
            * يتم عرض المتدربين المقيدين والموقوفين فقط في هذا السجل.
        </div>
    </div>
</div>