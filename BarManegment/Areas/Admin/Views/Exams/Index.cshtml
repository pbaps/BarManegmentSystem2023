@model BarManegment.Areas.Admin.ViewModels.ExamIndexViewModel
@{
    ViewBag.Title = "إدارة الامتحانات";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    // إحصائيات سريعة للعرض
    int activeCount = Model.ActiveExams?.Count ?? 0;
    int finishedCount = Model.FinishedExams?.Count ?? 0;
}

@section Styles {
    <style>
        .table-responsive {
            overflow-y: visible !important;
            overflow-x: auto !important;
            min-height: 300px;
        }

        .dropdown-menu {
            z-index: 9999 !important;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .exam-card-header {
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }
    </style>
}

<div class="container-fluid pt-4 px-4">

    <!-- 1. إحصائيات سريعة ورأس الصفحة -->
    <div class="row g-3 mb-4 align-items-center">
        <div class="col-md-6">
            <h4 class="text-primary fw-bold mb-0">
                <i class="bi bi-journal-richtext me-2"></i> @ViewBag.Title
            </h4>
            <p class="text-muted small mb-0 mt-1">إدارة الجداول الزمنية، الأسئلة، ونتائج المتقدمين.</p>
        </div>
        <div class="col-md-6 text-md-end">
            <a href="@Url.Action("Create", "Exams", new { area = "Admin" })" class="btn btn-primary btn-lg shadow-sm rounded-pill px-4">
                <i class="bi bi-plus-lg me-2"></i> امتحان جديد
            </a>
        </div>
    </div>

    <!-- 2. بطاقات الملخص -->
    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm border-start border-4 border-success h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                        <i class="bi bi-play-circle-fill text-success fs-3"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold mb-1">الامتحانات النشطة</h6>
                        <h3 class="mb-0 fw-bold text-dark">@activeCount</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm border-start border-4 border-secondary h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-secondary bg-opacity-10 p-3 me-3">
                        <i class="bi bi-archive-fill text-secondary fs-3"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold mb-1">الأرشيف (المنتهية)</h6>
                        <h3 class="mb-0 fw-bold text-dark">@finishedCount</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 3. شريط البحث -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body bg-light rounded p-4">
            @using (Html.BeginForm("Index", "Exams", FormMethod.Get, new { @class = "row g-2 align-items-center" }))
            {
                <div class="col-md-10">
                    <label class="form-label small text-muted fw-bold">بحث في الامتحانات</label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-white border-end-0 text-primary"><i class="bi bi-search"></i></span>
                        <input class="form-control border-start-0 ps-0" type="search" name="searchString" value="@Model.SearchString" placeholder="ادخل عنوان الامتحان للبحث...">
                    </div>
                </div>
                <div class="col-md-2 align-self-end">
                    <button class="btn btn-primary btn-lg w-100 shadow-sm" type="submit">بحث</button>
                </div>
            }
        </div>
    </div>

    <!-- 4. جدول الامتحانات الفعالة -->
    <div class="card shadow border-0 mb-5">
        <div class="card-header bg-white py-3 exam-card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0 text-success fw-bold">
                    <i class="bi bi-lightning-charge-fill me-2"></i> الفعالة والقادمة
                </h5>
                <span class="badge bg-success bg-opacity-10 text-success rounded-pill">@activeCount امتحان</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light text-secondary text-uppercase small">
                        <tr>
                            <th class="py-3 ps-4">عنوان الامتحان</th>
                            <th class="py-3">النوع</th>
                            <th class="py-3">التوقيت</th>
                            <th class="py-3 text-center">نسبة النجاح</th>
                            <th class="py-3 text-center">المسجلين</th>
                            <th class="py-3 text-center">الحالة</th>
                            <th class="py-3 text-end pe-4">إدارة</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ActiveExams != null && Model.ActiveExams.Any())
                        {
                            foreach (var item in Model.ActiveExams)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <span class="fw-bold text-dark d-block fs-5">@item.Title</span>
                                        @if (item.MinPracticeYears.HasValue || item.RequiredApplicationStatusId.HasValue)
                                        {
                                            <span class="badge bg-info text-dark rounded-pill me-1" title="توجد شروط خاصة للتقدم"><i class="bi bi-exclamation-circle me-1"></i> شروط وظيفية</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge rounded-pill @(item.ExamType.Name.Contains("قبول") ? "bg-info text-dark" : "bg-warning text-dark") border border-opacity-25">
                                            @item.ExamType.Name
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center text-muted">
                                            <i class="bi bi-calendar-event fs-5 me-2 text-primary"></i>
                                            <div>
                                                <span class="d-block fw-bold text-dark">@item.StartTime.ToString("yyyy-MM-dd")</span>
                                                <small>@item.StartTime.ToString("hh:mm tt")</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="fw-bold">@item.PassingPercentage%</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="d-inline-flex align-items-center px-3 py-1 rounded-pill bg-light border">
                                            <i class="bi bi-people-fill me-2 text-secondary"></i>
                                            <span class="fw-bold">@item.Enrollments.Count</span>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        @if (item.IsActive && item.StartTime > DateTime.Now)
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success border border-success px-3 py-2">مفتوح (قادم)</span>
                                        }
                                        else if (item.StartTime <= DateTime.Now && item.EndTime >= DateTime.Now)
                                        {
                                            <span class="badge bg-warning bg-opacity-10 text-dark border border-warning px-3 py-2">
                                                <span class="spinner-grow spinner-grow-sm me-1" role="status" aria-hidden="true"></span> جاري الآن...
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary px-3 py-2">مغلق</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        @Html.Partial("_ExamActionsDropdown", item)
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <div class="py-3">
                                        <i class="bi bi-calendar-x display-4 d-block mb-3 opacity-25"></i>
                                        <p>لا توجد امتحانات نشطة حالياً.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- 5. جدول الأرشيف -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-light py-3 exam-card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0 text-secondary fw-bold">
                    <i class="bi bi-archive me-2"></i> الأرشيف (المنتهية)
                </h5>
                <span class="badge bg-secondary rounded-pill">@finishedCount امتحان</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light text-uppercase small text-muted">
                        <tr>
                            <th class="py-3 ps-4">عنوان الامتحان</th>
                            <th class="py-3">النوع</th>
                            <th class="py-3">تاريخ الانتهاء</th>
                            <th class="py-3 text-center">نسبة النجاح</th>
                            <th class="py-3 text-center">المسجلين</th>
                            <th class="py-3 text-center">الحالة</th>
                            <th class="text-end pe-4">إدارة</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.FinishedExams != null && Model.FinishedExams.Any())
                        {
                            foreach (var item in Model.FinishedExams)
                            {
                                <tr class="text-muted bg-light bg-opacity-25">
                                    <td class="ps-4">
                                        <span class="fw-bold">@item.Title</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-secondary border">@item.ExamType.Name</span>
                                    </td>
                                    <td>
                                        <small><i class="bi bi-calendar-check me-1"></i> @item.EndTime.ToString("yyyy-MM-dd")</small>
                                    </td>
                                    <td class="text-center">
                                        @item.PassingPercentage%
                                    </td>
                                    <td class="text-center">
                                        <span class="small fw-bold">@item.Enrollments.Count</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary bg-opacity-25 text-dark">منتهي</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        @Html.Partial("_ExamActionsDropdown", item)
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4 text-muted small">
                                    الأرشيف فارغ.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>