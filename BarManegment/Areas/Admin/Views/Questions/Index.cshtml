@model BarManegment.Models.Exam
@{ ViewBag.Title = "إدارة أسئلة امتحان: " + Model.Title; }

    <div class="container-fluid pt-4 px-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <p>@Html.ActionLink("إضافة سؤال جديد", "Create", new { examId = Model.Id }, new { @class = "btn btn-primary" })</p>
            <div>
                @Html.ActionLink("العودة إلى الامتحانات", "Index", "Exams", null, new { @class = "btn btn-secondary" })
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {<div class="alert alert-success">@TempData["SuccessMessage"]</div>}
        @if (TempData["ErrorMessage"] != null)
        {<div class="alert alert-danger">@TempData["ErrorMessage"]</div>}

        <!-- === بداية الإضافة: قسم الاستيراد والتصدير === -->
        <div class="card mb-4">
            <div class="card-header"><h5 class="card-title mb-0">استيراد وتصدير الأسئلة</h5></div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <p>يمكنك تحميل نموذج إكسل وتعبئته بالأسئلة ثم استيراده مرة واحدة.</p>
                        @Html.ActionLink("تحميل النموذج", "DownloadTemplate", null, new { @class = "btn btn-outline-info" })
                    </div>
                    <div class="col-md-4">
                        @using (Html.BeginForm("Import", "Questions", new { examId = Model.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="input-group">
                                <input type="file" name="file" class="form-control" required />
                                <button type="submit" class="btn btn-success">استيراد</button>
                            </div>
                        }
                    </div>
                    <div class="col-md-4 text-md-end mt-2 mt-md-0">
                        @Html.ActionLink("تصدير الأسئلة الحالية", "Export", new { examId = Model.Id }, new { @class = "btn btn-outline-secondary" })
                    </div>
                </div>
            </div>
        </div>
        <!-- === نهاية الإضافة === -->

        <div class="card">
            <div class="card-header"><h4>@ViewBag.Title</h4></div>
            <div class="card-body">
                @foreach (var question in Model.Questions.OrderBy(q => q.Id))
                {
                    <div class="mb-3 p-3 border rounded">
                        <div class="d-flex justify-content-between">
                            <strong>@Html.Raw(question.QuestionText) (@question.Points درجة)</strong>
                            <div>
                                @Html.ActionLink("تعديل", "Edit", new { id = question.Id }, new { @class = "btn btn-sm btn-outline-warning" })
                                @Html.ActionLink("حذف", "Delete", new { id = question.Id }, new { @class = "btn btn-sm btn-outline-danger" })
                            </div>
                        </div>
                        <ul>
                            @foreach (var answer in question.Answers)
                            {
                                <li class="@(answer.IsCorrect ? "text-success fw-bold" : "")">@answer.AnswerText</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>