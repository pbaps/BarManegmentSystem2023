@model BarManegment.Models.Question
@{ ViewBag.Title = "تأكيد الحذف"; }

<div class="container-fluid pt-4 px-4">
    <div class="card">
        <div class="card-header"><h4>@ViewBag.Title</h4></div>
        <div class="card-body">
            <p class="lead">هل أنت متأكد من رغبتك في حذف هذا السؤال؟</p>
            <div class="p-3 border bg-light rounded">
                @Html.Raw(Model.QuestionText)
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color mt-3">
                    <input type="submit" value="تأكيد الحذف" class="btn btn-danger" /> |
                    @Html.ActionLink("العودة", "Index", new { examId = Model.ExamId })
                </div>
            }
        </div>
    </div>
</div>
