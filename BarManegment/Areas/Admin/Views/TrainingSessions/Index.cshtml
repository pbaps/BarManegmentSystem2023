@model IEnumerable<BarManegment.Models.TrainingSession>
@{
    ViewBag.Title = "جلسات الدورة: " + (ViewBag.CourseName ?? "");
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="text-primary fw-bold mb-1"><i class="bi bi-calendar-event me-2"></i> @ViewBag.Title</h4>
            <a href="@Url.Action("Index", "TrainingCourses")" class="text-decoration-none text-muted small">
                <i class="bi bi-arrow-right"></i> العودة لقائمة الدورات
            </a>
        </div>
        <a href="@Url.Action("Create", new { courseId = ViewBag.CourseId })" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> إضافة جلسة
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">عنوان الجلسة</th>
                            <th>المحاضر</th>
                            <th>التاريخ والوقت</th>
                            <th>ساعات معتمدة</th>
                            <th class="text-end pe-4">إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@item.SessionTitle</td>
                                <td>@item.InstructorName</td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span>@item.SessionDate.ToString("yyyy-MM-dd")</span>
                                        <small class="text-muted">@item.SessionDate.ToString("hh:mm tt")</small>
                                    </div>
                                </td>
                                <td><span class="badge bg-light text-dark border">@item.CreditHours ساعة</span></td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm">
                                        @* زر رصد الحضور *@
                                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-success fw-bold" title="رصد الحضور">
                                            <i class="bi bi-person-check-fill me-1"></i> الحضور
                                        </a>

                                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-outline-secondary" title="تعديل">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-outline-danger" title="حذف">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">لا توجد جلسات مضافة لهذه الدورة بعد.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>