@model IEnumerable<BarManegment.Models.ContractExemptionReason>
@{
    ViewBag.Title = "إدارة أسباب الإعفاء من الرسوم";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2><i class="bi bi-patch-minus-fill me-2"></i> @ViewBag.Title</h2>
<p>(مثل: حالة إنسانية، مؤسسة شريكة، قرار مجلس...)</p>
<p>
    @Html.ActionLink("إضافة سبب جديد", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Reason)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Reason)</td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-success" })
                </td>
            </tr>
        }
    </tbody>
</table>
