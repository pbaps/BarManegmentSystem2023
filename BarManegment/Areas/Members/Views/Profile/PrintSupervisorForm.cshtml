@model BarManegment.Areas.Members.ViewModels.SupervisorFormViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>نموذج عدم ممانعة من التدريب</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #eee;
        }

        .page {
            width: 21cm;
            min-height: 29.7cm;
            padding: 1.5cm;
            margin: 1cm auto;
            background: white;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .header {
            text-align: center;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
        }

            .header img {
                max-height: 100px;
            }

        .title {
            text-align: center;
            font-weight: bold;
            font-size: 1.5rem;
            margin-top: 1.5rem;
        }

        .photo-placeholder {
            border: 1px dashed #aaa;
            width: 100px;
            height: 120px;
            text-align: center;
            line-height: 120px;
            color: #aaa;
        }

        .data-section p {
            margin-bottom: 8px;
        }

        .data-section .field {
            display: inline-block;
            min-width: 150px;
        }

        .footer-section {
            margin-top: 5rem;
        }

        @@media print {
            body {
                background-color: white;
            }

            .page {
                margin: 0;
                box-shadow: none;
                border: none;
            }

            .no-print {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="page">
        <div class="header">
            <img src="@Url.Content("~/Content/Images/logo.png")" alt="شعار النقابة" />
            <h4 class="mt-2">نقابة المحامين الفلسطينيين - مركز غزة</h4>
        </div>

        <h5 class="title">نموذج (لا مانع) من التدريب</h5>

        <div class="row mt-4 data-section">
            <div class="col-12">
                <h5>بيانات المدرب المشرف (تعبأ من قبل المحامي المشرف)</h5>
                <p><span class="field">الاسم الرباعي:</span> ..............................................................</p>
                <p><span class="field">رقم الهوية:</span> ..............................................................</p>
                <p><span class="field">رقم العضوية:</span> .................... <span class="field">المحافظة:</span> ....................</p>
                <p><span class="field">رقم الجوال:</span> ..............................................................</p>
                <p><span class="field">عنوان المكتب:</span> ..............................................................</p>
            </div>
 
        </div>

        <div class="data-section mt-3">
            <p>
                أقر أنا المحامي/ .....................................................، بأنني محامٍ مزاول ومضى على مزاولتي للمهنة مدة لا تقل عن خمس سنوات،
                وأنه لا مانع لدي من تسجيل الخريج/ة: <strong>@Model.TraineeName</strong>
            </p>
            <p>
                حامل/ة هوية رقم: <strong>@Model.TraineeNationalId</strong>، وخريج/ة جامعة: <strong>@(Model.TraineeUniversity ?? ".........")</strong>
                بتاريخ: <strong>@(Model.TraineeGradYear?.ToString() ?? ".........")</strong>، ورقم جواله: <strong>@(Model.TraineeMobile ?? ".........")</strong>.
            </p>
            <p>
                وذلك ابتداءً من تاريخ: ...... / ...... / ......
            </p>
            <p>
                وأتعهد بأن أقوم بتدريبه/ا والإشراف عليه/ا حسب الأصول والقانون.
            </p>
        </div>

 

        <div class="row footer-section">
            <div class="col-6 text-center">
                <p><strong>توقيع وختم المحامي المشرف</strong></p>
                <br />
                <p>...................................</p>
            </div>
            <div class="col-6 text-center">
                <p><strong>قرار لجنة التدريب</strong></p>
                <br />
                <p>...................................</p>
            </div>
        </div>
    </div>

    <div class="text-center my-4 no-print">
        <button onclick="window.print()" class="btn btn-primary">طباعة النموذج</button>
    </div>
</body>
</html>
