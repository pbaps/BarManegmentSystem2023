@model IEnumerable<BarManegment.Models.Attachment>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered mb-0">
        <thead class="table-light">
            <tr>
                <th>نوع المرفق</th>
                <th>اسم الملف</th>
                <th>تاريخ الرفع</th>
                <th class="text-center" style="width: 130px;">إجراءات</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AttachmentType.Name</td>
                        <td>@item.OriginalFileName</td>
                        <td>@item.UploadDate.ToString("yyyy-MM-dd")</td>
                        <td class="text-center">

                            @* === بداية التصحيح (1): تغيير "Dashboard" إلى "Profile" === *@
                            <a href="@Url.Action("GetAttachmentFile", "Profile", new { area = "Members", id = item.Id })" target="_blank" class="btn btn-info btn-sm" title="فتح الملف">
                                <i class="bi bi-eye-fill"></i>
                            </a>

                            @* === بداية الإضافة: زر التعديل === *@
                            <a href="@Url.Action("EditAttachment", "Profile", new { area = "Members", id = item.Id })" class="btn btn-warning btn-sm" title="تعديل">
                                <i class="bi bi-pencil"></i>
                            </a>
                            @* === نهاية الإضافة === *@

                            @* === بداية التصحيح (2): تغيير "Dashboard" إلى "Profile" === *@
                            @using (Html.BeginForm("DeleteAttachment", "Profile", new { area = "Members", attachmentId = item.Id }, FormMethod.Post, new { @class = "d-inline" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('هل أنت متأكد من رغبتك في حذف هذا المرفق؟');" title="حذف المرفق">
                                    <i class="bi bi-trash"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted py-3">
                        <i class="bi bi-info-circle me-2"></i> لم يتم رفع أي مرفقات بعد.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>