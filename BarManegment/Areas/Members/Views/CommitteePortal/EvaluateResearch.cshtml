@model BarManegment.Areas.Admin.ViewModels.MemberResearchEvaluationViewModel
@{
    ViewBag.Title = "تقييم الأبحاث القانونية";
    Layout = "~/Areas/Members/Views/Shared/_CommitteeLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">@Model.CommitteeName</h4>
            <span class="text-muted">قائمة الأبحاث المعروضة للمناقشة</span>
        </div>
        <a href="@Url.Action("Dashboard")" class="btn btn-outline-secondary">عودة للوحة التحكم</a>
    </div>

    <div class="row g-3">
        @foreach (var item in Model.Researches)
        {
            <div class="col-md-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title fw-bold text-primary mb-0">@item.Title</h5>
                            <span class="badge bg-info text-dark">@item.CurrentStatus</span>
                        </div>
                        <p class="card-text text-muted mb-3">
                            <i class="bi bi-person-fill me-1"></i> الباحث: <strong>@item.TraineeName</strong>
                        </p>

                        <hr>

                        <div class="d-flex gap-2">
                            @* رابط لتحميل البحث - يستخدم أكشن آمن في RegisteredTrainees *@
                            <a href="@Url.Action("GetAttachmentFile", "RegisteredTrainees", new { area = "Admin", id = item.ResearchId })" target="_blank" class="btn btn-outline-dark flex-grow-1">
                                <i class="bi bi-file-earmark-pdf me-1"></i> معاينة الملف
                            </a>

                            @* رابط لصفحة التقييم (يستخدم نفس المتحكم الخاص بالموظف حالياً للتبسيط) *@
                            @* ملاحظة: يمكن إنشاء أكشن خاص للأعضاء إذا تطلب الأمر واجهة مختلفة *@
                            @if (item.CurrentStatus != "مقبول" && item.CurrentStatus != "مكتمل")
                            {
                                <a href="@Url.Action("Details", "LegalResearch", new { area = "Admin", id = item.ResearchId })" class="btn btn-primary flex-grow-1">
                                    <i class="bi bi-pencil-square me-1"></i> تقييم
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-success flex-grow-1 disabled">
                                    <i class="bi bi-check-circle me-1"></i> تم التقييم
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (!Model.Researches.Any())
        {
            <div class="col-12">
                <div class="alert alert-secondary text-center py-5">
                    <i class="bi bi-journal-x fs-1 d-block mb-2 opacity-50"></i>
                    لا توجد أبحاث معينة لهذه اللجنة حالياً.
                </div>
            </div>
        }
    </div>
</div>