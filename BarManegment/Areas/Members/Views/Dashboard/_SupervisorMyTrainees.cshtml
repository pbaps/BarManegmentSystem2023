@model IEnumerable<BarManegment.Areas.Members.ViewModels.MyTraineeViewModel>

@if (Model != null && Model.Any())
{
    <div class="list-group list-group-flush">
        @foreach (var trainee in Model)
        {
            <div class="list-group-item py-3 d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div class="bg-light rounded-circle p-2 me-3 text-secondary">
                        <i class="bi bi-person-badge"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 fw-bold">@trainee.Name</h6>
                        <small class="text-muted">رقم: @trainee.SerialNo | منذ: @trainee.StartDate.ToString("yyyy/MM/dd")</small>
                    </div>
                </div>
                <a href="@Url.Action("ViewTraineeProfile", "Dashboard", new { area = "Members", id = trainee.Id })" class="btn btn-sm btn-outline-primary">
                    عرض السجلات
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-4 text-muted">
        <i class="bi bi-people fs-4 d-block mb-2"></i>
        لا يوجد متدربين تحت إشرافك حالياً.
    </div>
}