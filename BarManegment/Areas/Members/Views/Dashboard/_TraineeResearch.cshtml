@model IEnumerable<BarManegment.Areas.Members.ViewModels.ResearchTaskViewModel>

<div class="card-body p-0">
    @if (!Model.Any())
    {
        <div class="alert alert-info mb-0 text-center">
            لا يوجد أبحاث مطلوبة منك حاليًا.
        </div>
    }
    else
    {
        <table class="table table-hover small mb-0">
            <thead class="table-light">
                <tr>
                    <th>البحث</th>
                    <th>الحالة</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.Title</td>
                        <td><span class="badge bg-secondary">@task.Status</span></td>
                        <td>
                             @Html.ActionLink("تفاصيل", "Details", "Research", new { id = task.Id }, new { @class = "btn btn-outline-primary btn-sm" })  
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
