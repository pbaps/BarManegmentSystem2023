@model IEnumerable<BarManegment.Models.TrainingLog>

<div class="card-body p-0">
    @if (!Model.Any())
    {
        <div class="p-3 text-center text-muted">لم تقم بتقديم أي سجلات بعد.</div>
    }
    else
    {
        <table class="table table-hover small mb-0">
            <thead class="table-light">
                <tr><th>الشهر/السنة</th><th>تاريخ التقديم</th><th>الحالة</th></tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@log.Month / @log.Year</td>
                        <td>@log.SubmissionDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (log.Status == "معتمد")
                            {<span class="badge bg-success">@log.Status</span> }
                        else if (log.Status == "مرفوض")
                        { <span class="badge bg-danger">@log.Status</span> }
                    else
                    { <span class="badge bg-warning text-dark">@log.Status</span>}
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div class="card-footer text-center">
    @Html.ActionLink("عرض كل السجلات", "Index", "TrainingLog", new { area = "Members" }, new { @class = "btn btn-outline-secondary btn-sm" })
</div>