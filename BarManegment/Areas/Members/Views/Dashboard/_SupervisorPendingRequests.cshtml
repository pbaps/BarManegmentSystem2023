@model IEnumerable<BarManegment.Areas.Members.ViewModels.PendingSupervisionRequestViewModel>
@*
    هذا الملف يعرض "بطاقة" بطلبات الإشراف الجديدة التي تنتظر موافقة هذا المحامي
*@

<div class="card-body p-0">
    @if (!Model.Any())
    {
        <div class="p-3 text-center text-muted">
            لا توجد طلبات إشراف بانتظار موافقتك حالياً.
        </div>
    }
    else
    {
        <ul class="list-group list-group-flush">
            @foreach (var request in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0">@request.Name</h6>
                        <small class="text-muted">
                            تاريخ الطلب: @request.SubmissionDate.ToString("yyyy/MM/dd")
                        </small>
                    </div>
                    <div>
                        @* (لاحقاً: سنضيف هنا أزرار الموافقة/الرفض) *@
                        <a href="#" class="btn btn-sm btn-success">موافقة</a>
                        <a href="#" class="btn btn-sm btn-danger">رفض</a>
                    </div>
                </li>
            }
        </ul>
    }
</div>
