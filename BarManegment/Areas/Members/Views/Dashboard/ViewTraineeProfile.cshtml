@model BarManegment.Areas.Admin.ViewModels.TraineeReviewViewModel

@{
    ViewBag.Title = "ملف المتدرب: " + Model.Trainee.ArabicName;
    Layout = "~/Areas/Members/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4 mb-5">

    @* --- زر العودة --- *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="@Url.Action("Index", "Dashboard", new { area = "Members" })" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-right me-1"></i> العودة للوحة التحكم
        </a>
    </div>

    @* --- رسائل التنبيه --- *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-start border-success border-4"><i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"] <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm border-start border-danger border-4"><i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"] <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }

    @* --- بطاقة المتدرب الرئيسية --- *@
    <div class="card border-0 shadow-sm mb-4 bg-white">
        <div class="card-body p-4">
            <div class="d-flex align-items-center">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 me-3">
                    <i class="bi bi-person-vcard fs-1"></i>
                </div>
                <div>
                    <h4 class="fw-bold text-dark mb-1">@Model.Trainee.ArabicName</h4>
                    <p class="text-muted mb-0">
                        <span class="me-3"><i class="bi bi-hash"></i> رقم التسلسل: <strong>@Model.Trainee.TraineeSerialNo</strong></span>
                        <span><i class="bi bi-phone"></i> @(Model.Trainee.ContactInfo?.MobileNumber ?? "---")</span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    @* --- التبويبات (Tabs) --- *@
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom-0 pt-3 px-3">
            <ul class="nav nav-tabs card-header-tabs" id="traineeTabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active fw-bold" id="logs-tab" data-bs-toggle="tab" data-bs-target="#logs" type="button" role="tab"><i class="bi bi-journal-text me-2"></i>سجلات التدريب</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link fw-bold" id="finance-tab" data-bs-toggle="tab" data-bs-target="#finance" type="button" role="tab"><i class="bi bi-receipt me-2"></i>السجل المالي</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link fw-bold" id="research-tab" data-bs-toggle="tab" data-bs-target="#research" type="button" role="tab"><i class="bi bi-book me-2"></i>الأبحاث والامتحانات</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link fw-bold" id="requests-tab" data-bs-toggle="tab" data-bs-target="#requests" type="button" role="tab"><i class="bi bi-inbox me-2"></i>الطلبات الإدارية</button>
                </li>
            </ul>
        </div>

        <div class="card-body p-0">
            <div class="tab-content" id="traineeTabsContent">

                @* 1. تبويب سجلات التدريب *@
                <div class="tab-pane fade show active" id="logs" role="tabpanel">
                    @if (Model.Logs.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4 py-3">الشهر / السنة</th>
                                        <th>تاريخ التقديم</th>
                                        <th>عدد القضايا</th>
                                        <th style="width: 25%;">ملخص الأعمال</th> @* ✅ تمت إعادة العمود *@
                                        <th>المرفق</th>
                                        <th>الحالة</th>
                                        <th class="text-end pe-4">الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Logs)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold text-dark">@item.Month / @item.Year</td>
                                            <td>@item.SubmissionDate.ToString("yyyy/MM/dd")</td>
                                            <td><span class="badge bg-info bg-opacity-10 text-info px-3">@item.CasesCount</span></td>

                                            @* ✅ محتوى ملخص الأعمال (مختصر + كامل) *@
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.WorkSummary))
                                                {
                                                    if (item.WorkSummary.Length > 40)
                                                    {
                                                        <span class="text-muted">
                                                            @item.WorkSummary.Substring(0, 40)...
                                                        </span>
                                                        @* زر لعرض النص الكامل *@
                                                        <a tabindex="0" class="text-primary small text-decoration-none ms-1" role="button" data-bs-toggle="popover" data-bs-trigger="focus" title="ملخص الأعمال الكامل" data-bs-content="@item.WorkSummary">
                                                            (عرض المزيد)
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <span>@item.WorkSummary</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted small">-</span>
                                                }
                                            </td>

                                            <td>
                                                @if (!string.IsNullOrEmpty(item.FilePath))
                                                {
                                                    <a href="@Url.Action("GetTrainingLogAttachment", new { logId = item.Id })" target="_blank" class="btn btn-sm btn-outline-primary px-3">
                                                        <i class="bi bi-file-earmark-pdf me-1"></i> عرض
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted small">لا يوجد</span>
                                                }
                                            </td>

                                            <td>
                                                @if (item.Status.Contains("معتمد") || item.Status == "Approved")
                                                {
                                                    <span class="badge bg-success">معتمد</span>
                                                }
                                                else if (item.Status.Contains("مرفوض") || item.Status == "Rejected")
                                                {
                                                    <span class="badge bg-danger" title="@item.SupervisorNotes">مرفوض</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">بانتظار الموافقة</span>
                                                }
                                            </td>

                                            <td class="text-end pe-4">
                                                @if (item.Status == "بانتظار موافقة المشرف" || item.Status == "Pending")
                                                {
                                                    <div class="btn-group" role="group">
                                                        @using (Html.BeginForm("ApproveLog", "Dashboard", FormMethod.Post, new { style = "display:inline;" }))
                                                        {
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="logId" value="@item.Id" />
                                                            <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('هل أنت متأكد من اعتماد هذا السجل؟')">
                                                                <i class="bi bi-check-lg"></i> اعتماد
                                                            </button>
                                                        }
                                                        <button type="button" class="btn btn-sm btn-danger ms-1" data-bs-toggle="modal" data-bs-target="#rejectModal-@item.Id">
                                                            <i class="bi bi-x-lg"></i> رفض
                                                        </button>
                                                    </div>

                                                    @* Modal الرفض *@
                                                    <div class="modal fade" id="rejectModal-@item.Id" tabindex="-1" aria-hidden="true">
                                                        <div class="modal-dialog modal-dialog-centered">
                                                            <div class="modal-content">
                                                                <form action="@Url.Action("RejectLog", "Dashboard")" method="post">
                                                                    @Html.AntiForgeryToken()
                                                                    <input type="hidden" name="logId" value="@item.Id" />
                                                                    <div class="modal-header bg-danger text-white">
                                                                        <h5 class="modal-title">سبب الرفض</h5>
                                                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                                    </div>
                                                                    <div class="modal-body text-start">
                                                                        <label class="form-label fw-bold">السبب:</label>
                                                                        <textarea name="rejectionReason" class="form-control" rows="3" required placeholder="يرجى كتابة سبب الرفض..."></textarea>
                                                                    </div>
                                                                    <div class="modal-footer bg-light">
                                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                                                                        <button type="submit" class="btn btn-danger">تأكيد الرفض</button>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted small"><i class="bi bi-lock-fill"></i> مقفل</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-journal-x fs-1 d-block mb-2"></i>
                            لم يقم هذا المتدرب برفع أي سجلات تدريب بعد.
                        </div>
                    }
                </div>

                @* 2. تبويب السجل المالي *@
                <div class="tab-pane fade" id="finance" role="tabpanel">
                    @if (Model.Receipts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light text-muted">
                                    <tr>
                                        <th class="ps-4 py-3">رقم الإيصال</th>
                                        <th>تاريخ الدفع</th>
                                        <th>المبلغ</th>
                                        <th>البيان</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var r in Model.Receipts)
                                    {
                                        <tr>
                                            <td class="ps-4 font-monospace">@r.SequenceNumber/@r.Year</td>
                                            <td>@r.BankPaymentDate.ToString("yyyy/MM/dd")</td>
                                            <td class="text-success fw-bold">@r.PaymentVoucher.TotalAmount.ToString("N0")</td>
                                            <td class="text-muted small">@r.Notes</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    { <div class="text-center py-5 text-muted">لا توجد حركات مالية.</div>}
                </div>

                @* 3. تبويب الأبحاث والامتحانات *@
                <div class="tab-pane fade" id="research" role="tabpanel">
                    <div class="row g-0">
                        <div class="col-md-6 border-end">
                            <div class="p-3 bg-light fw-bold border-bottom">الأبحاث القانونية</div>
                            @if (Model.Researches.Any())
                            {
                                <ul class="list-group list-group-flush">
                                    @foreach (var res in Model.Researches)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><i class="bi bi-file-earmark-text me-2"></i> @res.Title</span>
                                            <span class="badge bg-secondary">@res.Status</span>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            { <div class="p-4 text-center text-muted small">لا يوجد أبحاث.</div>}
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light fw-bold border-bottom">سجل الامتحانات</div>
                            @if (Model.Exams.Any())
                            {
                                <ul class="list-group list-group-flush">
                                    @foreach (var ex in Model.Exams)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span>@ex.Exam.Title</span>
                                            @if (!string.IsNullOrEmpty(ex.Result))
                                            {
                                                <span class="badge @(ex.Result=="ناجح"?"bg-success":"bg-danger")">@ex.Result (@ex.Score)</span>
                                            }
                                            else
                                            { <span class="badge bg-warning text-dark">لم تعلن</span>}
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            { <div class="p-4 text-center text-muted small">لم يتقدم لامتحانات بعد.</div>}
                        </div>
                    </div>
                </div>

                @* 4. تبويب الطلبات الإدارية *@
                <div class="tab-pane fade" id="requests" role="tabpanel">
                    @if (Model.Requests.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light text-muted">
                                    <tr>
                                        <th class="ps-4 py-3">نوع الطلب</th>
                                        <th>تاريخ الطلب</th>
                                        <th>الحالة</th>
                                        <th>ملاحظات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var req in Model.Requests)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold">@req.RequestType</td>
                                            <td>@req.RequestDate.ToString("yyyy/MM/dd")</td>
                                            <td><span class="badge bg-info text-dark">@req.Status</span></td>
                                            <td class="text-muted small">@req.Reason</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    { <div class="text-center py-5 text-muted">لا توجد طلبات إدارية.</div>}
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // تفعيل الـ Popovers (ضروري لعرض النص الكامل)
        document.addEventListener("DOMContentLoaded", function () {
            var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
            var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
                return new bootstrap.Popover(popoverTriggerEl)
            });
        });
    </script>
}