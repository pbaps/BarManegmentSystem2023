<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - بوابة لجان النقابة</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar-committee {
            background-color: #1e293b; /* لون داكن مميز */
            color: white;
        }

            .navbar-committee .navbar-brand, .navbar-committee .nav-link {
                color: white !important;
            }

        .main-container {
            min-height: 85vh;
            padding-top: 30px;
        }

        .footer {
            background: #fff;
            border-top: 1px solid #eee;
            padding: 20px 0;
            margin-top: 40px;
            text-align: center;
            color: #777;
        }
    </style>
</head>
<body>

    <!-- شريط علوي مبسط -->
    <nav class="navbar navbar-expand-lg navbar-committee shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="@Url.Action("Dashboard", "CommitteePortal", new { area = "Admin" })">
                <i class="bi bi-gavel me-2"></i> نقابة المحامين - بوابة اللجان
            </a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "CommitteePortal", new { area = "Admin" })">الرئيسية</a>
                    </li>
                </ul>

                <div class="d-flex align-items-center gap-3">
                    <span class="text-white-50 small">مرحباً، @Session["FullName"]</span>

                    <!-- زر العودة لحساب العضو الرئيسي -->
                    <a href="@Url.Action("Index", "Dashboard", new { area = "Members" })" class="btn btn-sm btn-outline-light">
                        <i class="bi bi-person-circle me-1"></i> حسابي الشخصي
                    </a>

                    <!-- زر تسجيل الخروج -->
 



                    <a href="@Url.Action("LogOff", "Account", new { area = "Members" })"
                       class="btn btn-sm btn-danger"
                       title="تسجيل الخروج"
                       onclick="return confirm('هل أنت متأكد أنك تريد تسجيل الخروج؟');">
                        <i class="bi bi-box-arrow-left"></i> خروج
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container main-container">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            &copy; @DateTime.Now.Year - نظام إدارة النقابة - وحدة اللجان والاختبارات
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
