@model BarManegment.Areas.Members.ViewModels.LoanApplicationCreateViewModel

@{
    ViewBag.Title = "تقديم طلب قرض";
    Layout = "~/Areas/Members/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-plus me-2"></i> تقديم طلب قرض جديد</h5>
                </div>
                <div class="card-body p-4">

                    <div class="alert alert-info small mb-4">
                        <i class="bi bi-info-circle-fill me-1"></i>
                        يرجى تعبئة البيانات أدناه بدقة. سيتم عرض الطلب على اللجنة المختصة للموافقة عليه حسب النظام الداخلي.
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                            </div>
                        }

                        <div class="mb-3">
                            @Html.LabelFor(m => m.LoanTypeId, new { @class = "form-label fw-bold" })
                            @Html.DropDownListFor(m => m.LoanTypeId, (SelectList)ViewBag.LoanTypeId, "--- اختر نوع القرض ---", new { @class = "form-select" })
                            @Html.ValidationMessageFor(m => m.LoanTypeId, "", new { @class = "text-danger small" })
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.Amount, new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    @Html.EditorFor(m => m.Amount, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1" } })
                                    <span class="input-group-text">دينار</span>
                                </div>
                                @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.InstallmentCount, new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    @Html.EditorFor(m => m.InstallmentCount, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", max = "60" } })
                                    <span class="input-group-text">شهر</span>
                                </div>
                                @Html.ValidationMessageFor(m => m.InstallmentCount, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="mb-4">
                            @Html.LabelFor(m => m.Notes, new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", rows = "3", placeholder = "أسباب طلب القرض (اختياري)..." })
                        </div>

                        <div class="d-flex justify-content-between align-items-center border-top pt-3">
                            <a href="@Url.Action("Index")" class="btn btn-light border">إلغاء وعودة</a>
                            <button type="submit" class="btn btn-primary px-4 fw-bold">
                                <i class="bi bi-send-fill me-2"></i> إرسال الطلب
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
