@model BarManegment.Models.LoanApplication

@{
    ViewBag.Title = "تفاصيل القرض";
    Layout = "~/Areas/Members/Views/Shared/_Layout.cshtml";

    // حساب المدفوع والمتبقي
    decimal paidAmount = Model.Installments.Where(i => i.Status == "مسدد").Sum(i => i.Amount);
    decimal remainingAmount = Model.Amount - paidAmount;
    int progress = Model.Amount > 0 ? (int)((paidAmount / Model.Amount) * 100) : 0;
}

<div class="container-fluid pt-4 px-4">

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white fw-bold py-3">
                    <i class="bi bi-info-circle me-2"></i> ملخص القرض
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h2 class="text-primary fw-bold">@Model.Amount.ToString("N0")</h2>
                        <span class="text-muted">القيمة الإجمالية</span>
                    </div>

                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item d-flex justify-content-between"><span>النوع:</span> <strong>@Model.LoanType.Name</strong></li>
                        <li class="list-group-item d-flex justify-content-between"><span>الحالة:</span> <span class="badge bg-secondary">@Model.Status</span></li>
                        <li class="list-group-item d-flex justify-content-between"><span>تاريخ الطلب:</span> <span>@Model.ApplicationDate.ToString("yyyy-MM-dd")</span></li>
                        <li class="list-group-item d-flex justify-content-between"><span>عدد الأقساط:</span> <span>@Model.InstallmentCount</span></li>
                    </ul>

                    @if (Model.IsDisbursed)
                    {
                        <div class="mt-3">
                            <div class="d-flex justify-content-between small mb-1">
                                <span>تم سداد: @paidAmount</span>
                                <span>المتبقي: @remainingAmount</span>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: @progress%"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100">
                <i class="bi bi-arrow-right me-1"></i> العودة للقائمة
            </a>
        </div>

        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white fw-bold py-3 d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-calendar-week me-2"></i> جدول الأقساط والسداد</span>
                    @if (!Model.IsDisbursed)
                    {
                        <span class="badge bg-warning text-dark">لم يتم الصرف بعد</span>
                    }
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>تاريخ الاستحقاق</th>
                                    <th>القيمة</th>
                                    <th>الحالة</th>
                                    <th>رقم الإيصال</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Installments != null && Model.Installments.Any())
                                {
                                    foreach (var inst in Model.Installments.OrderBy(i => i.InstallmentNumber))
                                    {
                                        <tr>
                                            <td>@inst.InstallmentNumber</td>
                                            <td>@inst.DueDate.ToString("yyyy-MM-dd")</td>
                                            <td class="fw-bold">@inst.Amount.ToString("N0")</td>
                                            <td>
                                                @if (inst.Status == "مسدد")
                                                {<span class="badge bg-success">مسدد</span> }
                                                else if (inst.DueDate < DateTime.Now && inst.Status != "مسدد")
                                                { <span class="badge bg-danger">متأخر</span> }
                                                else
                                                { <span class="badge bg-light text-dark border">غير مستحق</span>}
                                            </td>
                                            <td class="small font-monospace">
                                                @(inst.Receipt != null ? $"{inst.Receipt.SequenceNumber}/{inst.Receipt.Year}" : "-")
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">
                                            سيتم إنشاء جدول الأقساط عند الموافقة النهائية والصرف.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
