@{
    ViewBag.Title = "تم تغيير كلمة المرور";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - نقابة المحامين</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700;900&display=swap" rel="stylesheet">

    <style>
        :root {
            --overlay-color: rgba(15, 23, 42, 0.92);
            --gold-accent: #c5a059;
            --success-color: #10b981;
            --error-color: #ef4444;
            --text-white: #ffffff;
        }

        body {
            font-family: 'Cairo', sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #0f172a;
            /* خلفية المحكمة */
            background-image: url('https://images.unsplash.com/photo-1567473030492-533b30c5494c?q=80&w=1000&auto=format&fit=crop');
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
        }

        /* طبقة التعتيم */
        .page-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: var(--overlay-color);
            z-index: 1;
        }

        /* بطاقة النتيجة */
        .login-card {
            position: relative;
            z-index: 10;
            background: #1e293b;
            border: 1px solid rgba(255,255,255,0.1);
            width: 100%;
            max-width: 450px;
            padding: 3rem 2rem;
            border-radius: 15px;
            border-top: 5px solid var(--gold-accent);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            text-align: center;
        }

        .logo-container {
            width: 100px;
            height: 100px;
            margin: -80px auto 20px;
            background: #1e293b;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3);
            border: 4px solid var(--gold-accent); /* افتراضي */
        }

        .logo-icon {
            font-size: 3rem;
        }

        .form-title {
            color: white;
            font-weight: 700;
            margin-bottom: 1rem;
            font-size: 1.5rem;
        }

        .message-box {
            color: #cbd5e1;
            font-size: 0.95rem;
            line-height: 1.7;
            margin-bottom: 2rem;
            background: rgba(255,255,255,0.03);
            padding: 20px;
            border-radius: 10px;
            border: 1px dashed rgba(255,255,255,0.1);
        }

        /* زر الدخول */
        .btn-action {
            background: var(--gold-accent);
            color: #0f172a;
            font-weight: 800;
            padding: 12px 30px;
            border: none;
            width: 100%;
            border-radius: 8px;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
        }

            .btn-action:hover {
                background: white;
                color: #0f172a;
                transform: translateY(-2px);
            }

        /* شريط المطور السفلي */
        .dev-credit {
            position: absolute;
            bottom: 20px;
            left: 0;
            right: 0;
            text-align: center;
            z-index: 10;
            color: rgba(255,255,255,0.3);
            font-size: 0.8rem;
        }
    </style>
</head>
<body>

    <div class="page-overlay"></div>

    <div class="login-card">

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="logo-container" style="border-color: var(--error-color);">
                <i class="bi bi-x-lg logo-icon" style="color: var(--error-color);"></i>
            </div>

            <h2 class="form-title text-danger">حدث خطأ!</h2>

            <div class="message-box">
                <p class="mb-0 text-white">@ViewBag.ErrorMessage</p>
                <small class="text-secondary mt-2 d-block">يرجى المحاولة مرة أخرى أو الاتصال بالدعم الفني.</small>
            </div>
        }
        else
        {
            <div class="logo-container" style="border-color: var(--success-color);">
                <i class="bi bi-check-lg logo-icon" style="color: var(--success-color);"></i>
            </div>

            <h2 class="form-title text-white">تم التغيير بنجاح</h2>

            <div class="message-box">
                <p class="mb-0">تم تحديث كلمة المرور الخاصة بك بنجاح.</p>
                <p class="mb-0 text-warning small mt-2">
                    يمكنك الآن استخدام كلمة المرور الجديدة لتسجيل الدخول.
                </p>
            </div>
        }

        <a href="@Url.Action("Login", "Account", new { area = "Members" })" class="btn-action">
            الانتقال لصفحة الدخول <i class="bi bi-box-arrow-in-left fs-5 ms-2"></i>
        </a>

    </div>

    <div class="dev-credit">
        تصميم وبرمجة المهندس محمد العمري | 00972598910120
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>