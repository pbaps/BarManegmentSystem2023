@{
    ViewBag.Title = "تأكيد تسجيل الخروج";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="card">
        <div class="card-header">
            <h4>@ViewBag.Title</h4>
        </div>
        <div class="card-body text-center">
            <p class="lead">هل أنت متأكد من رغبتك في تسجيل الخروج؟</p>
            @using (Html.BeginForm("LogOff", "AdminLogin", new { area = "Admin" }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">نعم، قم بتسجيل الخروج</button>
                @Html.ActionLink("إلغاء", "Index", "Home", new { area = "Admin" }, new { @class = "btn btn-secondary" })
            }
        </div>
    </div>
</div>
