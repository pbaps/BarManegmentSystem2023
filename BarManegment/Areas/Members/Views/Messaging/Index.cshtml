@model IEnumerable<BarManegment.Areas.Members.ViewModels.MessageListItemViewModel>
@{
    // التحقق إذا كانت الصفحة هي صندوق الوارد (بناءً على وجود اسم المرسل في النموذج)
    bool isInbox = Model.FirstOrDefault()?.SenderName != null;
    ViewBag.Title = isInbox ? "صندوق الوارد" : "صندوق الصادر";
    Layout = "~/Areas/Members/Views/Shared/_Layout.cshtml";
}

<h2><i class="bi @(isInbox ? "bi-inbox-fill" : "bi-send-fill") me-2"></i> @ViewBag.Title</h2>

<p>
    @Html.ActionLink("رسالة جديدة", "Compose", null, new { @class = "btn btn-primary" })
    @if (isInbox)
    {
        @Html.ActionLink("عرض صندوق الصادر", "Outbox", null, new { @class = "btn btn-outline-secondary ms-2" })
    }
    else
    {
        @Html.ActionLink("عرض صندوق الوارد", "Inbox", null, new { @class = "btn btn-outline-secondary ms-2" })
    }
</p>
<hr />

<div class="table-responsive">
    <table class="table table-hover table-striped align-middle">
        <thead>
            <tr>
                <th>الحالة</th>
                @if (isInbox)
                {
                    <th><i class="bi bi-person"></i> المرسل</th>
                }
                else
                {
                    <th><i class="bi bi-person"></i> المستقبل</th>
                }
                <th><i class="bi bi-card-text"></i> الموضوع</th>
                <th><i class="bi bi-clock"></i> التاريخ</th>
                <th class="text-center"><i class="bi bi-paperclip"></i></th>
                <th class="text-center"><i class="bi bi-reply-all"></i></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                // تمييز الرسائل غير المقروءة
                <tr class="@(item.IsRead ? "" : "table-info fw-bold")">
                    <td>@(item.IsRead ? "مقروءة" : "جديدة")</td>

                    @if (isInbox)
                    {
                        <td>@Html.DisplayFor(modelItem => item.SenderName)</td>
                    }
                    else
                    {
                        <td>@Html.DisplayFor(modelItem => item.RecipientName)</td>
                    }

                    <td>@Html.ActionLink(item.Subject, "Details", new { id = item.Id })</td>
                    <td>@item.Timestamp.ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="text-center">@(item.HasAttachment ? "📎" : "")</td>
                    <td class="text-center">@item.ReplyCount</td>
                    <td>
                        @Html.ActionLink("عرض", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

