@model IEnumerable<BarManegment.Areas.Members.Controllers.MemberContractViewModel>

@{
    ViewBag.Title = "أرشيف العقود والتصديقات";
    Layout = "~/Areas/Members/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="text-primary fw-bold"><i class="bi bi-pen-fill me-2"></i> أرشيف العقود والتصديقات</h4>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body bg-light rounded">
            @using (Html.BeginForm("Index", "Contracts", FormMethod.Get, new { @class = "row g-3" }))
            {
                <div class="col-md-4">
                    <label class="form-label small fw-bold">بحث عام</label>
                    <input type="text" name="searchTerm" class="form-control" placeholder="رقم المعاملة، اسم الطرف..." value="@Request.QueryString["searchTerm"]">
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold">من تاريخ</label>
                    <input type="date" name="fromDate" class="form-control" value="@Request.QueryString["fromDate"]">
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold">إلى تاريخ</label>
                    <input type="date" name="toDate" class="form-control" value="@Request.QueryString["toDate"]">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search me-1"></i> عرض</button>
                </div>
            }
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>رقم المعاملة</th>
                            <th>التاريخ</th>
                            <th>نوع العقد</th>
                            <th>أطراف العقد</th>
                            <th>قيمة المعاملة</th>
                            <th>حصتك (الشير)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="font-monospace fw-bold">@item.TransactionId</td>
                                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                                    <td><span class="badge bg-light text-dark border">@item.ContractType</span></td>
                                    <td class="small text-truncate" style="max-width: 250px;" title="@item.PartiesNames">
                                        @item.PartiesNames
                                    </td>
                                    <td>@item.TotalAmount.ToString("N0")</td>
                                    <td class="text-success fw-bold">@item.LawyerShare.ToString("N0")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="bi bi-search fs-1 d-block mb-2 opacity-50"></i>
                                    لا توجد معاملات مطابقة للبحث.
                                </td>
                            </tr>
                        }
                    </tbody>
                    @if (Model != null && Model.Any())
                    {
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="5" class="text-end fw-bold">مجموع الحصص في هذه الصفحة:</td>
                                <td class="fw-bold text-success">@Model.Sum(x => x.LawyerShare).ToString("N0")</td>
                            </tr>
                        </tfoot>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
