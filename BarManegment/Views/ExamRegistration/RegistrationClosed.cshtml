@{
    ViewBag.Title = "التسجيل مغلق";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";

    var startDate = ViewBag.StartDate as DateTime?;
    var endDate = ViewBag.EndDate as DateTime?;
}

<div class="row justify-content-center py-5">
    <div class="col-lg-8 text-center">

        <div class="mb-4">
            <span class="bg-danger bg-opacity-10 text-danger p-4 rounded-circle d-inline-block">
                <i class="bi bi-calendar-x-fill" style="font-size: 4rem;"></i>
            </span>
        </div>

        <h2 class="fw-bold text-dark mb-3">عذراً، باب التسجيل مغلق حالياً</h2>

        <p class="lead text-muted mb-5">
            نأسف لعدم تمكنك من تقديم الطلب في الوقت الحالي. يرجى مراجعة فترات التسجيل المعلنة أدناه والمحاولة لاحقاً في الموعد المحدد.
        </p>

        @if (startDate != null && endDate != null)
        {
            <div class="card border-0 shadow-sm bg-light mb-5">
                <div class="card-body p-4">
                    <h5 class="fw-bold text-primary mb-3">فترة التسجيل المعتمدة لهذه الدورة</h5>
                    <div class="d-flex justify-content-center gap-4 flex-wrap">
                        <div class="d-flex align-items-center bg-white px-4 py-2 rounded border">
                            <i class="bi bi-hourglass-top text-success fs-4 me-2"></i>
                            <div class="text-start">
                                <small class="d-block text-muted" style="font-size: 0.75rem;">يبدأ التسجيل</small>
                                <span class="fw-bold dir-ltr">@startDate.Value.ToString("yyyy/MM/dd")</span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center bg-white px-4 py-2 rounded border">
                            <i class="bi bi-hourglass-bottom text-danger fs-4 me-2"></i>
                            <div class="text-start">
                                <small class="d-block text-muted" style="font-size: 0.75rem;">ينتهي التسجيل</small>
                                <span class="fw-bold dir-ltr">@endDate.Value.ToString("yyyy/MM/dd")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <a href="https://palba.ps" class="btn btn-outline-secondary px-4">
            <i class="bi bi-box-arrow-right me-2"></i> الانتقال لموقع النقابة الرسمي
        </a>
    </div>
</div>